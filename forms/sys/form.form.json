{
  "name": "::Form",
  "action": {
    "bind": {
      "option": {
        "withs": {
          "model": {},
          "table": {}
        }
      },
      "model": "sys.form"
    }
  },
  "layout": {
    "form": {
      "props": {},
      "sections": [
        {
          "columns": [
            {
              "name": "名称",
              "width": 8
            },
            {
              "name": "主键",
              "width": 8
            },
            {
              "name": "关联模型",
              "width": 8
            },
            {
              "name": "关联表格",
              "width": 8
            },
            {
              "width": 8,
              "name": "备注"
            },
            {
              "width": 24,
              "name": "绑定选项"
            },
            {
              "name": "描述",
              "width": 24
            }
          ]
        },
        {
          "columns": [
            {
              "width": 24,
              "name": "表格fields"
            }
          ]
        }
      ]
    },
    "primary": "id",
    "actions": [
      {
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "type": "Studio.model",
            "payload": {
              "method": "CreateOne",
              "args": [
                "sys.form"
              ]
            },
            "name": "StudioModel"
          },
          {
            "name": "Confirm",
            "type": "Common.confirm",
            "payload": {
              "title": "提示",
              "content": "处理完成"
            }
          }
        ],
        "title": "重新生成代码",
        "icon": "icon-layers"
      },
      {
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "name": "CloseModal",
            "type": "Common.closeModal",
            "payload": {}
          }
        ],
        "title": "返回",
        "icon": "icon-arrow-left"
      },
      {
        "title": "保存",
        "icon": "icon-check",
        "style": "primary",
        "showWhenAdd": true,
        "action": [
          {
            "type": "Form.submit",
            "payload": {},
            "name": "Submit"
          },
          {
            "name": "Back",
            "type": "Common.closeModal",
            "payload": {}
          }
        ]
      },
      {
        "title": "Delete",
        "action": [
          {
            "name": "Confirm",
            "type": "Common.confirm",
            "payload": {
              "title": "提示",
              "content": "确认删除，删除后数据无法恢复？"
            }
          },
          {
            "name": "Delete",
            "payload": {
              "model": "sys.form"
            },
            "type": "Form.delete"
          },
          {
            "payload": {},
            "name": "Back",
            "type": "Common.closeModal"
          }
        ],
        "icon": "icon-trash-2",
        "style": "danger"
      }
    ]
  },
  "fields": {
    "form": {
      "备注": {
        "bind": "comment",
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "表注释",
              "rules": [
                {
                  "required": true
                }
              ]
            }
          },
          "type": "Input"
        }
      },
      "绑定选项": {
        "edit": {
          "props": {
            "height": 200,
            "language": "json",
            "itemProps": {
              "tooltip": "绑定模型选项",
              "rules": [
                {
                  "required": true
                }
              ]
            }
          },
          "type": "CodeEditor"
        },
        "bind": "bind_option"
      },
      "描述": {
        "bind": "description",
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "介绍"
            }
          },
          "type": "TextArea"
        }
      },
      "名称": {
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ]
            }
          }
        },
        "bind": "name"
      },
      "主键": {
        "bind": "primary",
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "显示主键"
            },
            "defaultValue": "id"
          },
          "type": "Input"
        }
      },
      "表格fields": {
        "bind": "id",
        "edit": {
          "type": "Table",
          "props": {
            "model": "sys.form.field",
            "query": {
              "where.form_id.eq": "{{id}}"
            }
          }
        }
      },
      "关联模型": {
        "bind": "model_id",
        "edit": {
          "type": "Select",
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "model": "sys.model",
                  "label": "name",
                  "value": "id"
                }
              }
            },
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "表单关联的模型"
            }
          }
        }
      },
      "关联表格": {
        "edit": {
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "value": "id",
                  "model": "sys.table",
                  "label": "name"
                }
              }
            },
            "itemProps": {
              "tooltip": "表单关联的表格"
            }
          },
          "type": "Select"
        },
        "bind": "table_id"
      }
    }
  }
}