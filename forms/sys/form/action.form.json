{
  "layout": {
    "actions": [
      {
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "payload": {
              "args": [
                "sys.form.action"
              ],
              "method": "CreateOne"
            },
            "name": "StudioModel",
            "type": "Studio.model"
          },
          {
            "type": "Common.confirm",
            "payload": {
              "title": "提示",
              "content": "处理完成"
            },
            "name": "Confirm"
          }
        ],
        "title": "重新生成代码",
        "icon": "icon-layers"
      },
      {
        "showWhenView": true,
        "action": [
          {
            "type": "Common.closeModal",
            "payload": {},
            "name": "CloseModal"
          }
        ],
        "title": "返回",
        "icon": "icon-arrow-left",
        "showWhenAdd": true
      },
      {
        "title": "保存",
        "icon": "icon-check",
        "style": "primary",
        "showWhenAdd": true,
        "action": [
          {
            "payload": {},
            "name": "Submit",
            "type": "Form.submit"
          },
          {
            "name": "Back",
            "type": "Common.closeModal",
            "payload": {}
          }
        ]
      },
      {
        "icon": "icon-trash-2",
        "style": "danger",
        "title": "Delete",
        "action": [
          {
            "name": "Confirm",
            "type": "Common.confirm",
            "payload": {
              "content": "确认删除，删除后数据无法恢复？",
              "title": "提示"
            }
          },
          {
            "name": "Delete",
            "payload": {
              "model": "sys.form.action"
            },
            "type": "Form.delete"
          },
          {
            "name": "Back",
            "type": "Common.closeModal",
            "payload": {}
          }
        ]
      }
    ],
    "form": {
      "props": {},
      "sections": [
        {
          "columns": [
            {
              "name": "所属表单",
              "width": 8
            },
            {
              "name": "标题",
              "width": 8
            },
            {
              "name": "图标",
              "width": 24
            },
            {
              "width": 8,
              "name": "样式"
            },
            {
              "name": "修改时显示",
              "width": 8
            },
            {
              "width": 8,
              "name": "查看时显示"
            },
            {
              "name": "操作",
              "width": 24
            }
          ]
        }
      ]
    },
    "primary": "id"
  },
  "fields": {
    "form": {
      "图标": {
        "bind": "icon",
        "view": {
          "props": {},
          "type": "Image",
          "compute": "scripts.file.image.ImagesView"
        },
        "edit": {
          "type": "Upload",
          "compute": {
            "process": "scripts.file.image.ImagesEdit",
            "args": [
              "$C(row)",
              "$C(type)",
              "icon",
              "sys_form_action"
            ]
          },
          "props": {
            "$api": {
              "process": "fs.system.Upload"
            },
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "图标"
            },
            "filetype": "image"
          }
        }
      },
      "样式": {
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "tooltip": "按钮样式",
              "rules": [
                {
                  "required": true
                }
              ]
            }
          }
        },
        "bind": "style"
      },
      "修改时显示": {
        "edit": {
          "type": "RadioGroup",
          "props": {
            "defaultValue": 1,
            "options": [
              {
                "label": "是",
                "value": 1
              },
              {
                "value": 0,
                "label": "否"
              }
            ],
            "itemProps": {
              "tooltip": "表单修改数据时显示"
            }
          }
        },
        "bind": "showWhenAdd"
      },
      "查看时显示": {
        "edit": {
          "type": "RadioGroup",
          "props": {
            "defaultValue": 1,
            "options": [
              {
                "label": "是",
                "value": 1
              },
              {
                "value": 0,
                "label": "否"
              }
            ],
            "itemProps": {
              "tooltip": "表单修改数据时显示"
            }
          }
        },
        "bind": "showWhenView"
      },
      "操作": {
        "bind": "action",
        "edit": {
          "type": "CodeEditor",
          "props": {
            "height": 200,
            "language": "json",
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "Action列表"
            }
          }
        }
      },
      "所属表单": {
        "bind": "form_id",
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "字段所属的表单"
            },
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "model": "sys.form",
                  "label": "name",
                  "value": "id"
                }
              }
            }
          },
          "type": "Select"
        }
      },
      "标题": {
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "标题"
            }
          },
          "type": "Input"
        },
        "bind": "title"
      }
    }
  },
  "name": "::Form Action",
  "action": {
    "bind": {
      "model": "sys.form.action",
      "option": {
        "withs": {
          "form": {}
        }
      }
    }
  }
}