{
  "layout": {
    "form": {
      "props": {},
      "sections": [
        {
          "columns": [
            {
              "width": 8,
              "name": "名称"
            },
            {
              "name": "表单",
              "width": 8
            },
            {
              "name": "模型",
              "width": 8
            },
            {
              "name": "备注",
              "width": 8
            },
            {
              "width": 24,
              "name": "描述"
            }
          ]
        },
        {
          "columns": [
            {
              "width": 24,
              "name": "表格fields"
            }
          ]
        }
      ]
    },
    "primary": "id",
    "actions": [
      {
        "action": [
          {
            "name": "StudioModel",
            "type": "Studio.model",
            "payload": {
              "method": "CreateOne",
              "args": [
                "sys.table"
              ]
            }
          },
          {
            "name": "Confirm",
            "type": "Common.confirm",
            "payload": {
              "title": "提示",
              "content": "处理完成"
            }
          }
        ],
        "title": "重新生成代码",
        "icon": "icon-layers",
        "showWhenAdd": true,
        "showWhenView": true
      },
      {
        "title": "返回",
        "icon": "icon-arrow-left",
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "name": "CloseModal",
            "type": "Common.closeModal",
            "payload": {}
          }
        ]
      },
      {
        "style": "primary",
        "showWhenAdd": true,
        "action": [
          {
            "payload": {},
            "name": "Submit",
            "type": "Form.submit"
          },
          {
            "name": "Back",
            "type": "Common.closeModal",
            "payload": {}
          }
        ],
        "title": "保存",
        "icon": "icon-check"
      },
      {
        "icon": "icon-trash-2",
        "style": "danger",
        "title": "Delete",
        "action": [
          {
            "name": "Confirm",
            "type": "Common.confirm",
            "payload": {
              "content": "确认删除，删除后数据无法恢复？",
              "title": "提示"
            }
          },
          {
            "name": "Delete",
            "payload": {
              "model": "sys.table"
            },
            "type": "Form.delete"
          },
          {
            "payload": {},
            "name": "Back",
            "type": "Common.closeModal"
          }
        ]
      }
    ]
  },
  "fields": {
    "form": {
      "名称": {
        "bind": "name",
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ]
            }
          },
          "type": "Input"
        }
      },
      "表单": {
        "bind": "form_id",
        "edit": {
          "type": "Select",
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "model": "sys.form",
                  "label": "name",
                  "value": "id"
                }
              }
            },
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "表关联的表单"
            }
          }
        }
      },
      "模型": {
        "bind": "model_id",
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "表关联的模型"
            },
            "xProps": {
              "$remote": {
                "query": {
                  "model": "sys.model",
                  "label": "name",
                  "value": "id"
                },
                "process": "yao.component.SelectOptions"
              }
            }
          },
          "type": "Select"
        }
      },
      "表格fields": {
        "bind": "id",
        "edit": {
          "type": "Table",
          "props": {
            "model": "sys.table.field",
            "query": {
              "where.table_id.eq": "{{id}}"
            }
          }
        }
      },
      "备注": {
        "bind": "comment",
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "表注释"
            }
          },
          "type": "Input"
        }
      },
      "描述": {
        "bind": "description",
        "edit": {
          "type": "TextArea",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "介绍"
            }
          }
        }
      }
    }
  },
  "name": "::Table",
  "action": {
    "bind": {
      "option": {
        "withs": {
          "form": {},
          "model": {}
        }
      },
      "model": "sys.table"
    }
  }
}