{
  "fields": {
    "form": {
      "名称": {
        "bind": "name",
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ]
            }
          },
          "type": "Input"
        }
      },
      "备注": {
        "bind": "comment",
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "对应数据表中字段注释"
            }
          },
          "type": "Input"
        }
      },
      "描述": {
        "edit": {
          "type": "TextArea",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "介绍"
            }
          }
        },
        "bind": "description"
      },
      "表格fields": {
        "bind": "id",
        "edit": {
          "type": "Table",
          "props": {
            "model": "sys.model.field",
            "query": {
              "where.model_id.eq": "{{id}}"
            }
          }
        }
      }
    }
  },
  "name": "::Model",
  "action": {
    "bind": {
      "model": "sys.model",
      "option": {
        "withs": {}
      }
    }
  },
  "layout": {
    "actions": [
      {
        "action": [
          {
            "payload": {
              "method": "CreateOne",
              "args": [
                "sys.model"
              ]
            },
            "name": "StudioModel",
            "type": "Studio.model"
          },
          {
            "name": "Confirm",
            "type": "Common.confirm",
            "payload": {
              "title": "提示",
              "content": "处理完成"
            }
          }
        ],
        "title": "重新生成代码",
        "icon": "icon-layers",
        "showWhenAdd": true,
        "showWhenView": true
      },
      {
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "name": "CloseModal",
            "type": "Common.closeModal",
            "payload": {}
          }
        ],
        "title": "返回",
        "icon": "icon-arrow-left"
      },
      {
        "title": "保存",
        "icon": "icon-check",
        "style": "primary",
        "showWhenAdd": true,
        "action": [
          {
            "name": "Submit",
            "type": "Form.submit",
            "payload": {}
          },
          {
            "payload": {},
            "name": "Back",
            "type": "Common.closeModal"
          }
        ]
      },
      {
        "action": [
          {
            "payload": {
              "title": "提示",
              "content": "确认删除，删除后数据无法恢复？"
            },
            "name": "Confirm",
            "type": "Common.confirm"
          },
          {
            "name": "Delete",
            "payload": {
              "model": "sys.model"
            },
            "type": "Form.delete"
          },
          {
            "name": "Back",
            "type": "Common.closeModal",
            "payload": {}
          }
        ],
        "icon": "icon-trash-2",
        "style": "danger",
        "title": "Delete"
      }
    ],
    "form": {
      "props": {},
      "sections": [
        {
          "columns": [
            {
              "width": 8,
              "name": "名称"
            },
            {
              "name": "备注",
              "width": 8
            },
            {
              "name": "描述",
              "width": 24
            }
          ]
        },
        {
          "columns": [
            {
              "name": "表格fields",
              "width": 24
            }
          ]
        }
      ]
    },
    "primary": "id"
  }
}