{
  "name": "要素_详细信息",
  "action": {
    "bind": {
      "model": "sys.element",
      "option": {
        "withs": {
          "sys_domain": {}
        }
      }
    }
  },
  "layout": {
    "primary": "id",
    "actions": [
      {
        "action": [
          {
            "payload": {
              "method": "CreateOne",
              "args": [
                "sys.element"
              ]
            },
            "name": "StudioModel",
            "type": "Studio.model"
          },
          {
            "type": "Common.confirm",
            "payload": {
              "content": "处理完成",
              "title": "提示"
            },
            "name": "Confirm"
          }
        ],
        "title": "重新生成代码",
        "icon": "icon-layers",
        "showWhenAdd": true,
        "showWhenView": true
      },
      {
        "title": "返回",
        "icon": "icon-arrow-left",
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "name": "CloseModal",
            "type": "Common.closeModal",
            "payload": {}
          }
        ]
      },
      {
        "icon": "icon-check",
        "style": "primary",
        "showWhenAdd": true,
        "action": [
          {
            "type": "Form.submit",
            "payload": {},
            "name": "Submit"
          },
          {
            "name": "Back",
            "type": "Common.closeModal",
            "payload": {}
          }
        ],
        "title": "保存"
      },
      {
        "title": "Delete",
        "action": [
          {
            "payload": {
              "title": "提示",
              "content": "确认删除，删除后数据无法恢复？"
            },
            "name": "Confirm",
            "type": "Common.confirm"
          },
          {
            "payload": {
              "model": "sys.element"
            },
            "type": "Form.delete",
            "name": "Delete"
          },
          {
            "payload": {},
            "name": "Back",
            "type": "Common.closeModal"
          }
        ],
        "icon": "icon-trash-2",
        "style": "danger"
      }
    ],
    "form": {
      "props": {},
      "sections": [
        {
          "columns": [
            {
              "name": "字段所属的表",
              "width": 8
            },
            {
              "name": "name",
              "width": 8
            },
            {
              "name": "字段标题",
              "width": 8
            },
            {
              "width": 8,
              "name": "字段介绍"
            },
            {
              "name": "字段注释",
              "width": 8
            },
            {
              "name": "字段长度",
              "width": 8
            },
            {
              "width": 8,
              "name": "字段位数(含小数位)"
            },
            {
              "name": "字段小数位位数",
              "width": 8
            },
            {
              "name": "字段是否可以为空",
              "width": 8
            },
            {
              "width": 8,
              "name": "string|number|float|字段默认值"
            },
            {
              "name": "字段加密存储方式",
              "width": 8
            }
          ]
        },
        {
          "columns": [
            {
              "width": 24,
              "name": "表格系统桌子领域"
            }
          ]
        }
      ]
    }
  },
  "fields": {
    "form": {
      "name": {
        "edit": {
          "props": {},
          "type": "Input"
        },
        "bind": "name"
      },
      "表格系统桌子领域": {
        "bind": "id",
        "edit": {
          "props": {
            "model": "sys.table.field",
            "query": {
              "where.element_id.eq": "{{id}}"
            }
          },
          "type": "Table"
        }
      },
      "字段长度": {
        "bind": "length",
        "edit": {
          "props": {},
          "type": "Input"
        }
      },
      "字段是否可以为空": {
        "edit": {
          "type": "Input",
          "props": {}
        },
        "bind": "nullable"
      },
      "字段标题": {
        "bind": "title",
        "edit": {
          "type": "Input",
          "props": {}
        }
      },
      "字段所属的表": {
        "bind": "domain_id",
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "type": "Select",
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "model": "sys.domain",
                  "label": "name",
                  "value": "id"
                }
              }
            }
          }
        }
      },
      "字段位数(含小数位)": {
        "edit": {
          "type": "Input",
          "props": {}
        },
        "bind": "precision"
      },
      "字段小数位位数": {
        "edit": {
          "type": "Input",
          "props": {}
        },
        "bind": "scale"
      },
      "字段加密存储方式": {
        "edit": {
          "props": {},
          "type": "Input"
        },
        "bind": "crypt"
      },
      "string|number|float|字段默认值": {
        "edit": {
          "type": "Input",
          "props": {}
        },
        "bind": "default"
      },
      "字段介绍": {
        "edit": {
          "type": "Input",
          "props": {}
        },
        "bind": "description"
      },
      "字段注释": {
        "bind": "comment",
        "edit": {
          "type": "TextArea",
          "props": {}
        }
      }
    }
  }
}