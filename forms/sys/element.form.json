{
  "fields": {
    "form": {
      "字段介绍": {
        "bind": "description",
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "字段介绍"
            }
          }
        }
      },
      "字段小数位位数": {
        "bind": "scale",
        "edit": {
          "type": "InputNumber",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "字段小数位位数，对 `float`、`decimal` 等类型字段有效"
            }
          }
        }
      },
      "字段默认值": {
        "bind": "default",
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "string|number|float|字段默认值"
            }
          },
          "type": "Input"
        }
      },
      "字段长度": {
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "字段长度，对 `string` 等类型字段有效",
              "rules": [
                {
                  "required": true
                }
              ]
            }
          },
          "type": "InputNumber"
        },
        "bind": "length"
      },
      "字段注释": {
        "bind": "comment",
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "字段注释",
              "rules": [
                {
                  "required": true
                }
              ]
            }
          },
          "type": "TextArea"
        }
      },
      "字段校验规则": {
        "bind": "validations",
        "edit": {
          "props": {
            "language": "json",
            "itemProps": {
              "tooltip": "字段校验规则",
              "rules": [
                {
                  "required": true
                }
              ]
            },
            "height": 200
          },
          "type": "CodeEditor"
        }
      },
      "域": {
        "bind": "domain_id",
        "edit": {
          "type": "Select",
          "props": {
            "xProps": {
              "$remote": {
                "query": {
                  "value": "id",
                  "model": "sys.domain",
                  "label": "name"
                },
                "process": "yao.component.SelectOptions"
              }
            },
            "itemProps": {
              "tooltip": "域定义"
            },
            "defaultValue": 0
          }
        }
      },
      "字段标题": {
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "字段标题",
              "rules": [
                {
                  "required": true
                }
              ]
            }
          },
          "type": "Input"
        },
        "bind": "title"
      },
      "加密方式": {
        "bind": "crypt",
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "字段加密存储方式。许可值 `AES(MySQL Only)`, `PASSWORD`"
            },
            "options": [
              {
                "value": "PASSWORD",
                "label": "::PASSWORD"
              },
              {
                "label": "::AES",
                "value": "AES"
              }
            ],
            "placeholder": "请选择加密方式"
          },
          "type": "Select"
        }
      },
      "字段许可值": {
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "字段许可值，对 `enum` 类型字段有效"
            },
            "height": 200,
            "language": "json"
          },
          "type": "CodeEditor"
        },
        "bind": "option"
      },
      "名称": {
        "bind": "name",
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ]
            }
          },
          "type": "Input"
        }
      },
      "字段位数(含小数位)": {
        "bind": "precision",
        "edit": {
          "type": "InputNumber",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "字段位数(含小数位)，对 `float`、`decimal` 等类型字段有效"
            }
          }
        }
      },
      "是否为空": {
        "bind": "nullable",
        "edit": {
          "props": {
            "defaultValue": 0,
            "options": [
              {
                "label": "是",
                "value": 1
              },
              {
                "label": "否",
                "value": 0
              }
            ],
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "字段是否可以为空，默认为 false"
            }
          },
          "type": "RadioGroup"
        }
      }
    }
  },
  "name": "::Data Element",
  "action": {
    "bind": {
      "option": {
        "withs": {
          "domain": {}
        }
      },
      "model": "sys.element"
    }
  },
  "layout": {
    "form": {
      "props": {},
      "sections": [
        {
          "columns": [
            {
              "name": "域",
              "width": 8
            },
            {
              "name": "名称",
              "width": 8
            },
            {
              "name": "字段标题",
              "width": 8
            },
            {
              "name": "字段介绍",
              "width": 8
            },
            {
              "name": "字段长度",
              "width": 8
            },
            {
              "name": "字段位数(含小数位)",
              "width": 8
            },
            {
              "name": "字段小数位位数",
              "width": 8
            },
            {
              "name": "是否为空",
              "width": 8
            },
            {
              "width": 8,
              "name": "字段默认值"
            },
            {
              "name": "加密方式",
              "width": 8
            },
            {
              "width": 24,
              "name": "字段注释"
            },
            {
              "width": 24,
              "name": "字段许可值"
            },
            {
              "width": 24,
              "name": "字段校验规则"
            }
          ]
        }
      ]
    },
    "primary": "id",
    "actions": [
      {
        "action": [
          {
            "payload": {
              "method": "CreateOne",
              "args": [
                "sys.element"
              ]
            },
            "name": "StudioModel",
            "type": "Studio.model"
          },
          {
            "name": "Confirm",
            "type": "Common.confirm",
            "payload": {
              "content": "处理完成",
              "title": "提示"
            }
          }
        ],
        "title": "重新生成代码",
        "icon": "icon-layers",
        "showWhenAdd": true,
        "showWhenView": true
      },
      {
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "name": "CloseModal",
            "type": "Common.closeModal",
            "payload": {}
          }
        ],
        "title": "返回",
        "icon": "icon-arrow-left"
      },
      {
        "action": [
          {
            "payload": {},
            "name": "Submit",
            "type": "Form.submit"
          },
          {
            "name": "Back",
            "type": "Common.closeModal",
            "payload": {}
          }
        ],
        "title": "保存",
        "icon": "icon-check",
        "style": "primary",
        "showWhenAdd": true
      },
      {
        "style": "danger",
        "title": "Delete",
        "action": [
          {
            "payload": {
              "title": "提示",
              "content": "确认删除，删除后数据无法恢复？"
            },
            "name": "Confirm",
            "type": "Common.confirm"
          },
          {
            "payload": {
              "model": "sys.element"
            },
            "type": "Form.delete",
            "name": "Delete"
          },
          {
            "name": "Back",
            "type": "Common.closeModal",
            "payload": {}
          }
        ],
        "icon": "icon-trash-2"
      }
    ]
  }
}