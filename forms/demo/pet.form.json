{
  "action": {
    "bind": {
      "model": "demo.pet",
      "option": {
        "withs": {}
      }
    }
  },
  "layout": {
    "actions": [
      {
        "showWhenView": true,
        "action": [
          {
            "type": "Studio.model",
            "payload": {
              "args": [
                "demo.pet"
              ],
              "method": "CreateOne"
            },
            "name": "StudioModel"
          },
          {
            "name": "Confirm",
            "type": "Common.confirm",
            "payload": {
              "title": "提示",
              "content": "处理完成"
            }
          }
        ],
        "title": "重新生成代码",
        "icon": "icon-layers",
        "showWhenAdd": true
      },
      {
        "action": [
          {
            "name": "CloseModal",
            "type": "Common.closeModal",
            "payload": {}
          }
        ],
        "title": "返回",
        "icon": "icon-arrow-left",
        "showWhenAdd": true,
        "showWhenView": true
      },
      {
        "action": [
          {
            "name": "Submit",
            "type": "Form.submit",
            "payload": {}
          },
          {
            "name": "Back",
            "type": "Common.closeModal",
            "payload": {}
          }
        ],
        "title": "保存",
        "icon": "icon-check",
        "style": "primary",
        "showWhenAdd": true
      },
      {
        "action": [
          {
            "type": "Common.confirm",
            "payload": {
              "content": "确认删除，删除后数据无法恢复？",
              "title": "提示"
            },
            "name": "Confirm"
          },
          {
            "name": "Delete",
            "payload": {
              "model": "demo.pet"
            },
            "type": "Form.delete"
          },
          {
            "payload": {},
            "name": "Back",
            "type": "Common.closeModal"
          }
        ],
        "icon": "icon-trash-2",
        "style": "danger",
        "title": "Delete"
      }
    ],
    "form": {
      "sections": [
        {
          "columns": [
            {
              "width": 8,
              "name": "昵称"
            },
            {
              "name": "类型",
              "width": 8
            },
            {
              "width": 8,
              "name": "入院状态"
            },
            {
              "width": 8,
              "name": "状态"
            },
            {
              "width": 8,
              "name": "是否在线"
            },
            {
              "width": 8,
              "name": "治疗状态"
            },
            {
              "name": "入院时间",
              "width": 8
            },
            {
              "name": "花费",
              "width": 8
            },
            {
              "width": 24,
              "name": "相关图片"
            }
          ]
        }
      ],
      "props": {}
    },
    "primary": "id"
  },
  "fields": {
    "form": {
      "类型": {
        "bind": "type",
        "edit": {
          "props": {
            "options": [
              {
                "label": "::cat",
                "value": "cat"
              },
              {
                "label": "::dog",
                "value": "dog"
              },
              {
                "label": "::others",
                "value": "others"
              }
            ],
            "placeholder": "请选择类型",
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ]
            }
          },
          "type": "Select"
        }
      },
      "治疗状态": {
        "edit": {
          "props": {
            "options": [
              {
                "label": "::0",
                "value": "0"
              },
              {
                "label": "::1",
                "value": "1"
              },
              {
                "label": "::2",
                "value": "2"
              }
            ],
            "defaultValue": "0",
            "placeholder": "请选择治疗状态"
          },
          "type": "Select"
        },
        "bind": "curing_status"
      },
      "入院状态": {
        "bind": "status",
        "edit": {
          "props": {
            "options": [
              {
                "value": "checked",
                "label": "::checked"
              },
              {
                "value": "curing",
                "label": "::curing"
              },
              {
                "label": "::cured",
                "value": "cured"
              }
            ],
            "placeholder": "请选择入院状态",
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ]
            }
          },
          "type": "Select"
        }
      },
      "花费": {
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ]
            }
          },
          "type": "InputNumber"
        },
        "bind": "cost"
      },
      "入院时间": {
        "edit": {
          "type": "InputNumber",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ]
            }
          }
        },
        "bind": "stay"
      },
      "昵称": {
        "edit": {
          "type": "Input",
          "props": {}
        },
        "bind": "name"
      },
      "状态": {
        "edit": {
          "type": "Select",
          "props": {
            "options": [
              {
                "value": "enabled",
                "label": "::enabled"
              },
              {
                "value": "disabled",
                "label": "::disabled"
              }
            ],
            "placeholder": "请选择状态",
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ]
            }
          }
        },
        "bind": "mode"
      },
      "是否在线": {
        "bind": "online",
        "edit": {
          "type": "RadioGroup",
          "props": {
            "options": [
              {
                "label": "是",
                "value": 1
              },
              {
                "value": 0,
                "label": "否"
              }
            ],
            "defaultValue": 0
          }
        }
      },
      "相关图片": {
        "bind": "images",
        "view": {
          "compute": "scripts.file.image.ImagesView",
          "props": {},
          "type": "Image"
        },
        "edit": {
          "type": "Upload",
          "compute": {
            "process": "scripts.file.image.ImagesEdit",
            "args": [
              "$C(row)",
              "$C(type)",
              "images",
              "demo_pet"
            ]
          },
          "props": {
            "filetype": "image",
            "$api": {
              "process": "fs.system.Upload"
            }
          }
        }
      }
    }
  },
  "name": "::Pet"
}