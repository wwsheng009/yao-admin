{
  "fields": {
    "form": {
      "入院状态": {
        "edit": {
          "props": {
            "placeholder": "请选择入院状态",
            "options": [
              {
                "label": "::checked",
                "value": "checked"
              },
              {
                "label": "::curing",
                "value": "curing"
              },
              {
                "label": "::cured",
                "value": "cured"
              }
            ],
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ]
            }
          },
          "type": "Select"
        },
        "bind": "status"
      },
      "花费": {
        "bind": "cost",
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ]
            }
          },
          "type": "InputNumber"
        }
      },
      "状态": {
        "bind": "mode",
        "edit": {
          "props": {
            "options": [
              {
                "label": "::enabled",
                "value": "enabled"
              },
              {
                "label": "::disabled",
                "value": "disabled"
              }
            ],
            "placeholder": "请选择状态",
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ]
            }
          },
          "type": "Select"
        }
      },
      "入院时间": {
        "bind": "stay",
        "edit": {
          "type": "InputNumber",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ]
            }
          }
        }
      },
      "相关图片": {
        "view": {
          "props": {},
          "type": "Image",
          "compute": "scripts.file.image.ImagesView"
        },
        "edit": {
          "props": {
            "$api": {
              "process": "fs.system.Upload"
            },
            "filetype": "image"
          },
          "type": "Upload",
          "compute": {
            "args": [
              "$C(row)",
              "$C(type)",
              "images",
              "demo_pet"
            ],
            "process": "scripts.file.image.ImagesEdit"
          }
        },
        "bind": "images"
      },
      "昵称": {
        "edit": {
          "props": {},
          "type": "Input"
        },
        "bind": "name"
      },
      "类型": {
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ]
            },
            "options": [
              {
                "value": "cat",
                "label": "::cat"
              },
              {
                "label": "::dog",
                "value": "dog"
              },
              {
                "label": "::others",
                "value": "others"
              }
            ],
            "placeholder": "请选择类型"
          },
          "type": "Select"
        },
        "bind": "type"
      },
      "治疗状态": {
        "bind": "curing_status",
        "edit": {
          "props": {
            "placeholder": "请选择治疗状态",
            "options": [
              {
                "value": "0",
                "label": "::0"
              },
              {
                "value": "1",
                "label": "::1"
              },
              {
                "value": "2",
                "label": "::2"
              }
            ],
            "defaultValue": "0"
          },
          "type": "Select"
        }
      },
      "是否在线": {
        "bind": "online",
        "edit": {
          "props": {
            "options": [
              {
                "label": "是",
                "value": 1
              },
              {
                "label": "否",
                "value": 0
              }
            ],
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ]
            },
            "defaultValue": 0
          },
          "type": "RadioGroup"
        }
      }
    }
  },
  "name": "::Pet",
  "action": {
    "bind": {
      "model": "demo.pet",
      "option": {
        "withs": {}
      }
    }
  },
  "layout": {
    "form": {
      "props": {},
      "sections": [
        {
          "columns": [
            {
              "width": 8,
              "name": "昵称"
            },
            {
              "name": "类型",
              "width": 8
            },
            {
              "name": "入院状态",
              "width": 8
            },
            {
              "name": "状态",
              "width": 8
            },
            {
              "name": "是否在线",
              "width": 8
            },
            {
              "name": "治疗状态",
              "width": 8
            },
            {
              "name": "入院时间",
              "width": 8
            },
            {
              "name": "花费",
              "width": 8
            },
            {
              "name": "相关图片",
              "width": 24
            }
          ]
        }
      ]
    },
    "primary": "id",
    "actions": [
      {
        "icon": "icon-layers",
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "type": "Studio.model",
            "payload": {
              "args": [
                "demo.pet"
              ],
              "method": "CreateOne"
            },
            "name": "StudioModel"
          },
          {
            "type": "Common.confirm",
            "payload": {
              "title": "提示",
              "content": "处理完成"
            },
            "name": "Confirm"
          }
        ],
        "title": "重新生成代码"
      },
      {
        "showWhenView": true,
        "action": [
          {
            "name": "CloseModal",
            "type": "Common.closeModal",
            "payload": {}
          }
        ],
        "title": "返回",
        "icon": "icon-arrow-left",
        "showWhenAdd": true
      },
      {
        "style": "primary",
        "showWhenAdd": true,
        "action": [
          {
            "payload": {},
            "name": "Submit",
            "type": "Form.submit"
          },
          {
            "type": "Common.closeModal",
            "payload": {},
            "name": "Back"
          }
        ],
        "title": "保存",
        "icon": "icon-check"
      },
      {
        "action": [
          {
            "name": "Confirm",
            "type": "Common.confirm",
            "payload": {
              "content": "确认删除，删除后数据无法恢复？",
              "title": "提示"
            }
          },
          {
            "name": "Delete",
            "payload": {
              "model": "demo.pet"
            },
            "type": "Form.delete"
          },
          {
            "name": "Back",
            "type": "Common.closeModal",
            "payload": {}
          }
        ],
        "icon": "icon-trash-2",
        "style": "danger",
        "title": "Delete"
      }
    ]
  }
}