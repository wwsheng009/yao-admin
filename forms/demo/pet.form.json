{
  "name": "::Pet",
  "action": {
    "bind": {
      "model": "demo.pet",
      "option": {
        "withs": {}
      }
    }
  },
  "layout": {
    "form": {
      "props": {},
      "sections": [
        {
          "columns": [
            {
              "name": "昵称",
              "width": 8
            },
            {
              "name": "类型",
              "width": 8
            },
            {
              "name": "入院状态",
              "width": 8
            },
            {
              "name": "状态",
              "width": 8
            },
            {
              "name": "是否在线",
              "width": 8
            },
            {
              "width": 8,
              "name": "治疗状态"
            },
            {
              "name": "入院时间",
              "width": 8
            },
            {
              "width": 8,
              "name": "花费"
            },
            {
              "name": "相关图片",
              "width": 24
            }
          ]
        },
        {
          "columns": [
            {
              "tabs": [],
              "width": 24,
              "name": "列表"
            }
          ]
        }
      ]
    },
    "primary": "id",
    "actions": [
      {
        "showWhenView": true,
        "action": [
          {
            "payload": {},
            "name": "Fullscreen",
            "type": "Form.fullscreen"
          }
        ],
        "title": "切换全屏",
        "icon": "icon-maximize-2",
        "showWhenAdd": true
      },
      {
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "name": "StudioModel",
            "type": "Studio.model",
            "payload": {
              "method": "CreateOne",
              "args": [
                "demo.pet"
              ]
            }
          },
          {
            "name": "Confirm",
            "type": "Common.confirm",
            "payload": {
              "title": "提示",
              "content": "处理完成"
            }
          }
        ],
        "title": "重新生成代码",
        "icon": "icon-layers"
      },
      {
        "showWhenView": true,
        "action": [
          {
            "payload": {},
            "name": "CloseModal",
            "type": "Common.closeModal"
          }
        ],
        "title": "返回",
        "icon": "icon-arrow-left",
        "showWhenAdd": true
      },
      {
        "action": [
          {
            "name": "Submit",
            "type": "Form.submit",
            "payload": {}
          },
          {
            "name": "Back",
            "type": "Common.closeModal",
            "payload": {}
          }
        ],
        "title": "保存",
        "icon": "icon-check",
        "style": "primary",
        "showWhenAdd": true
      },
      {
        "style": "danger",
        "title": "Delete",
        "action": [
          {
            "name": "Confirm",
            "type": "Common.confirm",
            "payload": {
              "title": "提示",
              "content": "确认删除，删除后数据无法恢复？"
            }
          },
          {
            "type": "Form.delete",
            "name": "Delete",
            "payload": {
              "model": "demo.pet"
            }
          },
          {
            "name": "Back",
            "type": "Common.closeModal",
            "payload": {}
          }
        ],
        "icon": "icon-trash-2"
      }
    ]
  },
  "fields": {
    "form": {
      "治疗状态": {
        "bind": "curing_status",
        "edit": {
          "type": "Select",
          "props": {
            "value": "0",
            "options": [
              {
                "label": "::0",
                "value": "0"
              },
              {
                "value": "1",
                "label": "::1"
              },
              {
                "label": "::2",
                "value": "2"
              }
            ],
            "placeholder": "请选择治疗状态",
            "defaultValue": "0"
          }
        }
      },
      "昵称": {
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "message": "{{label}}应该至少包含一个数字",
                  "pattern": "[0-9]+"
                },
                {
                  "message": "{{label}}应该至少包含一个大写字母",
                  "pattern": "[A-Z]+"
                },
                {
                  "message": "{{label}}应该至少包含一个小写字母",
                  "pattern": "[a-z]+"
                },
                {
                  "pattern": "[@#$&*]+",
                  "message": "{{label}}应该至少包含一个符号"
                },
                {
                  "required": true,
                  "min": 6,
                  "type": "string",
                  "max": 18
                }
              ]
            }
          },
          "type": "Input"
        },
        "bind": "name"
      },
      "入院状态": {
        "edit": {
          "type": "Select",
          "props": {
            "placeholder": "请选择入院状态",
            "options": [
              {
                "label": "::checked",
                "value": "checked"
              },
              {
                "value": "curing",
                "label": "::curing"
              },
              {
                "value": "cured",
                "label": "::cured"
              }
            ]
          }
        },
        "bind": "status"
      },
      "入院时间": {
        "edit": {
          "props": {},
          "type": "InputNumber"
        },
        "bind": "stay"
      },
      "是否在线": {
        "edit": {
          "type": "RadioGroup",
          "props": {
            "options": [
              {
                "value": 1,
                "label": "是"
              },
              {
                "label": "否",
                "value": 0
              }
            ],
            "defaultValue": 0,
            "value": 0
          }
        },
        "bind": "online"
      },
      "状态": {
        "edit": {
          "props": {
            "placeholder": "请选择状态",
            "options": [
              {
                "value": "enabled",
                "label": "::enabled"
              },
              {
                "label": "::disabled",
                "value": "disabled"
              }
            ]
          },
          "type": "Select"
        },
        "bind": "mode"
      },
      "类型": {
        "bind": "type",
        "edit": {
          "props": {
            "options": [
              {
                "label": "::cat",
                "value": "cat"
              },
              {
                "label": "::dog",
                "value": "dog"
              },
              {
                "value": "others",
                "label": "::others"
              }
            ],
            "placeholder": "请选择类型"
          },
          "type": "Select"
        }
      },
      "相关图片": {
        "bind": "images",
        "view": {
          "compute": "scripts.file.image.ImagesView",
          "props": {},
          "type": "Image"
        },
        "edit": {
          "compute": {
            "args": [
              "$C(row)",
              "$C(type)",
              "images",
              "demo_pet"
            ],
            "process": "scripts.file.image.ImagesEdit"
          },
          "props": {
            "filetype": "image",
            "$api": {
              "process": "fs.system.Upload"
            }
          },
          "type": "Upload"
        }
      },
      "花费": {
        "edit": {
          "type": "InputNumber",
          "props": {}
        },
        "bind": "cost"
      }
    }
  }
}