{
  "layout": {
    "actions": [
      {
        "action": [
          {
            "name": "StudioModel",
            "type": "Studio.model",
            "payload": {
              "args": [
                "ddic.table"
              ],
              "method": "CreateOne"
            }
          },
          {
            "type": "Common.confirm",
            "payload": {
              "content": "处理完成",
              "title": "提示"
            },
            "name": "Confirm"
          }
        ],
        "title": "重新生成代码",
        "icon": "icon-layers",
        "showWhenAdd": true,
        "showWhenView": true
      },
      {
        "title": "返回",
        "icon": "icon-arrow-left",
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "type": "Common.closeModal",
            "payload": {},
            "name": "CloseModal"
          }
        ]
      },
      {
        "title": "保存",
        "icon": "icon-check",
        "style": "primary",
        "showWhenAdd": true,
        "action": [
          {
            "type": "Form.submit",
            "payload": {},
            "name": "Submit"
          },
          {
            "name": "Back",
            "type": "Common.closeModal",
            "payload": {}
          }
        ]
      },
      {
        "icon": "icon-trash-2",
        "style": "danger",
        "title": "Delete",
        "action": [
          {
            "type": "Common.confirm",
            "payload": {
              "content": "确认删除，删除后数据无法恢复？",
              "title": "提示"
            },
            "name": "Confirm"
          },
          {
            "name": "Delete",
            "payload": {
              "model": "ddic.table"
            },
            "type": "Form.delete"
          },
          {
            "payload": {},
            "name": "Back",
            "type": "Common.closeModal"
          }
        ]
      }
    ],
    "form": {
      "sections": [
        {
          "columns": [
            {
              "width": 8,
              "name": "名称"
            },
            {
              "name": "表单",
              "width": 8
            },
            {
              "name": "模型",
              "width": 8
            },
            {
              "width": 8,
              "name": "备注"
            },
            {
              "width": 24,
              "name": "描述"
            }
          ]
        },
        {
          "columns": [
            {
              "name": "列表",
              "tabs": [
                {
                  "title": "列表fields",
                  "columns": [
                    {
                      "name": "列表fields",
                      "width": 24
                    }
                  ]
                }
              ],
              "width": 24
            }
          ]
        }
      ],
      "props": {}
    },
    "primary": "id"
  },
  "fields": {
    "form": {
      "模型": {
        "bind": "model_id",
        "edit": {
          "type": "Select",
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "value": "id",
                  "model": "ddic.model",
                  "label": "name"
                }
              }
            },
            "itemProps": {
              "tooltip": "表关联的模型",
              "rules": [
                {
                  "required": true
                }
              ]
            }
          }
        }
      },
      "备注": {
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "表注释"
            }
          },
          "type": "Input"
        },
        "bind": "comment"
      },
      "列表fields": {
        "bind": "fields",
        "edit": {
          "type": "List",
          "props": {
            "name": "ddic.table.field",
            "showLabel": true
          }
        }
      },
      "描述": {
        "edit": {
          "type": "TextArea",
          "props": {
            "itemProps": {
              "tooltip": "介绍",
              "rules": [
                {
                  "required": true
                }
              ]
            }
          }
        },
        "bind": "description"
      },
      "名称": {
        "bind": "name",
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ]
            }
          }
        }
      },
      "表单": {
        "bind": "form_id",
        "edit": {
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "model": "ddic.form",
                  "label": "name",
                  "value": "id"
                }
              }
            },
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "表关联的表单"
            }
          },
          "type": "Select"
        }
      }
    }
  },
  "name": "::Table",
  "action": {
    "bind": {
      "model": "ddic.table",
      "option": {
        "withs": {
          "form": {},
          "fields": {},
          "model": {}
        }
      }
    },
    "save": {
      "process": "scripts.ddic.table.Save"
    },
    "before:delete": "scripts.ddic.table.BeforeDelete"
  }
}