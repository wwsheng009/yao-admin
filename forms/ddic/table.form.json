{
  "fields": {
    "form": {
      "名称": {
        "bind": "name",
        "edit": {
          "props": {},
          "type": "Input"
        }
      },
      "表单": {
        "edit": {
          "type": "Select",
          "props": {
            "itemProps": {
              "tooltip": "表关联的表单"
            },
            "xProps": {
              "$remote": {
                "query": {
                  "label": "name",
                  "value": "id",
                  "model": "ddic.form"
                },
                "process": "yao.component.SelectOptions"
              }
            }
          }
        },
        "bind": "form_id"
      },
      "列表fields": {
        "bind": "fields",
        "edit": {
          "type": "List",
          "props": {
            "showLabel": true,
            "name": "ddic.table.field"
          }
        }
      },
      "模型": {
        "bind": "model_id",
        "edit": {
          "type": "Select",
          "props": {
            "itemProps": {
              "tooltip": "表关联的模型"
            },
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "value": "id",
                  "model": "ddic.model",
                  "label": "name"
                }
              }
            }
          }
        }
      },
      "备注": {
        "bind": "comment",
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "tooltip": "表注释"
            }
          }
        }
      },
      "描述": {
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "介绍"
            }
          },
          "type": "TextArea"
        },
        "bind": "description"
      }
    }
  },
  "name": "::Table",
  "action": {
    "save": {
      "process": "scripts.ddic.table.Save"
    },
    "before:delete": "scripts.ddic.table.BeforeDelete",
    "bind": {
      "option": {
        "withs": {
          "model": {},
          "form": {},
          "fields": {}
        }
      },
      "model": "ddic.table"
    }
  },
  "layout": {
    "form": {
      "sections": [
        {
          "columns": [
            {
              "width": 8,
              "name": "名称"
            },
            {
              "name": "表单",
              "width": 8
            },
            {
              "name": "模型",
              "width": 8
            },
            {
              "name": "备注",
              "width": 8
            },
            {
              "name": "描述",
              "width": 24
            }
          ]
        },
        {
          "columns": [
            {
              "tabs": [
                {
                  "title": "列表fields",
                  "columns": [
                    {
                      "name": "列表fields",
                      "width": 24
                    }
                  ]
                }
              ],
              "width": 24,
              "name": "列表"
            }
          ]
        }
      ],
      "props": {
        "reference": {
          "floatContents": [
            {
              "name": "model",
              "payload": {
                "Form": {
                  "type": "edit",
                  "model": "ddic.model",
                  "id": "{{model_id}}"
                }
              }
            },
            {
              "name": "form",
              "payload": {
                "Form": {
                  "type": "edit",
                  "model": "ddic.form",
                  "id": "{{form_id}}"
                }
              }
            }
          ]
        }
      }
    },
    "primary": "id",
    "actions": [
      {
        "action": [
          {
            "payload": {},
            "name": "Fullscreen",
            "type": "Form.fullscreen"
          }
        ],
        "title": "切换全屏",
        "icon": "icon-maximize-2",
        "showWhenAdd": true,
        "showWhenView": true
      },
      {
        "title": "重新生成代码",
        "icon": "icon-layers",
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "name": "StudioModel",
            "type": "Studio.model",
            "payload": {
              "method": "CreateOne",
              "args": [
                "ddic.table"
              ]
            }
          },
          {
            "type": "Common.confirm",
            "payload": {
              "title": "提示",
              "content": "处理完成"
            },
            "name": "Confirm"
          }
        ]
      },
      {
        "action": [
          {
            "name": "CloseModal",
            "type": "Common.closeModal",
            "payload": {}
          }
        ],
        "title": "返回",
        "icon": "icon-arrow-left",
        "showWhenAdd": true,
        "showWhenView": true
      },
      {
        "style": "primary",
        "showWhenAdd": true,
        "action": [
          {
            "name": "Submit",
            "type": "Form.submit",
            "payload": {}
          },
          {
            "name": "Back",
            "type": "Common.closeModal",
            "payload": {}
          }
        ],
        "title": "保存",
        "icon": "icon-check"
      },
      {
        "style": "danger",
        "title": "Delete",
        "action": [
          {
            "type": "Common.confirm",
            "payload": {
              "title": "提示",
              "content": "确认删除，删除后数据无法恢复？"
            },
            "name": "Confirm"
          },
          {
            "type": "Form.delete",
            "name": "Delete",
            "payload": {
              "model": "ddic.table"
            }
          },
          {
            "payload": {},
            "name": "Back",
            "type": "Common.closeModal"
          }
        ],
        "icon": "icon-trash-2"
      }
    ]
  }
}