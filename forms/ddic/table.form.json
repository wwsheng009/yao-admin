{
  "name": "::Table",
  "action": {
    "before:delete": "scripts.ddic.table.BeforeDelete",
    "bind": {
      "option": {
        "withs": {
          "fields": {},
          "model": {},
          "form": {}
        }
      },
      "model": "ddic.table"
    },
    "save": {
      "process": "scripts.ddic.table.Save"
    }
  },
  "layout": {
    "form": {
      "props": {},
      "sections": [
        {
          "columns": [
            {
              "name": "名称",
              "width": 8
            },
            {
              "name": "表单",
              "width": 8
            },
            {
              "name": "模型",
              "width": 8
            },
            {
              "name": "备注",
              "width": 8
            },
            {
              "name": "描述",
              "width": 24
            }
          ]
        },
        {
          "columns": [
            {
              "width": 24,
              "name": "列表fields"
            }
          ]
        }
      ]
    },
    "primary": "id",
    "actions": [
      {
        "title": "重新生成代码",
        "icon": "icon-layers",
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "name": "StudioModel",
            "type": "Studio.model",
            "payload": {
              "args": [
                "ddic.table"
              ],
              "method": "CreateOne"
            }
          },
          {
            "payload": {
              "title": "提示",
              "content": "处理完成"
            },
            "name": "Confirm",
            "type": "Common.confirm"
          }
        ]
      },
      {
        "icon": "icon-arrow-left",
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "payload": {},
            "name": "CloseModal",
            "type": "Common.closeModal"
          }
        ],
        "title": "返回"
      },
      {
        "style": "primary",
        "showWhenAdd": true,
        "action": [
          {
            "name": "Submit",
            "type": "Form.submit",
            "payload": {}
          },
          {
            "name": "Back",
            "type": "Common.closeModal",
            "payload": {}
          }
        ],
        "title": "保存",
        "icon": "icon-check"
      },
      {
        "icon": "icon-trash-2",
        "style": "danger",
        "title": "Delete",
        "action": [
          {
            "name": "Confirm",
            "type": "Common.confirm",
            "payload": {
              "title": "提示",
              "content": "确认删除，删除后数据无法恢复？"
            }
          },
          {
            "payload": {
              "model": "ddic.table"
            },
            "type": "Form.delete",
            "name": "Delete"
          },
          {
            "name": "Back",
            "type": "Common.closeModal",
            "payload": {}
          }
        ]
      }
    ]
  },
  "fields": {
    "form": {
      "模型": {
        "bind": "model_id",
        "edit": {
          "type": "Select",
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "model": "ddic.model",
                  "label": "name",
                  "value": "id"
                }
              }
            },
            "itemProps": {
              "tooltip": "表关联的模型",
              "rules": [
                {
                  "required": true
                }
              ]
            }
          }
        }
      },
      "备注": {
        "bind": "comment",
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "表注释"
            }
          }
        }
      },
      "描述": {
        "bind": "description",
        "edit": {
          "type": "TextArea",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "介绍"
            }
          }
        }
      },
      "列表fields": {
        "edit": {
          "type": "List",
          "props": {
            "name": "ddic.table.field",
            "showLabel": true
          }
        },
        "bind": "fields"
      },
      "名称": {
        "bind": "name",
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ]
            }
          }
        }
      },
      "表单": {
        "bind": "form_id",
        "edit": {
          "type": "Select",
          "props": {
            "xProps": {
              "$remote": {
                "query": {
                  "model": "ddic.form",
                  "label": "name",
                  "value": "id"
                },
                "process": "yao.component.SelectOptions"
              }
            },
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "表关联的表单"
            }
          }
        }
      }
    }
  }
}