{
  "name": "::Model",
  "action": {
    "before:delete": "scripts.ddic.model.BeforeDelete",
    "bind": {
      "model": "ddic.model",
      "option": {
        "withs": {
          "columns": {},
          "relations": {}
        }
      }
    },
    "save": {
      "process": "scripts.ddic.model.Save"
    }
  },
  "layout": {
    "form": {
      "sections": [
        {
          "columns": [
            {
              "name": "命名空间",
              "width": 8
            },
            {
              "name": "模型名称",
              "width": 8
            },
            {
              "width": 8,
              "name": "模型备注"
            },
            {
              "name": "数据库表名",
              "width": 8
            },
            {
              "name": "数据库表备注",
              "width": 8
            },
            {
              "name": "软删除",
              "width": 8
            },
            {
              "name": "增加时间戳",
              "width": 8
            }
          ]
        },
        {
          "columns": [
            {
              "name": "列表columns",
              "width": 24
            }
          ]
        },
        {
          "columns": [
            {
              "name": "列表relations",
              "width": 24
            }
          ]
        }
      ],
      "props": {}
    },
    "primary": "id",
    "actions": [
      {
        "action": [
          {
            "payload": {
              "args": [
                "ddic.model"
              ],
              "method": "CreateOne"
            },
            "name": "StudioModel",
            "type": "Studio.model"
          },
          {
            "name": "Confirm",
            "type": "Common.confirm",
            "payload": {
              "content": "处理完成",
              "title": "提示"
            }
          }
        ],
        "title": "重新生成代码",
        "icon": "icon-layers",
        "showWhenAdd": true,
        "showWhenView": true
      },
      {
        "showWhenView": true,
        "action": [
          {
            "type": "Common.closeModal",
            "payload": {},
            "name": "CloseModal"
          }
        ],
        "title": "返回",
        "icon": "icon-arrow-left",
        "showWhenAdd": true
      },
      {
        "action": [
          {
            "payload": {},
            "name": "Submit",
            "type": "Form.submit"
          },
          {
            "name": "Back",
            "type": "Common.closeModal",
            "payload": {}
          }
        ],
        "title": "保存",
        "icon": "icon-check",
        "style": "primary",
        "showWhenAdd": true
      },
      {
        "title": "Delete",
        "action": [
          {
            "payload": {
              "title": "提示",
              "content": "确认删除，删除后数据无法恢复？"
            },
            "name": "Confirm",
            "type": "Common.confirm"
          },
          {
            "payload": {
              "model": "ddic.model"
            },
            "type": "Form.delete",
            "name": "Delete"
          },
          {
            "payload": {},
            "name": "Back",
            "type": "Common.closeModal"
          }
        ],
        "icon": "icon-trash-2",
        "style": "danger"
      }
    ]
  },
  "fields": {
    "form": {
      "增加时间戳": {
        "bind": "timestamps",
        "edit": {
          "props": {
            "options": [
              {
                "label": "是",
                "value": 1
              },
              {
                "label": "否",
                "value": 0
              }
            ],
            "itemProps": {
              "tooltip": "增加创建，更新时间戳"
            },
            "defaultValue": 1
          },
          "type": "RadioGroup"
        }
      },
      "列表columns": {
        "bind": "columns",
        "edit": {
          "type": "List",
          "props": {
            "name": "ddic.model.column",
            "showLabel": true
          }
        }
      },
      "数据库表备注": {
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "tooltip": "对应数据表中字段注释"
            }
          }
        },
        "bind": "table_comment"
      },
      "模型备注": {
        "bind": "model_comment",
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "tooltip": "模型定义注释"
            }
          }
        }
      },
      "数据库表名": {
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ]
            }
          },
          "type": "Input"
        },
        "bind": "table_name"
      },
      "列表relations": {
        "bind": "relations",
        "edit": {
          "props": {
            "name": "ddic.model.relation",
            "showLabel": true
          },
          "type": "List"
        }
      },
      "软删除": {
        "edit": {
          "props": {
            "options": [
              {
                "value": 1,
                "label": "是"
              },
              {
                "label": "否",
                "value": 0
              }
            ],
            "itemProps": {
              "tooltip": "软删除，不直接删除"
            },
            "defaultValue": 1
          },
          "type": "RadioGroup"
        },
        "bind": "soft_deletes"
      },
      "模型名称": {
        "bind": "name",
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ]
            }
          }
        }
      },
      "命名空间": {
        "edit": {
          "props": {
            "defaultValue": "app"
          },
          "type": "Input"
        },
        "bind": "namespace"
      }
    }
  }
}