{
  "name": "::Model",
  "action": {
    "bind": {
      "model": "ddic.model",
      "option": {
        "withs": {
          "columns": {},
          "relations": {}
        }
      }
    },
    "save": {
      "process": "scripts.ddic.model.Save"
    },
    "before:delete": "scripts.ddic.model.BeforeDelete"
  },
  "layout": {
    "form": {
      "props": {},
      "sections": [
        {
          "columns": [
            {
              "name": "命名空间",
              "width": 8
            },
            {
              "name": "模型名称",
              "width": 8
            },
            {
              "name": "模型备注",
              "width": 8
            },
            {
              "name": "数据库表名",
              "width": 8
            },
            {
              "name": "数据库表备注",
              "width": 8
            },
            {
              "name": "软删除",
              "width": 8
            },
            {
              "name": "增加时间戳",
              "width": 8
            }
          ]
        },
        {
          "columns": [
            {
              "name": "列表columns",
              "width": 24
            }
          ]
        },
        {
          "columns": [
            {
              "width": 24,
              "name": "列表relations"
            }
          ]
        }
      ]
    },
    "primary": "id",
    "actions": [
      {
        "showWhenView": true,
        "action": [
          {
            "name": "StudioModel",
            "type": "Studio.model",
            "payload": {
              "method": "CreateOne",
              "args": [
                "ddic.model"
              ]
            }
          },
          {
            "type": "Common.confirm",
            "payload": {
              "content": "处理完成",
              "title": "提示"
            },
            "name": "Confirm"
          }
        ],
        "title": "重新生成代码",
        "icon": "icon-layers",
        "showWhenAdd": true
      },
      {
        "icon": "icon-arrow-left",
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "type": "Common.closeModal",
            "payload": {},
            "name": "CloseModal"
          }
        ],
        "title": "返回"
      },
      {
        "action": [
          {
            "payload": {},
            "name": "Submit",
            "type": "Form.submit"
          },
          {
            "payload": {},
            "name": "Back",
            "type": "Common.closeModal"
          }
        ],
        "title": "保存",
        "icon": "icon-check",
        "style": "primary",
        "showWhenAdd": true
      },
      {
        "style": "danger",
        "title": "Delete",
        "action": [
          {
            "type": "Common.confirm",
            "payload": {
              "content": "确认删除，删除后数据无法恢复？",
              "title": "提示"
            },
            "name": "Confirm"
          },
          {
            "name": "Delete",
            "payload": {
              "model": "ddic.model"
            },
            "type": "Form.delete"
          },
          {
            "name": "Back",
            "type": "Common.closeModal",
            "payload": {}
          }
        ],
        "icon": "icon-trash-2"
      }
    ]
  },
  "fields": {
    "form": {
      "增加时间戳": {
        "edit": {
          "type": "RadioGroup",
          "props": {
            "options": [
              {
                "label": "是",
                "value": 1
              },
              {
                "value": 0,
                "label": "否"
              }
            ],
            "itemProps": {
              "tooltip": "增加创建，更新时间戳"
            },
            "defaultValue": 1
          }
        },
        "bind": "timestamps"
      },
      "命名空间": {
        "bind": "namespace",
        "edit": {
          "props": {
            "defaultValue": "app"
          },
          "type": "Input"
        }
      },
      "软删除": {
        "edit": {
          "type": "RadioGroup",
          "props": {
            "options": [
              {
                "value": 1,
                "label": "是"
              },
              {
                "label": "否",
                "value": 0
              }
            ],
            "itemProps": {
              "tooltip": "软删除，不直接删除"
            },
            "defaultValue": 1
          }
        },
        "bind": "soft_deletes"
      },
      "列表columns": {
        "edit": {
          "type": "List",
          "props": {
            "name": "ddic.model.column",
            "showLabel": true
          }
        },
        "bind": "columns"
      },
      "列表relations": {
        "bind": "relations",
        "edit": {
          "type": "List",
          "props": {
            "name": "ddic.model.relation",
            "showLabel": true
          }
        }
      },
      "模型名称": {
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ]
            }
          }
        },
        "bind": "name"
      },
      "模型备注": {
        "bind": "model_comment",
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "模型定义注释"
            }
          },
          "type": "Input"
        }
      },
      "数据库表备注": {
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "对应数据表中字段注释"
            }
          },
          "type": "Input"
        },
        "bind": "table_comment"
      },
      "数据库表名": {
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ]
            }
          },
          "type": "Input"
        },
        "bind": "table_name"
      }
    }
  }
}