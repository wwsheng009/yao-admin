{
  "fields": {
    "form": {
      "模型备注": {
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "tooltip": "模型定义注释"
            }
          }
        },
        "bind": "model_comment"
      },
      "数据库表名": {
        "bind": "table_name",
        "edit": {
          "type": "Input",
          "props": {}
        }
      },
      "字段列表": {
        "bind": "columns",
        "edit": {
          "type": "List",
          "props": {
            "name": "ddic.model.column",
            "showLabel": true
          }
        }
      },
      "数据库表备注": {
        "bind": "table_comment",
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "tooltip": "对应数据表中字段注释"
            }
          }
        }
      },
      "软删除": {
        "edit": {
          "props": {
            "defaultValue": 1,
            "value": 1,
            "options": [
              {
                "label": "是",
                "value": 1
              },
              {
                "value": 0,
                "label": "否"
              }
            ],
            "itemProps": {
              "tooltip": "软删除，不直接删除"
            }
          },
          "type": "RadioGroup"
        },
        "bind": "soft_deletes"
      },
      "增加时间戳": {
        "edit": {
          "props": {
            "defaultValue": 1,
            "value": 1,
            "options": [
              {
                "label": "是",
                "value": 1
              },
              {
                "label": "否",
                "value": 0
              }
            ],
            "itemProps": {
              "tooltip": "增加创建，更新时间戳timestamps"
            }
          },
          "type": "RadioGroup"
        },
        "bind": "timestamps"
      },
      "关联关系": {
        "edit": {
          "type": "List",
          "props": {
            "itemProps": {
              "tooltip": "关联关系"
            },
            "language": "json",
            "showLabel": true,
            "name": "ddic.model.relation",
            "height": 200
          }
        },
        "bind": "relations"
      },
      "模型名称": {
        "bind": "name",
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "message": "{{label}}应该由6-18位，大小写字母、数字构成",
                  "pattern": "^[a-zA-Z.]+$"
                },
                {
                  "min": 6,
                  "type": "string",
                  "max": 18,
                  "required": true
                }
              ]
            }
          },
          "type": "Input"
        }
      }
    }
  },
  "name": "::Model",
  "action": {
    "save": {
      "process": "scripts.ddic.model.Save"
    },
    "before:delete": "scripts.ddic.model.BeforeDelete",
    "bind": {
      "model": "ddic.model",
      "option": {
        "withs": {
          "columns": {}
        }
      }
    }
  },
  "layout": {
    "primary": "id",
    "actions": [
      {
        "icon": "icon-maximize-2",
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "name": "Fullscreen",
            "type": "Form.fullscreen",
            "payload": {}
          }
        ],
        "title": "切换全屏"
      },
      {
        "action": [
          {
            "payload": {
              "args": [
                "ddic.model"
              ],
              "method": "CreateOne"
            },
            "name": "StudioModel",
            "type": "Studio.model"
          },
          {
            "payload": {
              "title": "提示",
              "content": "处理完成"
            },
            "name": "Confirm",
            "type": "Common.confirm"
          }
        ],
        "title": "重新生成代码",
        "icon": "icon-layers",
        "showWhenAdd": true,
        "showWhenView": true
      },
      {
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "name": "CloseModal",
            "type": "Common.closeModal",
            "payload": {}
          }
        ],
        "title": "返回",
        "icon": "icon-arrow-left"
      },
      {
        "showWhenAdd": true,
        "action": [
          {
            "name": "Submit",
            "type": "Form.submit",
            "payload": {}
          },
          {
            "type": "Common.closeModal",
            "payload": {},
            "name": "Back"
          }
        ],
        "title": "保存",
        "icon": "icon-check",
        "style": "primary"
      },
      {
        "icon": "icon-trash-2",
        "style": "danger",
        "title": "Delete",
        "action": [
          {
            "payload": {
              "title": "提示",
              "content": "确认删除，删除后数据无法恢复？"
            },
            "name": "Confirm",
            "type": "Common.confirm"
          },
          {
            "name": "Delete",
            "payload": {
              "model": "ddic.model"
            },
            "type": "Form.delete"
          },
          {
            "type": "Common.closeModal",
            "payload": {},
            "name": "Back"
          }
        ]
      }
    ],
    "form": {
      "props": {},
      "sections": [
        {
          "columns": [
            {
              "name": "模型名称",
              "width": 8
            },
            {
              "width": 8,
              "name": "模型备注"
            },
            {
              "width": 8,
              "name": "数据库表名"
            },
            {
              "name": "数据库表备注",
              "width": 8
            },
            {
              "name": "软删除",
              "width": 8
            },
            {
              "name": "增加时间戳",
              "width": 8
            },
            {
              "name": "关联关系",
              "width": 24
            }
          ]
        },
        {
          "columns": [
            {
              "width": 24,
              "name": "列表",
              "tabs": [
                {
                  "title": "字段列表",
                  "columns": [
                    {
                      "width": 24,
                      "name": "字段列表"
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  }
}