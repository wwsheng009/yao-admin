{
  "action": {
    "before:delete": "scripts.ddic.model.BeforeDelete",
    "bind": {
      "model": "ddic.model",
      "option": {
        "withs": {
          "rel": {},
          "col": {}
        }
      }
    },
    "save": {
      "process": "scripts.ddic.model.Save"
    }
  },
  "layout": {
    "primary": "id",
    "actions": [
      {
        "showWhenView": true,
        "action": [
          {
            "name": "StudioModel",
            "type": "Studio.model",
            "payload": {
              "method": "CreateOne",
              "args": [
                "ddic.model"
              ]
            }
          },
          {
            "name": "Confirm",
            "type": "Common.confirm",
            "payload": {
              "title": "提示",
              "content": "处理完成"
            }
          }
        ],
        "title": "重新生成代码",
        "icon": "icon-layers",
        "showWhenAdd": true
      },
      {
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "name": "CloseModal",
            "type": "Common.closeModal",
            "payload": {}
          }
        ],
        "title": "返回",
        "icon": "icon-arrow-left"
      },
      {
        "style": "primary",
        "showWhenAdd": true,
        "action": [
          {
            "payload": {},
            "name": "Submit",
            "type": "Form.submit"
          },
          {
            "payload": {},
            "name": "Back",
            "type": "Common.closeModal"
          }
        ],
        "title": "保存",
        "icon": "icon-check"
      },
      {
        "action": [
          {
            "payload": {
              "title": "提示",
              "content": "确认删除，删除后数据无法恢复？"
            },
            "name": "Confirm",
            "type": "Common.confirm"
          },
          {
            "type": "Form.delete",
            "name": "Delete",
            "payload": {
              "model": "ddic.model"
            }
          },
          {
            "payload": {},
            "name": "Back",
            "type": "Common.closeModal"
          }
        ],
        "icon": "icon-trash-2",
        "style": "danger",
        "title": "Delete"
      }
    ],
    "form": {
      "sections": [
        {
          "columns": [
            {
              "width": 8,
              "name": "命名空间"
            },
            {
              "name": "模型名称",
              "width": 8
            },
            {
              "name": "模型备注",
              "width": 8
            },
            {
              "name": "数据库表名",
              "width": 8
            },
            {
              "width": 8,
              "name": "数据库表备注"
            },
            {
              "width": 8,
              "name": "软删除"
            },
            {
              "name": "增加时间戳",
              "width": 8
            }
          ]
        },
        {
          "columns": [
            {
              "name": "列表",
              "tabs": [
                {
                  "title": "字段列表",
                  "columns": [
                    {
                      "name": "字段列表",
                      "width": 24
                    }
                  ]
                },
                {
                  "title": "关联关系",
                  "columns": [
                    {
                      "width": 24,
                      "name": "关联关系"
                    }
                  ]
                }
              ],
              "width": 24
            }
          ]
        }
      ],
      "props": {}
    }
  },
  "fields": {
    "form": {
      "数据库表备注": {
        "bind": "table_comment",
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "tooltip": "对应数据表中字段注释"
            }
          }
        }
      },
      "命名空间": {
        "edit": {
          "type": "Input",
          "props": {
            "defaultValue": "app"
          }
        },
        "bind": "namespace"
      },
      "字段列表": {
        "bind": "col",
        "edit": {
          "type": "List",
          "props": {
            "showLabel": true,
            "name": "ddic.model.column"
          }
        }
      },
      "关联关系": {
        "edit": {
          "type": "List",
          "props": {
            "name": "ddic.model.relation",
            "showLabel": true
          }
        },
        "bind": "rel"
      },
      "模型备注": {
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "模型定义注释"
            }
          },
          "type": "Input"
        },
        "bind": "model_comment"
      },
      "增加时间戳": {
        "bind": "timestamps",
        "edit": {
          "props": {
            "defaultValue": 1,
            "options": [
              {
                "label": "是",
                "value": 1
              },
              {
                "value": 0,
                "label": "否"
              }
            ],
            "itemProps": {
              "tooltip": "增加创建，更新时间戳"
            }
          },
          "type": "RadioGroup"
        }
      },
      "软删除": {
        "edit": {
          "type": "RadioGroup",
          "props": {
            "options": [
              {
                "label": "是",
                "value": 1
              },
              {
                "label": "否",
                "value": 0
              }
            ],
            "itemProps": {
              "tooltip": "软删除，不直接删除"
            },
            "defaultValue": 1
          }
        },
        "bind": "soft_deletes"
      },
      "数据库表名": {
        "bind": "table_name",
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ]
            }
          }
        }
      },
      "模型名称": {
        "bind": "name",
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ]
            }
          }
        }
      }
    }
  },
  "name": "::Model"
}