{
  "layout": {
    "primary": "id",
    "actions": [
      {
        "showWhenView": true,
        "action": [
          {
            "type": "Form.fullscreen",
            "payload": {},
            "name": "Fullscreen"
          }
        ],
        "title": "切换全屏",
        "icon": "icon-maximize-2",
        "showWhenAdd": true
      },
      {
        "action": [
          {
            "type": "Studio.model",
            "payload": {
              "method": "CreateOne",
              "args": [
                "ddic.form"
              ]
            },
            "name": "StudioModel"
          },
          {
            "name": "Confirm",
            "type": "Common.confirm",
            "payload": {
              "title": "提示",
              "content": "处理完成"
            }
          }
        ],
        "title": "重新生成代码",
        "icon": "icon-layers",
        "showWhenAdd": true,
        "showWhenView": true
      },
      {
        "icon": "icon-arrow-left",
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "name": "CloseModal",
            "type": "Common.closeModal",
            "payload": {}
          }
        ],
        "title": "返回"
      },
      {
        "title": "保存",
        "icon": "icon-check",
        "style": "primary",
        "showWhenAdd": true,
        "action": [
          {
            "payload": {},
            "name": "Submit",
            "type": "Form.submit"
          },
          {
            "name": "Back",
            "type": "Common.closeModal",
            "payload": {}
          }
        ]
      },
      {
        "action": [
          {
            "name": "Confirm",
            "type": "Common.confirm",
            "payload": {
              "content": "确认删除，删除后数据无法恢复？",
              "title": "提示"
            }
          },
          {
            "payload": {
              "model": "ddic.form"
            },
            "type": "Form.delete",
            "name": "Delete"
          },
          {
            "name": "Back",
            "type": "Common.closeModal",
            "payload": {}
          }
        ],
        "icon": "icon-trash-2",
        "style": "danger",
        "title": "Delete"
      }
    ],
    "form": {
      "sections": [
        {
          "columns": [
            {
              "name": "名称",
              "width": 8
            },
            {
              "name": "主键",
              "width": 8
            },
            {
              "name": "关联模型",
              "width": 8
            },
            {
              "name": "关联表格",
              "width": 8
            },
            {
              "name": "备注",
              "width": 8
            },
            {
              "name": "绑定选项",
              "width": 24
            }
          ]
        },
        {
          "columns": [
            {
              "tabs": [
                {
                  "title": "字段列表",
                  "columns": [
                    {
                      "width": 24,
                      "name": "字段列表"
                    }
                  ]
                }
              ],
              "width": 24,
              "name": "列表"
            }
          ]
        }
      ],
      "props": {
        "reference": {
          "floatContents": [
            {
              "payload": {
                "Form": {
                  "model": "ddic.model",
                  "id": "{{model_id}}",
                  "type": "edit"
                }
              },
              "name": "模型"
            },
            {
              "payload": {
                "Form": {
                  "model": "ddic.table",
                  "id": "{{table_id}}",
                  "type": "edit"
                }
              },
              "name": "表单"
            }
          ]
        }
      }
    }
  },
  "fields": {
    "form": {
      "关联表格": {
        "bind": "table_id",
        "edit": {
          "type": "Select",
          "props": {
            "itemProps": {
              "tooltip": "表单关联的表格"
            },
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "value": "id",
                  "model": "ddic.table",
                  "label": "name"
                }
              }
            }
          }
        }
      },
      "备注": {
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "表注释"
            }
          },
          "type": "Input"
        },
        "bind": "comment"
      },
      "绑定选项": {
        "edit": {
          "type": "CodeEditor",
          "props": {
            "itemProps": {
              "tooltip": "绑定模型选项"
            },
            "language": "json",
            "height": 200
          }
        },
        "bind": "bind_option"
      },
      "名称": {
        "edit": {
          "props": {},
          "type": "Input"
        },
        "bind": "name"
      },
      "主键": {
        "edit": {
          "props": {
            "defaultValue": "id",
            "itemProps": {
              "tooltip": "显示主键"
            }
          },
          "type": "Input"
        },
        "bind": "primary"
      },
      "关联模型": {
        "edit": {
          "type": "Select",
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "model": "ddic.model",
                  "label": "name",
                  "value": "id"
                }
              }
            },
            "itemProps": {
              "tooltip": "表单关联的模型"
            }
          }
        },
        "bind": "model_id"
      },
      "字段列表": {
        "edit": {
          "type": "List",
          "props": {
            "showLabel": true,
            "name": "ddic.form.field"
          }
        },
        "bind": "fields"
      }
    }
  },
  "name": "::Form",
  "action": {
    "bind": {
      "model": "ddic.form",
      "option": {
        "withs": {
          "table": {},
          "fields": {},
          "model": {}
        }
      }
    },
    "save": {
      "process": "scripts.ddic.form.Save"
    },
    "before:delete": "scripts.ddic.form.BeforeDelete"
  }
}