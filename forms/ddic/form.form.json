{
  "name": "::Form",
  "action": {
    "before:delete": "scripts.ddic.form.BeforeDelete",
    "bind": {
      "model": "ddic.form",
      "option": {
        "withs": {
          "model": {},
          "table": {},
          "fields": {}
        }
      }
    },
    "save": {
      "process": "scripts.ddic.form.Save"
    }
  },
  "layout": {
    "primary": "id",
    "actions": [
      {
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "payload": {
              "args": [
                "ddic.form"
              ],
              "method": "CreateOne"
            },
            "name": "StudioModel",
            "type": "Studio.model"
          },
          {
            "name": "Confirm",
            "type": "Common.confirm",
            "payload": {
              "title": "提示",
              "content": "处理完成"
            }
          }
        ],
        "title": "重新生成代码",
        "icon": "icon-layers"
      },
      {
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "type": "Common.closeModal",
            "payload": {},
            "name": "CloseModal"
          }
        ],
        "title": "返回",
        "icon": "icon-arrow-left"
      },
      {
        "icon": "icon-check",
        "style": "primary",
        "showWhenAdd": true,
        "action": [
          {
            "payload": {},
            "name": "Submit",
            "type": "Form.submit"
          },
          {
            "name": "Back",
            "type": "Common.closeModal",
            "payload": {}
          }
        ],
        "title": "保存"
      },
      {
        "icon": "icon-trash-2",
        "style": "danger",
        "title": "Delete",
        "action": [
          {
            "type": "Common.confirm",
            "payload": {
              "title": "提示",
              "content": "确认删除，删除后数据无法恢复？"
            },
            "name": "Confirm"
          },
          {
            "payload": {
              "model": "ddic.form"
            },
            "type": "Form.delete",
            "name": "Delete"
          },
          {
            "name": "Back",
            "type": "Common.closeModal",
            "payload": {}
          }
        ]
      }
    ],
    "form": {
      "props": {},
      "sections": [
        {
          "columns": [
            {
              "name": "名称",
              "width": 8
            },
            {
              "name": "主键",
              "width": 8
            },
            {
              "name": "关联模型",
              "width": 8
            },
            {
              "name": "关联表格",
              "width": 8
            },
            {
              "name": "备注",
              "width": 8
            },
            {
              "width": 24,
              "name": "绑定选项"
            }
          ]
        },
        {
          "columns": [
            {
              "name": "列表",
              "tabs": [
                {
                  "columns": [
                    {
                      "width": 24,
                      "name": "字段列表"
                    }
                  ],
                  "title": "字段列表"
                }
              ],
              "width": 24
            }
          ]
        }
      ]
    }
  },
  "fields": {
    "form": {
      "关联模型": {
        "edit": {
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "label": "name",
                  "value": "id",
                  "model": "ddic.model"
                }
              }
            },
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "表单关联的模型"
            }
          },
          "type": "Select"
        },
        "bind": "model_id"
      },
      "关联表格": {
        "bind": "table_id",
        "edit": {
          "type": "Select",
          "props": {
            "xProps": {
              "$remote": {
                "query": {
                  "label": "name",
                  "value": "id",
                  "model": "ddic.table"
                },
                "process": "yao.component.SelectOptions"
              }
            },
            "itemProps": {
              "tooltip": "表单关联的表格"
            }
          }
        }
      },
      "备注": {
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "tooltip": "表注释",
              "rules": [
                {
                  "required": true
                }
              ]
            }
          }
        },
        "bind": "comment"
      },
      "绑定选项": {
        "edit": {
          "compute": "scripts.ddic.compute.json.Edit",
          "type": "CodeEditor",
          "props": {
            "language": "json",
            "height": 200,
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "绑定模型选项"
            }
          }
        },
        "bind": "bind_option"
      },
      "字段列表": {
        "bind": "fields",
        "edit": {
          "type": "List",
          "props": {
            "showLabel": true,
            "name": "ddic.form.field"
          }
        }
      },
      "名称": {
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ]
            }
          }
        },
        "bind": "name"
      },
      "主键": {
        "bind": "primary",
        "edit": {
          "props": {
            "defaultValue": "id",
            "itemProps": {
              "tooltip": "显示主键"
            }
          },
          "type": "Input"
        }
      }
    }
  }
}