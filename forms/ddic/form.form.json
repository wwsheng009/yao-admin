{
  "action": {
    "before:delete": "scripts.ddic.form.BeforeDelete",
    "bind": {
      "option": {
        "withs": {
          "table": {},
          "fields": {},
          "model": {}
        }
      },
      "model": "ddic.form"
    },
    "save": {
      "process": "scripts.ddic.form.Save"
    }
  },
  "layout": {
    "actions": [
      {
        "title": "重新生成代码",
        "icon": "icon-layers",
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "payload": {
              "method": "CreateOne",
              "args": [
                "ddic.form"
              ]
            },
            "name": "StudioModel",
            "type": "Studio.model"
          },
          {
            "type": "Common.confirm",
            "payload": {
              "title": "提示",
              "content": "处理完成"
            },
            "name": "Confirm"
          }
        ]
      },
      {
        "title": "返回",
        "icon": "icon-arrow-left",
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "payload": {},
            "name": "CloseModal",
            "type": "Common.closeModal"
          }
        ]
      },
      {
        "icon": "icon-check",
        "style": "primary",
        "showWhenAdd": true,
        "action": [
          {
            "type": "Form.submit",
            "payload": {},
            "name": "Submit"
          },
          {
            "name": "Back",
            "type": "Common.closeModal",
            "payload": {}
          }
        ],
        "title": "保存"
      },
      {
        "action": [
          {
            "name": "Confirm",
            "type": "Common.confirm",
            "payload": {
              "content": "确认删除，删除后数据无法恢复？",
              "title": "提示"
            }
          },
          {
            "name": "Delete",
            "payload": {
              "model": "ddic.form"
            },
            "type": "Form.delete"
          },
          {
            "payload": {},
            "name": "Back",
            "type": "Common.closeModal"
          }
        ],
        "icon": "icon-trash-2",
        "style": "danger",
        "title": "Delete"
      }
    ],
    "form": {
      "props": {},
      "sections": [
        {
          "columns": [
            {
              "width": 8,
              "name": "名称"
            },
            {
              "name": "主键",
              "width": 8
            },
            {
              "name": "关联模型",
              "width": 8
            },
            {
              "width": 8,
              "name": "关联表格"
            },
            {
              "name": "备注",
              "width": 8
            },
            {
              "name": "绑定选项",
              "width": 24
            }
          ]
        },
        {
          "columns": [
            {
              "width": 24,
              "name": "列表fields"
            }
          ]
        }
      ]
    },
    "primary": "id"
  },
  "fields": {
    "form": {
      "名称": {
        "bind": "name",
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ]
            }
          },
          "type": "Input"
        }
      },
      "主键": {
        "edit": {
          "props": {
            "defaultValue": "id",
            "itemProps": {
              "tooltip": "显示主键"
            }
          },
          "type": "Input"
        },
        "bind": "primary"
      },
      "关联模型": {
        "bind": "model_id",
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "表单关联的模型"
            },
            "xProps": {
              "$remote": {
                "query": {
                  "value": "id",
                  "model": "ddic.model",
                  "label": "name"
                },
                "process": "yao.component.SelectOptions"
              }
            }
          },
          "type": "Select"
        }
      },
      "列表fields": {
        "edit": {
          "type": "List",
          "props": {
            "name": "ddic.form.field",
            "showLabel": true
          }
        },
        "bind": "fields"
      },
      "关联表格": {
        "bind": "table_id",
        "edit": {
          "type": "Select",
          "props": {
            "xProps": {
              "$remote": {
                "query": {
                  "label": "name",
                  "value": "id",
                  "model": "ddic.table"
                },
                "process": "yao.component.SelectOptions"
              }
            },
            "itemProps": {
              "tooltip": "表单关联的表格"
            }
          }
        }
      },
      "备注": {
        "bind": "comment",
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "tooltip": "表注释",
              "rules": [
                {
                  "required": true
                }
              ]
            }
          }
        }
      },
      "绑定选项": {
        "bind": "bind_option",
        "edit": {
          "props": {
            "language": "json",
            "height": 200,
            "itemProps": {
              "tooltip": "绑定模型选项",
              "rules": [
                {
                  "required": true
                }
              ]
            }
          },
          "type": "CodeEditor"
        }
      }
    }
  },
  "name": "::Form"
}