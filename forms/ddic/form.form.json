{
  "layout": {
    "form": {
      "sections": [
        {
          "columns": [
            {
              "name": "名称",
              "width": 8
            },
            {
              "name": "主键",
              "width": 8
            },
            {
              "width": 8,
              "name": "关联模型"
            },
            {
              "width": 8,
              "name": "关联表格"
            },
            {
              "name": "备注",
              "width": 8
            },
            {
              "name": "绑定选项",
              "width": 24
            }
          ]
        },
        {
          "columns": [
            {
              "name": "列表fields",
              "width": 24
            }
          ]
        }
      ],
      "props": {}
    },
    "primary": "id",
    "actions": [
      {
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "type": "Studio.model",
            "payload": {
              "args": [
                "ddic.form"
              ],
              "method": "CreateOne"
            },
            "name": "StudioModel"
          },
          {
            "payload": {
              "title": "提示",
              "content": "处理完成"
            },
            "name": "Confirm",
            "type": "Common.confirm"
          }
        ],
        "title": "重新生成代码",
        "icon": "icon-layers"
      },
      {
        "showWhenView": true,
        "action": [
          {
            "payload": {},
            "name": "CloseModal",
            "type": "Common.closeModal"
          }
        ],
        "title": "返回",
        "icon": "icon-arrow-left",
        "showWhenAdd": true
      },
      {
        "style": "primary",
        "showWhenAdd": true,
        "action": [
          {
            "name": "Submit",
            "type": "Form.submit",
            "payload": {}
          },
          {
            "name": "Back",
            "type": "Common.closeModal",
            "payload": {}
          }
        ],
        "title": "保存",
        "icon": "icon-check"
      },
      {
        "icon": "icon-trash-2",
        "style": "danger",
        "title": "Delete",
        "action": [
          {
            "type": "Common.confirm",
            "payload": {
              "title": "提示",
              "content": "确认删除，删除后数据无法恢复？"
            },
            "name": "Confirm"
          },
          {
            "name": "Delete",
            "payload": {
              "model": "ddic.form"
            },
            "type": "Form.delete"
          },
          {
            "name": "Back",
            "type": "Common.closeModal",
            "payload": {}
          }
        ]
      }
    ]
  },
  "fields": {
    "form": {
      "名称": {
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ]
            }
          },
          "type": "Input"
        },
        "bind": "name"
      },
      "列表fields": {
        "bind": "fields",
        "edit": {
          "type": "List",
          "props": {
            "name": "ddic.form.field",
            "showLabel": true
          }
        }
      },
      "主键": {
        "bind": "primary",
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "显示主键"
            },
            "defaultValue": "id"
          },
          "type": "Input"
        }
      },
      "关联模型": {
        "edit": {
          "type": "Select",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "表单关联的模型"
            },
            "xProps": {
              "$remote": {
                "query": {
                  "model": "ddic.model",
                  "label": "name",
                  "value": "id"
                },
                "process": "yao.component.SelectOptions"
              }
            }
          }
        },
        "bind": "model_id"
      },
      "关联表格": {
        "edit": {
          "type": "Select",
          "props": {
            "xProps": {
              "$remote": {
                "query": {
                  "model": "ddic.table",
                  "label": "name",
                  "value": "id"
                },
                "process": "yao.component.SelectOptions"
              }
            },
            "itemProps": {
              "tooltip": "表单关联的表格"
            }
          }
        },
        "bind": "table_id"
      },
      "备注": {
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "表注释"
            }
          },
          "type": "Input"
        },
        "bind": "comment"
      },
      "绑定选项": {
        "edit": {
          "type": "CodeEditor",
          "props": {
            "height": 200,
            "language": "json",
            "itemProps": {
              "tooltip": "绑定模型选项",
              "rules": [
                {
                  "required": true
                }
              ]
            }
          },
          "compute": "scripts.ddic.compute.json.Edit"
        },
        "bind": "bind_option"
      }
    }
  },
  "name": "::Form",
  "action": {
    "bind": {
      "model": "ddic.form",
      "option": {
        "withs": {
          "model": {},
          "table": {},
          "fields": {}
        }
      }
    },
    "save": {
      "process": "scripts.ddic.form.Save"
    },
    "before:delete": "scripts.ddic.form.BeforeDelete"
  }
}