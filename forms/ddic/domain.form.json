{
  "layout": {
    "primary": "id",
    "actions": [
      {
        "icon": "icon-layers",
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "type": "Studio.model",
            "payload": {
              "args": [
                "ddic.domain"
              ],
              "method": "CreateOne"
            },
            "name": "StudioModel"
          },
          {
            "payload": {
              "content": "处理完成",
              "title": "提示"
            },
            "name": "Confirm",
            "type": "Common.confirm"
          }
        ],
        "title": "重新生成代码"
      },
      {
        "title": "返回",
        "icon": "icon-arrow-left",
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "type": "Common.closeModal",
            "payload": {},
            "name": "CloseModal"
          }
        ]
      },
      {
        "action": [
          {
            "name": "Submit",
            "type": "Form.submit",
            "payload": {}
          },
          {
            "payload": {},
            "name": "Back",
            "type": "Common.closeModal"
          }
        ],
        "title": "保存",
        "icon": "icon-check",
        "style": "primary",
        "showWhenAdd": true
      },
      {
        "style": "danger",
        "title": "Delete",
        "action": [
          {
            "type": "Common.confirm",
            "payload": {
              "content": "确认删除，删除后数据无法恢复？",
              "title": "提示"
            },
            "name": "Confirm"
          },
          {
            "name": "Delete",
            "payload": {
              "model": "ddic.domain"
            },
            "type": "Form.delete"
          },
          {
            "payload": {},
            "name": "Back",
            "type": "Common.closeModal"
          }
        ],
        "icon": "icon-trash-2"
      }
    ],
    "form": {
      "props": {},
      "sections": [
        {
          "columns": [
            {
              "name": "描述",
              "width": 8
            },
            {
              "name": "字段类型",
              "width": 8
            },
            {
              "name": "字段长度",
              "width": 8
            },
            {
              "name": "位数",
              "width": 8
            },
            {
              "width": 8,
              "name": "小数位位数"
            },
            {
              "name": "可选项",
              "width": 24
            },
            {
              "width": 24,
              "name": "校验规则"
            }
          ]
        },
        {
          "columns": [
            {
              "tabs": [],
              "width": 24,
              "name": "列表"
            }
          ]
        }
      ]
    }
  },
  "fields": {
    "form": {
      "字段长度": {
        "bind": "length",
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "字段长度，对string等类型字段有效"
            }
          },
          "type": "InputNumber"
        }
      },
      "位数": {
        "edit": {
          "type": "InputNumber",
          "props": {
            "itemProps": {
              "tooltip": "字段位数(含小数位)，对float、decimal等类型字段有效"
            }
          }
        },
        "bind": "precision"
      },
      "小数位位数": {
        "edit": {
          "type": "InputNumber",
          "props": {
            "itemProps": {
              "tooltip": "字段小数位位数，对float、decimal等类型字段有效"
            }
          }
        },
        "bind": "scale"
      },
      "可选项": {
        "edit": {
          "props": {
            "showLabel": true,
            "language": "json",
            "height": 200,
            "itemProps": {
              "tooltip": "字段的可选项，对enum类型字段有效"
            },
            "name": "ddic.option"
          },
          "compute": "scripts.ddic.compute.json.Edit",
          "type": "List"
        },
        "bind": "options"
      },
      "校验规则": {
        "edit": {
          "type": "List",
          "props": {
            "height": 200,
            "language": "json",
            "itemProps": {
              "tooltip": "字段校验规则"
            },
            "name": "ddic.validation",
            "showLabel": true
          },
          "compute": "scripts.ddic.compute.json.Edit"
        },
        "bind": "validations"
      },
      "描述": {
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ]
            }
          }
        },
        "bind": "name"
      },
      "字段类型": {
        "bind": "type",
        "edit": {
          "type": "Select",
          "props": {
            "itemProps": {
              "tooltip": "字段类型定义"
            },
            "xProps": {
              "$remote": {
                "query": {
                  "model": "ddic.model.column.type",
                  "label": "name",
                  "value": "type"
                },
                "process": "yao.component.SelectOptions"
              }
            }
          }
        }
      }
    }
  },
  "name": "::Domain",
  "action": {
    "bind": {
      "model": "ddic.domain",
      "option": {
        "withs": {}
      }
    }
  }
}