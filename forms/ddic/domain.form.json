{
  "action": {
    "bind": {
      "option": {
        "withs": {
          "field_type": {}
        }
      },
      "model": "ddic.domain"
    }
  },
  "layout": {
    "actions": [
      {
        "showWhenView": true,
        "action": [
          {
            "payload": {
              "method": "CreateOne",
              "args": [
                "ddic.domain"
              ]
            },
            "name": "StudioModel",
            "type": "Studio.model"
          },
          {
            "payload": {
              "title": "提示",
              "content": "处理完成"
            },
            "name": "Confirm",
            "type": "Common.confirm"
          }
        ],
        "title": "重新生成代码",
        "icon": "icon-layers",
        "showWhenAdd": true
      },
      {
        "showWhenView": true,
        "action": [
          {
            "payload": {},
            "name": "CloseModal",
            "type": "Common.closeModal"
          }
        ],
        "title": "返回",
        "icon": "icon-arrow-left",
        "showWhenAdd": true
      },
      {
        "action": [
          {
            "payload": {},
            "name": "Submit",
            "type": "Form.submit"
          },
          {
            "name": "Back",
            "type": "Common.closeModal",
            "payload": {}
          }
        ],
        "title": "保存",
        "icon": "icon-check",
        "style": "primary",
        "showWhenAdd": true
      },
      {
        "style": "danger",
        "title": "Delete",
        "action": [
          {
            "type": "Common.confirm",
            "payload": {
              "title": "提示",
              "content": "确认删除，删除后数据无法恢复？"
            },
            "name": "Confirm"
          },
          {
            "payload": {
              "model": "ddic.domain"
            },
            "type": "Form.delete",
            "name": "Delete"
          },
          {
            "name": "Back",
            "type": "Common.closeModal",
            "payload": {}
          }
        ],
        "icon": "icon-trash-2"
      }
    ],
    "form": {
      "props": {},
      "sections": [
        {
          "columns": [
            {
              "name": "描述",
              "width": 8
            },
            {
              "name": "字段类型",
              "width": 8
            },
            {
              "name": "字段长度",
              "width": 8
            },
            {
              "name": "位数",
              "width": 8
            },
            {
              "name": "小数位位数",
              "width": 8
            },
            {
              "name": "许可值",
              "width": 24
            },
            {
              "width": 24,
              "name": "校验规则"
            }
          ]
        }
      ]
    },
    "primary": "id"
  },
  "fields": {
    "form": {
      "小数位位数": {
        "bind": "scale",
        "edit": {
          "type": "InputNumber",
          "props": {
            "itemProps": {
              "tooltip": "字段小数位位数，对float、decimal等类型字段有效"
            }
          }
        }
      },
      "许可值": {
        "bind": "option",
        "edit": {
          "props": {
            "language": "json",
            "itemProps": {
              "tooltip": "字段许可值，对enum类型字段有效"
            },
            "name": "ddic.option",
            "showLabel": true,
            "height": 200
          },
          "compute": "scripts.ddic.compute.json.Edit",
          "type": "List"
        }
      },
      "校验规则": {
        "edit": {
          "type": "CodeEditor",
          "props": {
            "itemProps": {
              "tooltip": "字段校验规则"
            },
            "height": 200,
            "language": "json"
          },
          "compute": "scripts.ddic.compute.json.Edit"
        },
        "bind": "validations"
      },
      "描述": {
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ]
            }
          }
        },
        "bind": "name"
      },
      "字段类型": {
        "bind": "field_type_id",
        "edit": {
          "type": "Select",
          "props": {
            "itemProps": {
              "tooltip": "字段类型定义"
            },
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "value": "id",
                  "model": "ddic.model.column.type",
                  "label": "name"
                }
              }
            }
          }
        }
      },
      "字段长度": {
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "字段长度，对string等类型字段有效"
            }
          },
          "type": "InputNumber"
        },
        "bind": "length"
      },
      "位数": {
        "edit": {
          "type": "InputNumber",
          "props": {
            "itemProps": {
              "tooltip": "字段位数(含小数位)，对float、decimal等类型字段有效"
            }
          }
        },
        "bind": "precision"
      }
    }
  },
  "name": "::Domain"
}