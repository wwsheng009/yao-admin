{
  "layout": {
    "primary": "id",
    "actions": [
      {
        "action": [
          {
            "payload": {
              "args": [
                "ddic.domain"
              ],
              "method": "CreateOne"
            },
            "name": "StudioModel",
            "type": "Studio.model"
          },
          {
            "name": "Confirm",
            "type": "Common.confirm",
            "payload": {
              "title": "提示",
              "content": "处理完成"
            }
          }
        ],
        "title": "重新生成代码",
        "icon": "icon-layers",
        "showWhenAdd": true,
        "showWhenView": true
      },
      {
        "title": "返回",
        "icon": "icon-arrow-left",
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "name": "CloseModal",
            "type": "Common.closeModal",
            "payload": {}
          }
        ]
      },
      {
        "action": [
          {
            "name": "Submit",
            "type": "Form.submit",
            "payload": {}
          },
          {
            "type": "Common.closeModal",
            "payload": {},
            "name": "Back"
          }
        ],
        "title": "保存",
        "icon": "icon-check",
        "style": "primary",
        "showWhenAdd": true
      },
      {
        "icon": "icon-trash-2",
        "style": "danger",
        "title": "Delete",
        "action": [
          {
            "type": "Common.confirm",
            "payload": {
              "title": "提示",
              "content": "确认删除，删除后数据无法恢复？"
            },
            "name": "Confirm"
          },
          {
            "name": "Delete",
            "payload": {
              "model": "ddic.domain"
            },
            "type": "Form.delete"
          },
          {
            "name": "Back",
            "type": "Common.closeModal",
            "payload": {}
          }
        ]
      }
    ],
    "form": {
      "props": {},
      "sections": [
        {
          "columns": [
            {
              "width": 8,
              "name": "描述"
            },
            {
              "name": "字段类型",
              "width": 8
            },
            {
              "name": "字段长度",
              "width": 8
            },
            {
              "name": "位数",
              "width": 8
            },
            {
              "name": "小数位位数",
              "width": 8
            },
            {
              "name": "是否为空",
              "width": 8
            },
            {
              "name": "默认值",
              "width": 8
            },
            {
              "name": "加密方式",
              "width": 8
            },
            {
              "name": "许可值",
              "width": 24
            },
            {
              "name": "校验规则",
              "width": 24
            }
          ]
        }
      ]
    }
  },
  "fields": {
    "form": {
      "加密方式": {
        "edit": {
          "type": "Select",
          "props": {
            "itemProps": {
              "tooltip": "字段加密存储方式。许可值 `AES(MySQL Only)`, `PASSWORD`"
            },
            "options": [
              {
                "value": "",
                "label": "::"
              },
              {
                "value": "PASSWORD",
                "label": "::PASSWORD"
              },
              {
                "value": "AES",
                "label": "::AES"
              }
            ],
            "placeholder": "请选择加密方式"
          }
        },
        "bind": "crypt"
      },
      "字段类型": {
        "bind": "field_type_id",
        "edit": {
          "type": "Select",
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "label": "name",
                  "value": "id",
                  "model": "ddic.model.column.type"
                }
              }
            },
            "itemProps": {
              "tooltip": "字段类型定义"
            }
          }
        }
      },
      "校验规则": {
        "bind": "validations",
        "edit": {
          "type": "CodeEditor",
          "props": {
            "language": "json",
            "height": 200,
            "itemProps": {
              "tooltip": "字段校验规则"
            }
          }
        }
      },
      "描述": {
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ]
            }
          },
          "type": "Input"
        },
        "bind": "name"
      },
      "默认值": {
        "bind": "default",
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "tooltip": "字段默认值"
            }
          }
        }
      },
      "位数": {
        "bind": "precision",
        "edit": {
          "type": "InputNumber",
          "props": {
            "itemProps": {
              "tooltip": "字段位数(含小数位)，对float、decimal等类型字段有效"
            }
          }
        }
      },
      "是否为空": {
        "bind": "nullable",
        "edit": {
          "props": {
            "defaultValue": 0,
            "options": [
              {
                "label": "是",
                "value": 1
              },
              {
                "label": "否",
                "value": 0
              }
            ],
            "itemProps": {
              "tooltip": "字段是否可以为空，默认为 false"
            }
          },
          "type": "RadioGroup"
        }
      },
      "许可值": {
        "edit": {
          "props": {
            "height": 200,
            "language": "json",
            "itemProps": {
              "tooltip": "字段许可值，对enum类型字段有效"
            }
          },
          "type": "CodeEditor"
        },
        "bind": "option"
      },
      "字段长度": {
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "字段长度，对string等类型字段有效"
            }
          },
          "type": "InputNumber"
        },
        "bind": "length"
      },
      "小数位位数": {
        "bind": "scale",
        "edit": {
          "type": "InputNumber",
          "props": {
            "itemProps": {
              "tooltip": "字段小数位位数，对float、decimal等类型字段有效"
            }
          }
        }
      }
    }
  },
  "name": "::Domain",
  "action": {
    "bind": {
      "option": {
        "withs": {
          "field_type": {}
        }
      },
      "model": "ddic.domain"
    }
  }
}