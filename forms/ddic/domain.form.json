{
  "name": "::Domain",
  "action": {
    "bind": {
      "model": "ddic.domain",
      "option": {
        "withs": {}
      }
    }
  },
  "layout": {
    "primary": "id",
    "actions": [
      {
        "action": [
          {
            "payload": {},
            "name": "Fullscreen",
            "type": "Form.fullscreen"
          }
        ],
        "title": "切换全屏",
        "icon": "icon-maximize-2",
        "showWhenAdd": true,
        "showWhenView": true
      },
      {
        "action": [
          {
            "name": "StudioModel",
            "type": "Studio.model",
            "payload": {
              "args": [
                "ddic.domain"
              ],
              "method": "CreateOne"
            }
          },
          {
            "payload": {
              "content": "处理完成",
              "title": "提示"
            },
            "name": "Confirm",
            "type": "Common.confirm"
          }
        ],
        "title": "重新生成代码",
        "icon": "icon-layers",
        "showWhenAdd": true,
        "showWhenView": true
      },
      {
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "name": "CloseModal",
            "type": "Common.closeModal",
            "payload": {}
          }
        ],
        "title": "返回",
        "icon": "icon-arrow-left"
      },
      {
        "title": "保存",
        "icon": "icon-check",
        "style": "primary",
        "showWhenAdd": true,
        "action": [
          {
            "type": "Form.submit",
            "payload": {},
            "name": "Submit"
          },
          {
            "name": "Back",
            "type": "Common.closeModal",
            "payload": {}
          }
        ]
      },
      {
        "title": "Delete",
        "action": [
          {
            "name": "Confirm",
            "type": "Common.confirm",
            "payload": {
              "content": "确认删除，删除后数据无法恢复？",
              "title": "提示"
            }
          },
          {
            "payload": {
              "model": "ddic.domain"
            },
            "type": "Form.delete",
            "name": "Delete"
          },
          {
            "type": "Common.closeModal",
            "payload": {},
            "name": "Back"
          }
        ],
        "icon": "icon-trash-2",
        "style": "danger"
      }
    ],
    "form": {
      "props": {},
      "sections": [
        {
          "columns": [
            {
              "name": "描述",
              "width": 8
            },
            {
              "width": 8,
              "name": "字段类型"
            },
            {
              "name": "字段长度",
              "width": 8
            },
            {
              "width": 8,
              "name": "位数"
            },
            {
              "width": 8,
              "name": "小数位位数"
            },
            {
              "width": 24,
              "name": "可选项"
            }
          ]
        },
        {
          "columns": [
            {
              "width": 24,
              "name": "列表",
              "tabs": []
            }
          ]
        }
      ]
    }
  },
  "fields": {
    "form": {
      "小数位位数": {
        "bind": "scale",
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "字段小数位位数，对float、decimal等类型字段有效"
            }
          },
          "type": "InputNumber"
        }
      },
      "可选项": {
        "edit": {
          "type": "List",
          "props": {
            "name": "ddic.option",
            "language": "json",
            "height": 200,
            "itemProps": {
              "tooltip": "字段的可选项，对enum类型字段有效"
            },
            "showLabel": true
          }
        },
        "bind": "options"
      },
      "描述": {
        "bind": "name",
        "edit": {
          "type": "Input",
          "props": {}
        }
      },
      "字段类型": {
        "edit": {
          "type": "Select",
          "props": {
            "itemProps": {
              "tooltip": "字段类型定义"
            },
            "xProps": {
              "$remote": {
                "query": {
                  "value": "type",
                  "model": "ddic.model.column.type",
                  "label": "name"
                },
                "process": "yao.component.SelectOptions"
              }
            }
          }
        },
        "bind": "type"
      },
      "字段长度": {
        "bind": "length",
        "edit": {
          "type": "InputNumber",
          "props": {
            "itemProps": {
              "tooltip": "字段长度，对string等类型字段有效"
            }
          }
        }
      },
      "位数": {
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "字段位数(含小数位)，对float、decimal等类型字段有效"
            }
          },
          "type": "InputNumber"
        },
        "bind": "precision"
      }
    }
  }
}