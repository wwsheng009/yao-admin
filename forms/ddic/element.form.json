{
  "fields": {
    "form": {
      "域": {
        "edit": {
          "type": "Select",
          "props": {
            "itemProps": {
              "tooltip": "域定义"
            },
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "model": "ddic.domain",
                  "label": "name",
                  "value": "id"
                }
              }
            }
          }
        },
        "bind": "domain_id"
      },
      "字段类型": {
        "bind": "type",
        "edit": {
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "model": "ddic.model.column.type",
                  "label": "name",
                  "value": "type"
                }
              }
            },
            "itemProps": {
              "tooltip": "字段类型定义"
            }
          },
          "type": "Select"
        }
      },
      "字段长度": {
        "bind": "length",
        "edit": {
          "type": "InputNumber",
          "props": {
            "itemProps": {
              "tooltip": "字段长度，对 `string` 等类型字段有效"
            }
          }
        }
      },
      "字段位数(含小数位)": {
        "bind": "precision",
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "字段位数(含小数位)，对 `float`、`decimal` 等类型字段有效"
            }
          },
          "type": "InputNumber"
        }
      },
      "字段小数位位数": {
        "bind": "scale",
        "edit": {
          "type": "InputNumber",
          "props": {
            "itemProps": {
              "tooltip": "字段小数位位数，对 `float`、`decimal` 等类型字段有效"
            }
          }
        }
      },
      "校验规则": {
        "bind": "validations",
        "edit": {
          "type": "List",
          "props": {
            "name": "ddic.validation",
            "showLabel": true,
            "language": "json",
            "height": 200,
            "itemProps": {
              "tooltip": "字段校验规则"
            }
          }
        }
      },
      "描述": {
        "bind": "name",
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "max": 80,
                  "required": true,
                  "min": 2,
                  "type": "string"
                }
              ]
            }
          },
          "type": "Input"
        }
      }
    }
  },
  "name": "::Data Element",
  "action": {
    "bind": {
      "option": {
        "withs": {
          "domain": {}
        }
      },
      "model": "ddic.element"
    }
  },
  "layout": {
    "form": {
      "props": {
        "reference": {
          "flatContent": {
            "defaultOpen": false,
            "payload": {
              "Form": {
                "type": "edit",
                "model": "ddic.domain",
                "id": "{{domain_id}}"
              }
            },
            "name": "域"
          }
        }
      },
      "sections": [
        {
          "columns": [
            {
              "name": "描述",
              "width": 8
            },
            {
              "name": "域",
              "width": 8
            },
            {
              "name": "字段类型",
              "width": 8
            },
            {
              "width": 8,
              "name": "字段长度"
            },
            {
              "name": "字段位数(含小数位)",
              "width": 8
            },
            {
              "width": 8,
              "name": "字段小数位位数"
            },
            {
              "width": 24,
              "name": "校验规则"
            }
          ]
        },
        {
          "columns": [
            {
              "width": 24,
              "name": "列表",
              "tabs": []
            }
          ]
        }
      ]
    },
    "primary": "id",
    "actions": [
      {
        "title": "切换全屏",
        "icon": "icon-maximize-2",
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "payload": {},
            "name": "Fullscreen",
            "type": "Form.fullscreen"
          }
        ]
      },
      {
        "action": [
          {
            "type": "Studio.model",
            "payload": {
              "args": [
                "ddic.element"
              ],
              "method": "CreateOne"
            },
            "name": "StudioModel"
          },
          {
            "name": "Confirm",
            "type": "Common.confirm",
            "payload": {
              "content": "处理完成",
              "title": "提示"
            }
          }
        ],
        "title": "重新生成代码",
        "icon": "icon-layers",
        "showWhenAdd": true,
        "showWhenView": true
      },
      {
        "showWhenView": true,
        "action": [
          {
            "type": "Common.closeModal",
            "payload": {},
            "name": "CloseModal"
          }
        ],
        "title": "返回",
        "icon": "icon-arrow-left",
        "showWhenAdd": true
      },
      {
        "title": "保存",
        "icon": "icon-check",
        "style": "primary",
        "showWhenAdd": true,
        "action": [
          {
            "name": "Submit",
            "type": "Form.submit",
            "payload": {}
          },
          {
            "payload": {},
            "name": "Back",
            "type": "Common.closeModal"
          }
        ]
      },
      {
        "icon": "icon-trash-2",
        "style": "danger",
        "title": "Delete",
        "action": [
          {
            "type": "Common.confirm",
            "payload": {
              "title": "提示",
              "content": "确认删除，删除后数据无法恢复？"
            },
            "name": "Confirm"
          },
          {
            "name": "Delete",
            "payload": {
              "model": "ddic.element"
            },
            "type": "Form.delete"
          },
          {
            "type": "Common.closeModal",
            "payload": {},
            "name": "Back"
          }
        ]
      }
    ]
  }
}