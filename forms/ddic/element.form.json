{
  "name": "::Data Element",
  "action": {
    "bind": {
      "model": "ddic.element",
      "option": {
        "withs": {
          "field_type": {},
          "domain": {}
        }
      }
    }
  },
  "layout": {
    "actions": [
      {
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "payload": {
              "method": "CreateOne",
              "args": [
                "ddic.element"
              ]
            },
            "name": "StudioModel",
            "type": "Studio.model"
          },
          {
            "payload": {
              "title": "提示",
              "content": "处理完成"
            },
            "name": "Confirm",
            "type": "Common.confirm"
          }
        ],
        "title": "重新生成代码",
        "icon": "icon-layers"
      },
      {
        "icon": "icon-arrow-left",
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "name": "CloseModal",
            "type": "Common.closeModal",
            "payload": {}
          }
        ],
        "title": "返回"
      },
      {
        "title": "保存",
        "icon": "icon-check",
        "style": "primary",
        "showWhenAdd": true,
        "action": [
          {
            "payload": {},
            "name": "Submit",
            "type": "Form.submit"
          },
          {
            "name": "Back",
            "type": "Common.closeModal",
            "payload": {}
          }
        ]
      },
      {
        "icon": "icon-trash-2",
        "style": "danger",
        "title": "Delete",
        "action": [
          {
            "type": "Common.confirm",
            "payload": {
              "content": "确认删除，删除后数据无法恢复？",
              "title": "提示"
            },
            "name": "Confirm"
          },
          {
            "name": "Delete",
            "payload": {
              "model": "ddic.element"
            },
            "type": "Form.delete"
          },
          {
            "payload": {},
            "name": "Back",
            "type": "Common.closeModal"
          }
        ]
      }
    ],
    "form": {
      "props": {},
      "sections": [
        {
          "columns": [
            {
              "width": 8,
              "name": "描述"
            },
            {
              "name": "域",
              "width": 8
            },
            {
              "width": 8,
              "name": "字段类型"
            },
            {
              "name": "字段长度",
              "width": 8
            },
            {
              "width": 8,
              "name": "字段位数(含小数位)"
            },
            {
              "name": "字段小数位位数",
              "width": 8
            },
            {
              "name": "是否为空",
              "width": 8
            },
            {
              "name": "字段默认值",
              "width": 8
            },
            {
              "name": "加密方式",
              "width": 8
            },
            {
              "name": "字段许可值",
              "width": 24
            },
            {
              "name": "字段校验规则",
              "width": 24
            }
          ]
        }
      ]
    },
    "primary": "id"
  },
  "fields": {
    "form": {
      "域": {
        "edit": {
          "type": "Select",
          "props": {
            "xProps": {
              "$remote": {
                "query": {
                  "model": "ddic.domain",
                  "label": "name",
                  "value": "id"
                },
                "process": "yao.component.SelectOptions"
              }
            },
            "itemProps": {
              "tooltip": "域定义"
            }
          }
        },
        "bind": "domain_id"
      },
      "字段位数(含小数位)": {
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "字段位数(含小数位)，对 `float`、`decimal` 等类型字段有效"
            }
          },
          "type": "InputNumber"
        },
        "bind": "precision"
      },
      "字段许可值": {
        "edit": {
          "type": "CodeEditor",
          "props": {
            "height": 200,
            "itemProps": {
              "tooltip": "字段许可值，对 `enum` 类型字段有效"
            },
            "language": "json"
          },
          "compute": "scripts.ddic.compute.json.Edit"
        },
        "bind": "option"
      },
      "字段默认值": {
        "bind": "default",
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "tooltip": "string|number|float|字段默认值"
            }
          }
        }
      },
      "加密方式": {
        "edit": {
          "props": {
            "options": [
              {
                "label": "::PASSWORD",
                "value": "PASSWORD"
              },
              {
                "label": "::AES",
                "value": "AES"
              }
            ],
            "itemProps": {
              "tooltip": "字段加密存储方式。许可值 `AES(MySQL Only)`, `PASSWORD`"
            },
            "placeholder": "请选择加密方式"
          },
          "type": "Select"
        },
        "bind": "crypt"
      },
      "字段校验规则": {
        "bind": "validations",
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "字段校验规则"
            },
            "language": "json",
            "height": 200
          },
          "compute": "scripts.ddic.compute.json.Edit",
          "type": "CodeEditor"
        }
      },
      "描述": {
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ]
            }
          },
          "type": "Input"
        },
        "bind": "name"
      },
      "字段长度": {
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "字段长度，对 `string` 等类型字段有效"
            }
          },
          "type": "InputNumber"
        },
        "bind": "length"
      },
      "字段类型": {
        "bind": "field_type_id",
        "edit": {
          "type": "Select",
          "props": {
            "xProps": {
              "$remote": {
                "query": {
                  "value": "id",
                  "model": "ddic.model.column.type",
                  "label": "name"
                },
                "process": "yao.component.SelectOptions"
              }
            },
            "itemProps": {
              "tooltip": "字段类型定义"
            }
          }
        }
      },
      "是否为空": {
        "edit": {
          "type": "RadioGroup",
          "props": {
            "options": [
              {
                "value": 1,
                "label": "是"
              },
              {
                "label": "否",
                "value": 0
              }
            ],
            "itemProps": {
              "tooltip": "字段是否可以为空，默认为 false"
            },
            "defaultValue": 0
          }
        },
        "bind": "nullable"
      },
      "字段小数位位数": {
        "bind": "scale",
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "字段小数位位数，对 `float`、`decimal` 等类型字段有效"
            }
          },
          "type": "InputNumber"
        }
      }
    }
  }
}