{
  "name": "::Table Filter Field",
  "action": {
    "bind": {
      "model": "ddic.table.filter",
      "option": {
        "withs": {
          "table": {}
        }
      }
    }
  },
  "layout": {
    "primary": "id",
    "actions": [
      {
        "showWhenView": true,
        "action": [
          {
            "name": "StudioModel",
            "type": "Studio.model",
            "payload": {
              "method": "CreateOne",
              "args": [
                "ddic.table.filter"
              ]
            }
          },
          {
            "name": "Confirm",
            "type": "Common.confirm",
            "payload": {
              "content": "处理完成",
              "title": "提示"
            }
          }
        ],
        "title": "重新生成代码",
        "icon": "icon-layers",
        "showWhenAdd": true
      },
      {
        "icon": "icon-arrow-left",
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "name": "CloseModal",
            "type": "Common.closeModal",
            "payload": {}
          }
        ],
        "title": "返回"
      },
      {
        "title": "保存",
        "icon": "icon-check",
        "style": "primary",
        "showWhenAdd": true,
        "action": [
          {
            "name": "Submit",
            "type": "Form.submit",
            "payload": {}
          },
          {
            "name": "Back",
            "type": "Common.closeModal",
            "payload": {}
          }
        ]
      },
      {
        "style": "danger",
        "title": "Delete",
        "action": [
          {
            "name": "Confirm",
            "type": "Common.confirm",
            "payload": {
              "content": "确认删除，删除后数据无法恢复？",
              "title": "提示"
            }
          },
          {
            "type": "Form.delete",
            "name": "Delete",
            "payload": {
              "model": "ddic.table.filter"
            }
          },
          {
            "name": "Back",
            "type": "Common.closeModal",
            "payload": {}
          }
        ],
        "icon": "icon-trash-2"
      }
    ],
    "form": {
      "props": {},
      "sections": [
        {
          "columns": [
            {
              "name": "表格标识",
              "width": 8
            },
            {
              "name": "名称",
              "width": 8
            },
            {
              "name": "绑定字段",
              "width": 8
            },
            {
              "width": 8,
              "name": "编辑类型"
            },
            {
              "name": "查看类型",
              "width": 8
            },
            {
              "name": "描述",
              "width": 8
            },
            {
              "name": "显示长度",
              "width": 8
            },
            {
              "name": "是否必输",
              "width": 8
            },
            {
              "width": 8,
              "name": "默认值"
            },
            {
              "name": "启用",
              "width": 8
            },
            {
              "name": "是否显示",
              "width": 8
            },
            {
              "width": 8,
              "name": "是否编辑"
            },
            {
              "width": 24,
              "name": "编辑属性"
            },
            {
              "name": "查看属性",
              "width": 24
            },
            {
              "width": 24,
              "name": "选项"
            }
          ]
        }
      ]
    }
  },
  "fields": {
    "form": {
      "编辑类型": {
        "bind": "edit_type",
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "编辑控件类型"
            }
          }
        }
      },
      "是否必输": {
        "bind": "required",
        "edit": {
          "type": "RadioGroup",
          "props": {
            "defaultValue": 0,
            "options": [
              {
                "label": "是",
                "value": 1
              },
              {
                "label": "否",
                "value": 0
              }
            ],
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "字段是否是否必输"
            }
          }
        }
      },
      "启用": {
        "bind": "enable",
        "edit": {
          "type": "RadioGroup",
          "props": {
            "defaultValue": 1,
            "options": [
              {
                "value": 1,
                "label": "是"
              },
              {
                "label": "否",
                "value": 0
              }
            ],
            "itemProps": {
              "tooltip": "启用"
            }
          }
        }
      },
      "查看类型": {
        "bind": "view_type",
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "查看控件类型"
            }
          }
        }
      },
      "显示长度": {
        "bind": "width",
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "字段显示长度",
              "rules": [
                {
                  "required": true
                }
              ]
            }
          },
          "type": "InputNumber"
        }
      },
      "描述": {
        "bind": "description",
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "字段介绍"
            }
          },
          "type": "Input"
        }
      },
      "是否编辑": {
        "edit": {
          "type": "RadioGroup",
          "props": {
            "itemProps": {
              "tooltip": "是否编辑"
            },
            "defaultValue": 1,
            "options": [
              {
                "label": "是",
                "value": 1
              },
              {
                "value": 0,
                "label": "否"
              }
            ]
          }
        },
        "bind": "is_edit"
      },
      "编辑属性": {
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "编辑控件属性"
            },
            "language": "json",
            "height": 200
          },
          "type": "CodeEditor"
        },
        "bind": "edit_props"
      },
      "绑定字段": {
        "bind": "bind",
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "绑定的模型字段"
            }
          }
        }
      },
      "选项": {
        "bind": "option",
        "edit": {
          "props": {
            "language": "json",
            "itemProps": {
              "tooltip": "字段许可值",
              "rules": [
                {
                  "required": true
                }
              ]
            },
            "height": 200
          },
          "type": "CodeEditor"
        }
      },
      "是否显示": {
        "bind": "is_dispaly",
        "edit": {
          "props": {
            "options": [
              {
                "label": "是",
                "value": 1
              },
              {
                "label": "否",
                "value": 0
              }
            ],
            "itemProps": {
              "tooltip": "是否显示"
            },
            "defaultValue": 1
          },
          "type": "RadioGroup"
        }
      },
      "名称": {
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "字段名称",
              "rules": [
                {
                  "required": true
                }
              ]
            }
          },
          "type": "Input"
        },
        "bind": "name"
      },
      "默认值": {
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "字段默认值"
            }
          },
          "type": "Input"
        },
        "bind": "default"
      },
      "查看属性": {
        "bind": "view_props",
        "edit": {
          "props": {
            "height": 200,
            "language": "json",
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "查看控件属性"
            }
          },
          "type": "CodeEditor"
        }
      },
      "表格标识": {
        "bind": "table_id",
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "字段所属的表格"
            },
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "label": "name",
                  "value": "id",
                  "model": "ddic.table"
                }
              }
            }
          },
          "type": "Select"
        }
      }
    }
  }
}