{
  "layout": {
    "actions": [
      {
        "icon": "icon-maximize-2",
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "type": "Form.fullscreen",
            "payload": {},
            "name": "Fullscreen"
          }
        ],
        "title": "切换全屏"
      },
      {
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "name": "StudioModel",
            "type": "Studio.model",
            "payload": {
              "method": "CreateOne",
              "args": [
                "ddic.table.filter"
              ]
            }
          },
          {
            "payload": {
              "content": "处理完成",
              "title": "提示"
            },
            "name": "Confirm",
            "type": "Common.confirm"
          }
        ],
        "title": "重新生成代码",
        "icon": "icon-layers"
      },
      {
        "showWhenView": true,
        "action": [
          {
            "payload": {},
            "name": "CloseModal",
            "type": "Common.closeModal"
          }
        ],
        "title": "返回",
        "icon": "icon-arrow-left",
        "showWhenAdd": true
      },
      {
        "style": "primary",
        "showWhenAdd": true,
        "action": [
          {
            "name": "Submit",
            "type": "Form.submit",
            "payload": {}
          },
          {
            "type": "Common.closeModal",
            "payload": {},
            "name": "Back"
          }
        ],
        "title": "保存",
        "icon": "icon-check"
      },
      {
        "title": "Delete",
        "action": [
          {
            "type": "Common.confirm",
            "payload": {
              "title": "提示",
              "content": "确认删除，删除后数据无法恢复？"
            },
            "name": "Confirm"
          },
          {
            "type": "Form.delete",
            "name": "Delete",
            "payload": {
              "model": "ddic.table.filter"
            }
          },
          {
            "name": "Back",
            "type": "Common.closeModal",
            "payload": {}
          }
        ],
        "icon": "icon-trash-2",
        "style": "danger"
      }
    ],
    "form": {
      "props": {
        "reference": {
          "flatContent": {
            "payload": {
              "Form": {
                "model": "ddic.table",
                "id": "{{table_id}}",
                "type": "edit"
              }
            },
            "name": "table",
            "defaultOpen": false
          }
        }
      },
      "sections": [
        {
          "columns": [
            {
              "name": "表格标识",
              "width": 8
            },
            {
              "name": "名称",
              "width": 8
            },
            {
              "name": "绑定字段",
              "width": 8
            },
            {
              "width": 8,
              "name": "编辑类型"
            },
            {
              "width": 8,
              "name": "查看类型"
            },
            {
              "name": "显示长度",
              "width": 8
            },
            {
              "name": "是否必输",
              "width": 8
            },
            {
              "width": 8,
              "name": "默认值"
            },
            {
              "name": "启用",
              "width": 8
            },
            {
              "name": "是否显示",
              "width": 8
            },
            {
              "width": 8,
              "name": "是否编辑"
            },
            {
              "width": 24,
              "name": "编辑属性"
            },
            {
              "width": 24,
              "name": "查看属性"
            },
            {
              "width": 24,
              "name": "选项"
            }
          ]
        },
        {
          "columns": [
            {
              "tabs": [],
              "width": 24,
              "name": "列表"
            }
          ]
        }
      ]
    },
    "primary": "id"
  },
  "fields": {
    "form": {
      "默认值": {
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "字段默认值"
            }
          },
          "type": "Input"
        },
        "bind": "default"
      },
      "查看属性": {
        "bind": "view_props",
        "edit": {
          "type": "CodeEditor",
          "props": {
            "height": 200,
            "itemProps": {
              "tooltip": "查看控件属性"
            },
            "language": "json"
          }
        }
      },
      "选项": {
        "bind": "option",
        "edit": {
          "props": {
            "height": 200,
            "itemProps": {
              "tooltip": "字段许可值"
            },
            "language": "json"
          },
          "type": "CodeEditor"
        }
      },
      "名称": {
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "字段名称"
            }
          },
          "type": "Input"
        },
        "bind": "name"
      },
      "是否编辑": {
        "edit": {
          "props": {
            "options": [
              {
                "value": 1,
                "label": "是"
              },
              {
                "value": 0,
                "label": "否"
              }
            ],
            "itemProps": {
              "tooltip": "是否编辑"
            },
            "defaultValue": 1,
            "value": 1
          },
          "type": "RadioGroup"
        },
        "bind": "is_edit"
      },
      "编辑类型": {
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "编辑控件类型"
            }
          },
          "type": "Input"
        },
        "bind": "edit_type"
      },
      "编辑属性": {
        "bind": "edit_props",
        "edit": {
          "type": "CodeEditor",
          "props": {
            "itemProps": {
              "tooltip": "编辑控件属性"
            },
            "language": "json",
            "height": 200
          }
        }
      },
      "绑定字段": {
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "绑定的模型字段"
            }
          },
          "type": "Input"
        },
        "bind": "bind"
      },
      "查看类型": {
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "查看控件类型"
            }
          },
          "type": "Input"
        },
        "bind": "view_type"
      },
      "是否必输": {
        "bind": "required",
        "edit": {
          "props": {
            "defaultValue": 0,
            "value": 0,
            "options": [
              {
                "value": 1,
                "label": "是"
              },
              {
                "label": "否",
                "value": 0
              }
            ],
            "itemProps": {
              "tooltip": "字段是否是否必输"
            }
          },
          "type": "RadioGroup"
        }
      },
      "显示长度": {
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "字段显示长度"
            }
          },
          "type": "InputNumber"
        },
        "bind": "width"
      },
      "表格标识": {
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "字段所属的表格"
            },
            "xProps": {
              "$remote": {
                "query": {
                  "value": "id",
                  "model": "ddic.table",
                  "label": "name"
                },
                "process": "yao.component.SelectOptions"
              }
            }
          },
          "type": "Select"
        },
        "bind": "table_id"
      },
      "启用": {
        "edit": {
          "type": "RadioGroup",
          "props": {
            "itemProps": {
              "tooltip": "启用"
            },
            "defaultValue": 1,
            "value": 1,
            "options": [
              {
                "value": 1,
                "label": "是"
              },
              {
                "value": 0,
                "label": "否"
              }
            ]
          }
        },
        "bind": "enable"
      },
      "是否显示": {
        "bind": "is_dispaly",
        "edit": {
          "type": "RadioGroup",
          "props": {
            "value": 1,
            "options": [
              {
                "label": "是",
                "value": 1
              },
              {
                "value": 0,
                "label": "否"
              }
            ],
            "itemProps": {
              "tooltip": "是否显示"
            },
            "defaultValue": 1
          }
        }
      }
    }
  },
  "name": "::Table Filter Field",
  "action": {
    "bind": {
      "model": "ddic.table.filter",
      "option": {
        "withs": {
          "table": {}
        }
      }
    }
  }
}