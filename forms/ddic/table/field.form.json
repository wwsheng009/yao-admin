{
  "name": "::Table Field",
  "action": {
    "bind": {
      "option": {
        "withs": {
          "table": {}
        }
      },
      "model": "ddic.table.field"
    }
  },
  "layout": {
    "primary": "id",
    "actions": [
      {
        "icon": "icon-maximize-2",
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "type": "Form.fullscreen",
            "payload": {},
            "name": "Fullscreen"
          }
        ],
        "title": "切换全屏"
      },
      {
        "title": "重新生成代码",
        "icon": "icon-layers",
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "type": "Studio.model",
            "payload": {
              "method": "CreateOne",
              "args": [
                "ddic.table.field"
              ]
            },
            "name": "StudioModel"
          },
          {
            "type": "Common.confirm",
            "payload": {
              "content": "处理完成",
              "title": "提示"
            },
            "name": "Confirm"
          }
        ]
      },
      {
        "showWhenView": true,
        "action": [
          {
            "payload": {},
            "name": "CloseModal",
            "type": "Common.closeModal"
          }
        ],
        "title": "返回",
        "icon": "icon-arrow-left",
        "showWhenAdd": true
      },
      {
        "showWhenAdd": true,
        "action": [
          {
            "name": "Submit",
            "type": "Form.submit",
            "payload": {}
          },
          {
            "payload": {},
            "name": "Back",
            "type": "Common.closeModal"
          }
        ],
        "title": "保存",
        "icon": "icon-check",
        "style": "primary"
      },
      {
        "icon": "icon-trash-2",
        "style": "danger",
        "title": "Delete",
        "action": [
          {
            "type": "Common.confirm",
            "payload": {
              "content": "确认删除，删除后数据无法恢复？",
              "title": "提示"
            },
            "name": "Confirm"
          },
          {
            "name": "Delete",
            "payload": {
              "model": "ddic.table.field"
            },
            "type": "Form.delete"
          },
          {
            "type": "Common.closeModal",
            "payload": {},
            "name": "Back"
          }
        ]
      }
    ],
    "form": {
      "props": {
        "reference": {
          "flatContent": {
            "payload": {
              "Form": {
                "type": "edit",
                "model": "ddic.table",
                "id": "{{table_id}}"
              }
            },
            "name": "table",
            "defaultOpen": false
          }
        }
      },
      "sections": [
        {
          "columns": [
            {
              "width": 8,
              "name": "表格标识"
            },
            {
              "name": "名称",
              "width": 8
            },
            {
              "width": 8,
              "name": "绑定字段"
            },
            {
              "width": 8,
              "name": "编辑类型"
            },
            {
              "width": 8,
              "name": "查看类型"
            },
            {
              "name": "显示长度",
              "width": 8
            },
            {
              "name": "是否必输",
              "width": 8
            },
            {
              "width": 8,
              "name": "默认值"
            },
            {
              "width": 8,
              "name": "启用"
            },
            {
              "name": "是否显示",
              "width": 8
            },
            {
              "width": 8,
              "name": "是否编辑"
            },
            {
              "width": 24,
              "name": "编辑属性"
            },
            {
              "name": "查看属性",
              "width": 24
            },
            {
              "name": "选项",
              "width": 24
            }
          ]
        },
        {
          "columns": [
            {
              "width": 24,
              "name": "列表",
              "tabs": []
            }
          ]
        }
      ]
    }
  },
  "fields": {
    "form": {
      "查看属性": {
        "bind": "view_props",
        "edit": {
          "props": {
            "height": 200,
            "language": "json",
            "itemProps": {
              "tooltip": "查看控件属性"
            }
          },
          "type": "CodeEditor"
        }
      },
      "是否编辑": {
        "edit": {
          "type": "RadioGroup",
          "props": {
            "options": [
              {
                "label": "是",
                "value": 1
              },
              {
                "label": "否",
                "value": 0
              }
            ],
            "itemProps": {
              "tooltip": "是否编辑"
            },
            "defaultValue": 1,
            "value": 1
          }
        },
        "bind": "is_edit"
      },
      "编辑类型": {
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "tooltip": "编辑控件类型"
            }
          }
        },
        "bind": "edit_type"
      },
      "显示长度": {
        "bind": "width",
        "edit": {
          "type": "InputNumber",
          "props": {
            "itemProps": {
              "tooltip": "字段显示长度"
            }
          }
        }
      },
      "选项": {
        "bind": "option",
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "字段许可值"
            },
            "language": "json",
            "height": 200
          },
          "type": "CodeEditor"
        }
      },
      "名称": {
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "字段名称"
            }
          },
          "type": "Input"
        },
        "bind": "name"
      },
      "是否必输": {
        "edit": {
          "props": {
            "options": [
              {
                "label": "是",
                "value": 1
              },
              {
                "value": 0,
                "label": "否"
              }
            ],
            "itemProps": {
              "tooltip": "字段是否是否必输"
            },
            "defaultValue": 0,
            "value": 0
          },
          "type": "RadioGroup"
        },
        "bind": "required"
      },
      "查看类型": {
        "bind": "view_type",
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "查看控件类型"
            }
          },
          "type": "Input"
        }
      },
      "启用": {
        "bind": "enable",
        "edit": {
          "props": {
            "defaultValue": 1,
            "value": 1,
            "options": [
              {
                "label": "是",
                "value": 1
              },
              {
                "label": "否",
                "value": 0
              }
            ],
            "itemProps": {
              "tooltip": "启用"
            }
          },
          "type": "RadioGroup"
        }
      },
      "绑定字段": {
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "tooltip": "绑定的模型字段"
            }
          }
        },
        "bind": "bind"
      },
      "是否显示": {
        "bind": "is_dispaly",
        "edit": {
          "type": "RadioGroup",
          "props": {
            "defaultValue": 1,
            "value": 1,
            "options": [
              {
                "value": 1,
                "label": "是"
              },
              {
                "label": "否",
                "value": 0
              }
            ],
            "itemProps": {
              "tooltip": "是否显示"
            }
          }
        }
      },
      "编辑属性": {
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "编辑控件属性"
            },
            "language": "json",
            "height": 200
          },
          "type": "CodeEditor"
        },
        "bind": "edit_props"
      },
      "表格标识": {
        "bind": "table_id",
        "edit": {
          "type": "Select",
          "props": {
            "itemProps": {
              "tooltip": "字段所属的表格"
            },
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "model": "ddic.table",
                  "label": "name",
                  "value": "id"
                }
              }
            }
          }
        }
      },
      "默认值": {
        "bind": "default",
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "tooltip": "字段默认值"
            }
          }
        }
      }
    }
  }
}