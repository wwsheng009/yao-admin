{
  "layout": {
    "actions": [
      {
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "payload": {},
            "name": "Fullscreen",
            "type": "Form.fullscreen"
          }
        ],
        "title": "切换全屏",
        "icon": "icon-maximize-2"
      },
      {
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "payload": {
              "method": "CreateOne",
              "args": [
                "ddic.table.action"
              ]
            },
            "name": "StudioModel",
            "type": "Studio.model"
          },
          {
            "type": "Common.confirm",
            "payload": {
              "title": "提示",
              "content": "处理完成"
            },
            "name": "Confirm"
          }
        ],
        "title": "重新生成代码",
        "icon": "icon-layers"
      },
      {
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "payload": {},
            "name": "CloseModal",
            "type": "Common.closeModal"
          }
        ],
        "title": "返回",
        "icon": "icon-arrow-left"
      },
      {
        "title": "保存",
        "icon": "icon-check",
        "style": "primary",
        "showWhenAdd": true,
        "action": [
          {
            "payload": {},
            "name": "Submit",
            "type": "Form.submit"
          },
          {
            "name": "Back",
            "type": "Common.closeModal",
            "payload": {}
          }
        ]
      },
      {
        "style": "danger",
        "title": "Delete",
        "action": [
          {
            "type": "Common.confirm",
            "payload": {
              "content": "确认删除，删除后数据无法恢复？",
              "title": "提示"
            },
            "name": "Confirm"
          },
          {
            "name": "Delete",
            "payload": {
              "model": "ddic.table.action"
            },
            "type": "Form.delete"
          },
          {
            "payload": {},
            "name": "Back",
            "type": "Common.closeModal"
          }
        ],
        "icon": "icon-trash-2"
      }
    ],
    "form": {
      "props": {
        "reference": {
          "flatContent": {
            "name": "form",
            "defaultOpen": false,
            "payload": {
              "Form": {
                "id": "{{table_id}}",
                "type": "edit",
                "model": "ddic.form"
              }
            }
          }
        }
      },
      "sections": [
        {
          "columns": [
            {
              "name": "所属表格",
              "width": 8
            },
            {
              "name": "标题",
              "width": 8
            },
            {
              "width": 8,
              "name": "图标"
            },
            {
              "name": "样式",
              "width": 8
            },
            {
              "width": 8,
              "name": "修改时显示"
            },
            {
              "name": "查看时显示",
              "width": 8
            },
            {
              "name": "操作",
              "width": 24
            }
          ]
        },
        {
          "columns": [
            {
              "tabs": [],
              "width": 24,
              "name": "列表"
            }
          ]
        }
      ]
    },
    "primary": "id"
  },
  "fields": {
    "form": {
      "查看时显示": {
        "edit": {
          "type": "RadioGroup",
          "props": {
            "itemProps": {
              "tooltip": "表单修改数据时显示"
            },
            "defaultValue": 1,
            "value": 1,
            "options": [
              {
                "value": 1,
                "label": "是"
              },
              {
                "value": 0,
                "label": "否"
              }
            ]
          }
        },
        "bind": "showWhenView"
      },
      "操作": {
        "bind": "action",
        "edit": {
          "type": "CodeEditor",
          "props": {
            "language": "json",
            "height": 200,
            "itemProps": {
              "tooltip": "Action列表"
            }
          }
        }
      },
      "所属表格": {
        "bind": "table_id",
        "edit": {
          "type": "Select",
          "props": {
            "xProps": {
              "$remote": {
                "query": {
                  "model": "ddic.form",
                  "label": "name",
                  "value": "id"
                },
                "process": "yao.component.SelectOptions"
              }
            },
            "itemProps": {
              "tooltip": "字段所属的表格"
            }
          }
        }
      },
      "标题": {
        "bind": "title",
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "标题"
            }
          },
          "type": "Input"
        }
      },
      "图标": {
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "图标"
            }
          },
          "type": "Input"
        },
        "bind": "icon"
      },
      "样式": {
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "按钮样式"
            }
          },
          "type": "Input"
        },
        "bind": "style"
      },
      "修改时显示": {
        "edit": {
          "props": {
            "defaultValue": 1,
            "value": 1,
            "options": [
              {
                "label": "是",
                "value": 1
              },
              {
                "value": 0,
                "label": "否"
              }
            ],
            "itemProps": {
              "tooltip": "表单修改数据时显示"
            }
          },
          "type": "RadioGroup"
        },
        "bind": "showWhenAdd"
      }
    }
  },
  "name": "::Table Action",
  "action": {
    "bind": {
      "option": {
        "withs": {
          "form": {}
        }
      },
      "model": "ddic.table.action"
    }
  }
}