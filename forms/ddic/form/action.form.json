{
  "action": {
    "bind": {
      "option": {
        "withs": {
          "form": {}
        }
      },
      "model": "ddic.form.action"
    }
  },
  "layout": {
    "form": {
      "sections": [
        {
          "columns": [
            {
              "name": "所属表单",
              "width": 8
            },
            {
              "name": "标题",
              "width": 8
            },
            {
              "width": 8,
              "name": "图标"
            },
            {
              "name": "样式",
              "width": 8
            },
            {
              "width": 8,
              "name": "修改时显示"
            },
            {
              "name": "查看时显示",
              "width": 8
            },
            {
              "width": 24,
              "name": "操作"
            }
          ]
        },
        {
          "columns": [
            {
              "width": 24,
              "name": "列表",
              "tabs": []
            }
          ]
        }
      ],
      "props": {
        "reference": {
          "flatContent": {
            "name": "form",
            "defaultOpen": false,
            "payload": {
              "Form": {
                "model": "ddic.form",
                "id": "{{form_id}}",
                "type": "edit"
              }
            }
          }
        }
      }
    },
    "primary": "id",
    "actions": [
      {
        "action": [
          {
            "name": "Fullscreen",
            "type": "Form.fullscreen",
            "payload": {}
          }
        ],
        "title": "切换全屏",
        "icon": "icon-maximize-2",
        "showWhenAdd": true,
        "showWhenView": true
      },
      {
        "icon": "icon-layers",
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "type": "Studio.model",
            "payload": {
              "args": [
                "ddic.form.action"
              ],
              "method": "CreateOne"
            },
            "name": "StudioModel"
          },
          {
            "payload": {
              "title": "提示",
              "content": "处理完成"
            },
            "name": "Confirm",
            "type": "Common.confirm"
          }
        ],
        "title": "重新生成代码"
      },
      {
        "title": "返回",
        "icon": "icon-arrow-left",
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "payload": {},
            "name": "CloseModal",
            "type": "Common.closeModal"
          }
        ]
      },
      {
        "style": "primary",
        "showWhenAdd": true,
        "action": [
          {
            "payload": {},
            "name": "Submit",
            "type": "Form.submit"
          },
          {
            "payload": {},
            "name": "Back",
            "type": "Common.closeModal"
          }
        ],
        "title": "保存",
        "icon": "icon-check"
      },
      {
        "action": [
          {
            "payload": {
              "content": "确认删除，删除后数据无法恢复？",
              "title": "提示"
            },
            "name": "Confirm",
            "type": "Common.confirm"
          },
          {
            "payload": {
              "model": "ddic.form.action"
            },
            "type": "Form.delete",
            "name": "Delete"
          },
          {
            "name": "Back",
            "type": "Common.closeModal",
            "payload": {}
          }
        ],
        "icon": "icon-trash-2",
        "style": "danger",
        "title": "Delete"
      }
    ]
  },
  "fields": {
    "form": {
      "操作": {
        "edit": {
          "type": "CodeEditor",
          "props": {
            "language": "json",
            "height": 200,
            "itemProps": {
              "tooltip": "Action列表"
            }
          }
        },
        "bind": "action"
      },
      "所属表单": {
        "edit": {
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "value": "id",
                  "model": "ddic.form",
                  "label": "name"
                }
              }
            },
            "itemProps": {
              "tooltip": "字段所属的表单"
            }
          },
          "type": "Select"
        },
        "bind": "form_id"
      },
      "标题": {
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "tooltip": "标题"
            }
          }
        },
        "bind": "title"
      },
      "图标": {
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "图标"
            }
          },
          "type": "Input"
        },
        "bind": "icon"
      },
      "样式": {
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "tooltip": "按钮样式"
            }
          }
        },
        "bind": "style"
      },
      "修改时显示": {
        "bind": "showWhenAdd",
        "edit": {
          "type": "RadioGroup",
          "props": {
            "itemProps": {
              "tooltip": "表单修改数据时显示"
            },
            "defaultValue": 1,
            "value": 1,
            "options": [
              {
                "label": "是",
                "value": 1
              },
              {
                "label": "否",
                "value": 0
              }
            ]
          }
        }
      },
      "查看时显示": {
        "bind": "showWhenView",
        "edit": {
          "props": {
            "value": 1,
            "options": [
              {
                "label": "是",
                "value": 1
              },
              {
                "value": 0,
                "label": "否"
              }
            ],
            "itemProps": {
              "tooltip": "表单修改数据时显示"
            },
            "defaultValue": 1
          },
          "type": "RadioGroup"
        }
      }
    }
  },
  "name": "::Form Action"
}