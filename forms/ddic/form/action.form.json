{
  "name": "::Form Action",
  "action": {
    "bind": {
      "model": "ddic.form.action",
      "option": {
        "withs": {
          "form": {}
        }
      }
    }
  },
  "layout": {
    "primary": "id",
    "actions": [
      {
        "action": [
          {
            "type": "Studio.model",
            "payload": {
              "method": "CreateOne",
              "args": [
                "ddic.form.action"
              ]
            },
            "name": "StudioModel"
          },
          {
            "type": "Common.confirm",
            "payload": {
              "title": "提示",
              "content": "处理完成"
            },
            "name": "Confirm"
          }
        ],
        "title": "重新生成代码",
        "icon": "icon-layers",
        "showWhenAdd": true,
        "showWhenView": true
      },
      {
        "title": "返回",
        "icon": "icon-arrow-left",
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "payload": {},
            "name": "CloseModal",
            "type": "Common.closeModal"
          }
        ]
      },
      {
        "showWhenAdd": true,
        "action": [
          {
            "payload": {},
            "name": "Submit",
            "type": "Form.submit"
          },
          {
            "payload": {},
            "name": "Back",
            "type": "Common.closeModal"
          }
        ],
        "title": "保存",
        "icon": "icon-check",
        "style": "primary"
      },
      {
        "style": "danger",
        "title": "Delete",
        "action": [
          {
            "type": "Common.confirm",
            "payload": {
              "title": "提示",
              "content": "确认删除，删除后数据无法恢复？"
            },
            "name": "Confirm"
          },
          {
            "name": "Delete",
            "payload": {
              "model": "ddic.form.action"
            },
            "type": "Form.delete"
          },
          {
            "type": "Common.closeModal",
            "payload": {},
            "name": "Back"
          }
        ],
        "icon": "icon-trash-2"
      }
    ],
    "form": {
      "props": {},
      "sections": [
        {
          "columns": [
            {
              "name": "所属表单",
              "width": 8
            },
            {
              "name": "标题",
              "width": 8
            },
            {
              "width": 24,
              "name": "图标"
            },
            {
              "width": 8,
              "name": "样式"
            },
            {
              "name": "修改时显示",
              "width": 8
            },
            {
              "name": "查看时显示",
              "width": 8
            },
            {
              "width": 24,
              "name": "操作"
            }
          ]
        }
      ]
    }
  },
  "fields": {
    "form": {
      "查看时显示": {
        "edit": {
          "props": {
            "options": [
              {
                "value": 1,
                "label": "是"
              },
              {
                "value": 0,
                "label": "否"
              }
            ],
            "itemProps": {
              "tooltip": "表单修改数据时显示"
            },
            "defaultValue": 1
          },
          "type": "RadioGroup"
        },
        "bind": "showWhenView"
      },
      "操作": {
        "bind": "action",
        "edit": {
          "compute": "scripts.ddic.compute.json.Edit",
          "type": "CodeEditor",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "Action列表"
            },
            "height": 200,
            "language": "json"
          }
        }
      },
      "所属表单": {
        "edit": {
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "value": "id",
                  "model": "ddic.form",
                  "label": "name"
                }
              }
            },
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "字段所属的表单"
            }
          },
          "type": "Select"
        },
        "bind": "form_id"
      },
      "标题": {
        "bind": "title",
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "标题"
            }
          }
        }
      },
      "图标": {
        "view": {
          "compute": "scripts.file.image.ImagesView",
          "props": {},
          "type": "Image"
        },
        "edit": {
          "compute": {
            "args": [
              "$C(row)",
              "$C(type)",
              "icon",
              "ddic_form_action"
            ],
            "process": "scripts.file.image.ImagesEdit"
          },
          "props": {
            "filetype": "image",
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "图标"
            },
            "$api": {
              "process": "fs.system.Upload"
            }
          },
          "type": "Upload"
        },
        "bind": "icon"
      },
      "样式": {
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "按钮样式"
            }
          },
          "type": "Input"
        },
        "bind": "style"
      },
      "修改时显示": {
        "bind": "showWhenAdd",
        "edit": {
          "type": "RadioGroup",
          "props": {
            "options": [
              {
                "value": 1,
                "label": "是"
              },
              {
                "value": 0,
                "label": "否"
              }
            ],
            "itemProps": {
              "tooltip": "表单修改数据时显示"
            },
            "defaultValue": 1
          }
        }
      }
    }
  }
}