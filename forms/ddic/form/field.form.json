{
  "action": {
    "bind": {
      "model": "ddic.form.field",
      "option": {
        "withs": {
          "form": {}
        }
      }
    }
  },
  "layout": {
    "actions": [
      {
        "icon": "icon-maximize-2",
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "type": "Form.fullscreen",
            "payload": {},
            "name": "Fullscreen"
          }
        ],
        "title": "切换全屏"
      },
      {
        "title": "重新生成代码",
        "icon": "icon-layers",
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "payload": {
              "args": [
                "ddic.form.field"
              ],
              "method": "CreateOne"
            },
            "name": "StudioModel",
            "type": "Studio.model"
          },
          {
            "name": "Confirm",
            "type": "Common.confirm",
            "payload": {
              "title": "提示",
              "content": "处理完成"
            }
          }
        ]
      },
      {
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "payload": {},
            "name": "CloseModal",
            "type": "Common.closeModal"
          }
        ],
        "title": "返回",
        "icon": "icon-arrow-left"
      },
      {
        "style": "primary",
        "showWhenAdd": true,
        "action": [
          {
            "name": "Submit",
            "type": "Form.submit",
            "payload": {}
          },
          {
            "type": "Common.closeModal",
            "payload": {},
            "name": "Back"
          }
        ],
        "title": "保存",
        "icon": "icon-check"
      },
      {
        "icon": "icon-trash-2",
        "style": "danger",
        "title": "Delete",
        "action": [
          {
            "payload": {
              "title": "提示",
              "content": "确认删除，删除后数据无法恢复？"
            },
            "name": "Confirm",
            "type": "Common.confirm"
          },
          {
            "name": "Delete",
            "payload": {
              "model": "ddic.form.field"
            },
            "type": "Form.delete"
          },
          {
            "name": "Back",
            "type": "Common.closeModal",
            "payload": {}
          }
        ]
      }
    ],
    "form": {
      "sections": [
        {
          "columns": [
            {
              "name": "所属表单",
              "width": 8
            },
            {
              "name": "名称",
              "width": 8
            },
            {
              "width": 8,
              "name": "绑定字段"
            },
            {
              "name": "编辑类型",
              "width": 8
            },
            {
              "name": "查看类型",
              "width": 8
            },
            {
              "width": 8,
              "name": "描述"
            },
            {
              "width": 8,
              "name": "显示长度"
            },
            {
              "name": "是否必输",
              "width": 8
            },
            {
              "name": "启用",
              "width": 8
            },
            {
              "width": 8,
              "name": "默认值"
            },
            {
              "name": "是否显示",
              "width": 8
            },
            {
              "width": 24,
              "name": "编辑属性"
            },
            {
              "name": "查看属性",
              "width": 24
            },
            {
              "width": 24,
              "name": "选项"
            }
          ]
        },
        {
          "columns": [
            {
              "name": "列表",
              "tabs": [],
              "width": 24
            }
          ]
        }
      ],
      "props": {
        "reference": {
          "flatContent": {
            "name": "form",
            "defaultOpen": false,
            "payload": {
              "Form": {
                "model": "ddic.form",
                "id": "{{form_id}}",
                "type": "edit"
              }
            }
          }
        }
      }
    },
    "primary": "id"
  },
  "fields": {
    "form": {
      "所属表单": {
        "bind": "form_id",
        "edit": {
          "type": "Select",
          "props": {
            "itemProps": {
              "tooltip": "字段所属的表单"
            },
            "xProps": {
              "$remote": {
                "query": {
                  "value": "id",
                  "model": "ddic.form",
                  "label": "name"
                },
                "process": "yao.component.SelectOptions"
              }
            }
          }
        }
      },
      "描述": {
        "bind": "description",
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "字段介绍"
            }
          },
          "type": "Input"
        }
      },
      "默认值": {
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "字段默认值"
            }
          },
          "type": "Input"
        },
        "bind": "default"
      },
      "选项": {
        "bind": "option",
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "字段许可值"
            },
            "language": "json",
            "height": 200
          },
          "type": "CodeEditor"
        }
      },
      "启用": {
        "bind": "enable",
        "edit": {
          "type": "RadioGroup",
          "props": {
            "itemProps": {
              "tooltip": "启用"
            },
            "defaultValue": 1,
            "value": 1,
            "options": [
              {
                "value": 1,
                "label": "是"
              },
              {
                "label": "否",
                "value": 0
              }
            ]
          }
        }
      },
      "绑定字段": {
        "bind": "bind",
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "绑定的模型字段"
            }
          },
          "type": "Input"
        }
      },
      "查看属性": {
        "bind": "view_props",
        "edit": {
          "type": "CodeEditor",
          "props": {
            "language": "json",
            "height": 200,
            "itemProps": {
              "tooltip": "查看控件属性"
            }
          }
        }
      },
      "名称": {
        "bind": "name",
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "tooltip": "字段名称"
            }
          }
        }
      },
      "显示长度": {
        "bind": "width",
        "edit": {
          "type": "InputNumber",
          "props": {
            "itemProps": {
              "tooltip": "字段显示长度"
            }
          }
        }
      },
      "编辑类型": {
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "编辑控件类型"
            }
          },
          "type": "Input"
        },
        "bind": "edit_type"
      },
      "是否必输": {
        "bind": "required",
        "edit": {
          "type": "RadioGroup",
          "props": {
            "value": 0,
            "options": [
              {
                "value": 1,
                "label": "是"
              },
              {
                "value": 0,
                "label": "否"
              }
            ],
            "itemProps": {
              "tooltip": "字段是否是否必输"
            },
            "defaultValue": 0
          }
        }
      },
      "是否显示": {
        "edit": {
          "props": {
            "value": 1,
            "options": [
              {
                "value": 1,
                "label": "是"
              },
              {
                "label": "否",
                "value": 0
              }
            ],
            "itemProps": {
              "tooltip": "是否显示"
            },
            "defaultValue": 1
          },
          "type": "RadioGroup"
        },
        "bind": "is_dispaly"
      },
      "编辑属性": {
        "bind": "edit_props",
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "编辑控件属性"
            },
            "language": "json",
            "height": 200
          },
          "type": "CodeEditor"
        }
      },
      "查看类型": {
        "bind": "view_type",
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "tooltip": "查看控件类型"
            }
          }
        }
      }
    }
  },
  "name": "::Form Field"
}