{
  "fields": {
    "form": {
      "描述": {
        "bind": "description",
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "字段介绍",
              "rules": [
                {
                  "required": true
                }
              ]
            }
          },
          "type": "Input"
        }
      },
      "所属表单": {
        "edit": {
          "type": "Select",
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "label": "name",
                  "value": "id",
                  "model": "ddic.form"
                }
              }
            },
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "字段所属的表单"
            }
          }
        },
        "bind": "form_id"
      },
      "是否显示": {
        "bind": "is_dispaly",
        "edit": {
          "type": "RadioGroup",
          "props": {
            "defaultValue": 1,
            "options": [
              {
                "value": 1,
                "label": "是"
              },
              {
                "value": 0,
                "label": "否"
              }
            ],
            "itemProps": {
              "tooltip": "是否显示"
            }
          }
        }
      },
      "启用": {
        "bind": "enable",
        "edit": {
          "type": "RadioGroup",
          "props": {
            "options": [
              {
                "label": "是",
                "value": 1
              },
              {
                "value": 0,
                "label": "否"
              }
            ],
            "itemProps": {
              "tooltip": "启用"
            },
            "defaultValue": 1
          }
        }
      },
      "查看属性": {
        "bind": "view_props",
        "edit": {
          "type": "CodeEditor",
          "props": {
            "language": "json",
            "height": 200,
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "查看控件属性"
            }
          }
        }
      },
      "选项": {
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "字段许可值",
              "rules": [
                {
                  "required": true
                }
              ]
            },
            "height": 200,
            "language": "json"
          },
          "type": "CodeEditor"
        },
        "bind": "option"
      },
      "默认值": {
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "字段默认值"
            }
          },
          "type": "Input"
        },
        "bind": "default"
      },
      "查看类型": {
        "bind": "view_type",
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "查看控件类型"
            }
          }
        }
      },
      "编辑类型": {
        "bind": "edit_type",
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "编辑控件类型",
              "rules": [
                {
                  "required": true
                }
              ]
            }
          },
          "type": "Input"
        }
      },
      "显示长度": {
        "bind": "width",
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "字段显示长度"
            }
          },
          "type": "InputNumber"
        }
      },
      "绑定字段": {
        "bind": "bind",
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "绑定的模型字段"
            }
          }
        }
      },
      "名称": {
        "bind": "name",
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "字段名称"
            }
          },
          "type": "Input"
        }
      },
      "编辑属性": {
        "bind": "edit_props",
        "edit": {
          "type": "CodeEditor",
          "props": {
            "height": 200,
            "language": "json",
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "编辑控件属性"
            }
          }
        }
      },
      "是否必输": {
        "edit": {
          "props": {
            "options": [
              {
                "label": "是",
                "value": 1
              },
              {
                "value": 0,
                "label": "否"
              }
            ],
            "itemProps": {
              "tooltip": "字段是否是否必输"
            },
            "defaultValue": 0
          },
          "type": "RadioGroup"
        },
        "bind": "required"
      }
    }
  },
  "name": "::Form Field",
  "action": {
    "bind": {
      "model": "ddic.form.field",
      "option": {
        "withs": {
          "form": {}
        }
      }
    }
  },
  "layout": {
    "form": {
      "props": {},
      "sections": [
        {
          "columns": [
            {
              "name": "所属表单",
              "width": 8
            },
            {
              "name": "名称",
              "width": 8
            },
            {
              "name": "绑定字段",
              "width": 8
            },
            {
              "name": "编辑类型",
              "width": 8
            },
            {
              "name": "查看类型",
              "width": 8
            },
            {
              "name": "描述",
              "width": 8
            },
            {
              "width": 8,
              "name": "显示长度"
            },
            {
              "name": "是否必输",
              "width": 8
            },
            {
              "name": "启用",
              "width": 8
            },
            {
              "name": "默认值",
              "width": 8
            },
            {
              "name": "是否显示",
              "width": 8
            },
            {
              "width": 24,
              "name": "编辑属性"
            },
            {
              "name": "查看属性",
              "width": 24
            },
            {
              "width": 24,
              "name": "选项"
            }
          ]
        }
      ]
    },
    "primary": "id",
    "actions": [
      {
        "icon": "icon-layers",
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "type": "Studio.model",
            "payload": {
              "method": "CreateOne",
              "args": [
                "ddic.form.field"
              ]
            },
            "name": "StudioModel"
          },
          {
            "payload": {
              "title": "提示",
              "content": "处理完成"
            },
            "name": "Confirm",
            "type": "Common.confirm"
          }
        ],
        "title": "重新生成代码"
      },
      {
        "showWhenView": true,
        "action": [
          {
            "name": "CloseModal",
            "type": "Common.closeModal",
            "payload": {}
          }
        ],
        "title": "返回",
        "icon": "icon-arrow-left",
        "showWhenAdd": true
      },
      {
        "title": "保存",
        "icon": "icon-check",
        "style": "primary",
        "showWhenAdd": true,
        "action": [
          {
            "name": "Submit",
            "type": "Form.submit",
            "payload": {}
          },
          {
            "name": "Back",
            "type": "Common.closeModal",
            "payload": {}
          }
        ]
      },
      {
        "style": "danger",
        "title": "Delete",
        "action": [
          {
            "name": "Confirm",
            "type": "Common.confirm",
            "payload": {
              "title": "提示",
              "content": "确认删除，删除后数据无法恢复？"
            }
          },
          {
            "name": "Delete",
            "payload": {
              "model": "ddic.form.field"
            },
            "type": "Form.delete"
          },
          {
            "name": "Back",
            "type": "Common.closeModal",
            "payload": {}
          }
        ],
        "icon": "icon-trash-2"
      }
    ]
  }
}