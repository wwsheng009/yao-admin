{
  "name": "::Model Column",
  "action": {
    "bind": {
      "model": "ddic.model.column",
      "option": {
        "withs": {
          "domain": {},
          "element": {},
          "column_type": {},
          "model": {}
        }
      }
    }
  },
  "layout": {
    "primary": "id",
    "actions": [
      {
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "type": "Studio.model",
            "payload": {
              "method": "CreateOne",
              "args": [
                "ddic.model.column"
              ]
            },
            "name": "StudioModel"
          },
          {
            "name": "Confirm",
            "type": "Common.confirm",
            "payload": {
              "title": "提示",
              "content": "处理完成"
            }
          }
        ],
        "title": "重新生成代码",
        "icon": "icon-layers"
      },
      {
        "title": "返回",
        "icon": "icon-arrow-left",
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "name": "CloseModal",
            "type": "Common.closeModal",
            "payload": {}
          }
        ]
      },
      {
        "action": [
          {
            "payload": {},
            "name": "Submit",
            "type": "Form.submit"
          },
          {
            "type": "Common.closeModal",
            "payload": {},
            "name": "Back"
          }
        ],
        "title": "保存",
        "icon": "icon-check",
        "style": "primary",
        "showWhenAdd": true
      },
      {
        "style": "danger",
        "title": "Delete",
        "action": [
          {
            "name": "Confirm",
            "type": "Common.confirm",
            "payload": {
              "title": "提示",
              "content": "确认删除，删除后数据无法恢复？"
            }
          },
          {
            "type": "Form.delete",
            "name": "Delete",
            "payload": {
              "model": "ddic.model.column"
            }
          },
          {
            "type": "Common.closeModal",
            "payload": {},
            "name": "Back"
          }
        ],
        "icon": "icon-trash-2"
      }
    ],
    "form": {
      "props": {},
      "sections": [
        {
          "columns": [
            {
              "name": "模型",
              "width": 8
            },
            {
              "name": "名称",
              "width": 8
            },
            {
              "name": "域",
              "width": 8
            },
            {
              "name": "数据元素",
              "width": 8
            },
            {
              "name": "标签",
              "width": 8
            },
            {
              "width": 8,
              "name": "字段类型"
            },
            {
              "name": "长度",
              "width": 8
            },
            {
              "width": 8,
              "name": "位数(含小数位)"
            },
            {
              "name": "小数位",
              "width": 8
            },
            {
              "name": "是否空值",
              "width": 8
            },
            {
              "width": 8,
              "name": "默认值"
            },
            {
              "name": "加密方式",
              "width": 8
            },
            {
              "name": "索引",
              "width": 8
            },
            {
              "name": "唯一索引",
              "width": 8
            },
            {
              "width": 8,
              "name": "主键"
            },
            {
              "name": "注释",
              "width": 8
            },
            {
              "name": "选项",
              "width": 24
            },
            {
              "width": 24,
              "name": "字段校验规则"
            }
          ]
        }
      ]
    }
  },
  "fields": {
    "form": {
      "长度": {
        "bind": "length",
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "字段长度，对 `string` 等类型字段有效"
            }
          },
          "type": "InputNumber"
        }
      },
      "小数位": {
        "bind": "scale",
        "edit": {
          "type": "InputNumber",
          "props": {
            "itemProps": {
              "tooltip": "字段小数位位数，对 `float`、`decimal` 等类型字段有效"
            }
          }
        }
      },
      "主键": {
        "bind": "primary",
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "字段是否为主键，每张表至多一个主键字段。默认为 false"
            },
            "defaultValue": 0,
            "options": [
              {
                "value": 1,
                "label": "是"
              },
              {
                "value": 0,
                "label": "否"
              }
            ]
          },
          "type": "RadioGroup"
        }
      },
      "索引": {
        "edit": {
          "type": "RadioGroup",
          "props": {
            "defaultValue": 0,
            "options": [
              {
                "label": "是",
                "value": 1
              },
              {
                "label": "否",
                "value": 0
              }
            ],
            "itemProps": {
              "tooltip": "字段是否为索引，默认为 false"
            }
          }
        },
        "bind": "index"
      },
      "加密方式": {
        "edit": {
          "props": {
            "placeholder": "请选择加密方式",
            "itemProps": {
              "tooltip": "字段加密存储方式。许可值 `AES(MySQL Only)`, `PASSWORD`"
            },
            "options": [
              {
                "label": "::PASSWORD",
                "value": "PASSWORD"
              },
              {
                "label": "::AES",
                "value": "AES"
              }
            ]
          },
          "type": "Select"
        },
        "bind": "crypt"
      },
      "默认值": {
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "string|number|float|字段默认值"
            }
          },
          "type": "Input"
        },
        "bind": "default"
      },
      "数据元素": {
        "bind": "element_id",
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "数据元素ID"
            },
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "label": "name",
                  "value": "id",
                  "model": "ddic.element"
                }
              }
            }
          },
          "type": "Select"
        }
      },
      "选项": {
        "edit": {
          "type": "CodeEditor",
          "props": {
            "height": 200,
            "language": "json",
            "itemProps": {
              "tooltip": "字段许可值，对 `enum` 类型字段有效"
            }
          }
        },
        "bind": "option"
      },
      "模型": {
        "bind": "model_id",
        "edit": {
          "type": "Select",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "字段所属的模型"
            },
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "label": "name",
                  "value": "id",
                  "model": "ddic.model"
                }
              }
            }
          }
        }
      },
      "是否空值": {
        "bind": "nullable",
        "edit": {
          "props": {
            "defaultValue": 0,
            "options": [
              {
                "label": "是",
                "value": 1
              },
              {
                "value": 0,
                "label": "否"
              }
            ],
            "itemProps": {
              "tooltip": "是否空值，默认为 false"
            }
          },
          "type": "RadioGroup"
        }
      },
      "位数(含小数位)": {
        "edit": {
          "type": "InputNumber",
          "props": {
            "itemProps": {
              "tooltip": "字段位数(含小数位)，对 `float`、`decimal` 等类型字段有效"
            }
          }
        },
        "bind": "precision"
      },
      "字段校验规则": {
        "bind": "validations",
        "edit": {
          "props": {
            "language": "json",
            "height": 200,
            "itemProps": {
              "tooltip": "字段校验规则"
            }
          },
          "type": "CodeEditor"
        }
      },
      "域": {
        "bind": "domain_id",
        "edit": {
          "props": {
            "xProps": {
              "$remote": {
                "query": {
                  "model": "ddic.domain",
                  "label": "name",
                  "value": "id"
                },
                "process": "yao.component.SelectOptions"
              }
            },
            "itemProps": {
              "tooltip": "域ID"
            }
          },
          "type": "Select"
        }
      },
      "字段类型": {
        "bind": "column_type_id",
        "edit": {
          "type": "Select",
          "props": {
            "xProps": {
              "$remote": {
                "query": {
                  "label": "name",
                  "value": "id",
                  "model": "ddic.model.column.type"
                },
                "process": "yao.component.SelectOptions"
              }
            },
            "itemProps": {
              "tooltip": "字段类型定义"
            }
          }
        }
      },
      "名称": {
        "bind": "name",
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "数据库表的字段名"
            }
          }
        }
      },
      "注释": {
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "注释"
            }
          },
          "type": "Input"
        },
        "bind": "comment"
      },
      "唯一索引": {
        "bind": "unique",
        "edit": {
          "type": "RadioGroup",
          "props": {
            "itemProps": {
              "tooltip": "字段是否为唯一索引，默认为 false , 如为 true 无需同时将 `index` 设置为 true"
            },
            "defaultValue": 0,
            "options": [
              {
                "label": "是",
                "value": 1
              },
              {
                "label": "否",
                "value": 0
              }
            ]
          }
        }
      },
      "标签": {
        "bind": "label",
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "tooltip": "字段显示名称，用于在管理表单，开发平台等成场景下呈现"
            }
          }
        }
      }
    }
  }
}