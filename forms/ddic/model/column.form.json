{
  "action": {
    "bind": {
      "model": "ddic.model.column",
      "option": {
        "withs": {
          "model": {},
          "element": {}
        }
      }
    }
  },
  "layout": {
    "actions": [
      {
        "title": "切换全屏",
        "icon": "icon-maximize-2",
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "payload": {},
            "name": "Fullscreen",
            "type": "Form.fullscreen"
          }
        ]
      },
      {
        "action": [
          {
            "name": "StudioModel",
            "type": "Studio.model",
            "payload": {
              "method": "CreateOne",
              "args": [
                "ddic.model.column"
              ]
            }
          },
          {
            "payload": {
              "title": "提示",
              "content": "处理完成"
            },
            "name": "Confirm",
            "type": "Common.confirm"
          }
        ],
        "title": "重新生成代码",
        "icon": "icon-layers",
        "showWhenAdd": true,
        "showWhenView": true
      },
      {
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "payload": {},
            "name": "CloseModal",
            "type": "Common.closeModal"
          }
        ],
        "title": "返回",
        "icon": "icon-arrow-left"
      },
      {
        "action": [
          {
            "type": "Form.submit",
            "payload": {},
            "name": "Submit"
          },
          {
            "payload": {},
            "name": "Back",
            "type": "Common.closeModal"
          }
        ],
        "title": "保存",
        "icon": "icon-check",
        "style": "primary",
        "showWhenAdd": true
      },
      {
        "style": "danger",
        "title": "Delete",
        "action": [
          {
            "name": "Confirm",
            "type": "Common.confirm",
            "payload": {
              "title": "提示",
              "content": "确认删除，删除后数据无法恢复？"
            }
          },
          {
            "type": "Form.delete",
            "name": "Delete",
            "payload": {
              "model": "ddic.model.column"
            }
          },
          {
            "payload": {},
            "name": "Back",
            "type": "Common.closeModal"
          }
        ],
        "icon": "icon-trash-2"
      }
    ],
    "form": {
      "props": {
        "reference": {
          "floatContents": [
            {
              "payload": {
                "Form": {
                  "type": "edit",
                  "model": "ddic.model",
                  "id": "{{model_id}}"
                }
              },
              "name": "model"
            },
            {
              "name": "element",
              "payload": {
                "Form": {
                  "id": "{{element_id}}",
                  "type": "edit",
                  "model": "ddic.element"
                }
              }
            }
          ]
        }
      },
      "sections": [
        {
          "columns": [
            {
              "width": 8,
              "name": "模型"
            },
            {
              "name": "名称",
              "width": 8
            },
            {
              "width": 8,
              "name": "数据元素"
            },
            {
              "name": "标签",
              "width": 8
            },
            {
              "name": "字段类型",
              "width": 8
            },
            {
              "name": "长度",
              "width": 8
            },
            {
              "width": 8,
              "name": "位数(含小数位)"
            },
            {
              "width": 8,
              "name": "小数位"
            },
            {
              "width": 8,
              "name": "允许空值"
            },
            {
              "width": 8,
              "name": "加密方式"
            },
            {
              "name": "默认值",
              "width": 8
            },
            {
              "width": 8,
              "name": "是否索引"
            },
            {
              "name": "唯一索引",
              "width": 8
            },
            {
              "width": 8,
              "name": "注释"
            }
          ]
        },
        {
          "columns": [
            {
              "name": "列表",
              "tabs": [],
              "width": 24
            }
          ]
        }
      ]
    },
    "primary": "id"
  },
  "fields": {
    "form": {
      "标签": {
        "bind": "label",
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "tooltip": "字段显示名称label，用于在管理表单，开发平台等成场景下呈现"
            }
          }
        }
      },
      "模型": {
        "bind": "model_id",
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "字段所属的模型"
            },
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "label": "name",
                  "value": "id",
                  "model": "ddic.model"
                }
              }
            }
          },
          "type": "Select"
        }
      },
      "默认值": {
        "bind": "default",
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "tooltip": "string|number|float|字段默认值default"
            }
          }
        }
      },
      "是否索引": {
        "bind": "index",
        "edit": {
          "type": "RadioGroup",
          "props": {
            "itemProps": {
              "tooltip": "字段是否为索引index，默认为 false"
            },
            "defaultValue": 0,
            "value": 0,
            "options": [
              {
                "label": "是",
                "value": 1
              },
              {
                "value": 0,
                "label": "否"
              }
            ]
          }
        }
      },
      "注释": {
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "注释，comment"
            }
          },
          "type": "Input"
        },
        "bind": "comment"
      },
      "名称": {
        "bind": "name",
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "tooltip": "数据库表的字段名name"
            }
          }
        }
      },
      "加密方式": {
        "edit": {
          "type": "Select",
          "props": {
            "placeholder": "请选择加密方式",
            "options": [
              {
                "label": "::PASSWORD",
                "value": "PASSWORD"
              },
              {
                "value": "AES",
                "label": "::AES"
              }
            ],
            "itemProps": {
              "tooltip": "字段加密存储方式。许可值 `AES(MySQL Only)`, `PASSWORD`"
            }
          }
        },
        "bind": "crypt"
      },
      "允许空值": {
        "bind": "nullable",
        "edit": {
          "type": "RadioGroup",
          "props": {
            "defaultValue": 0,
            "value": 0,
            "options": [
              {
                "value": 1,
                "label": "是"
              },
              {
                "label": "否",
                "value": 0
              }
            ],
            "itemProps": {
              "tooltip": "是否允许空值nullable，默认为 false"
            }
          }
        }
      },
      "唯一索引": {
        "bind": "unique",
        "edit": {
          "type": "RadioGroup",
          "props": {
            "defaultValue": 0,
            "value": 0,
            "options": [
              {
                "label": "是",
                "value": 1
              },
              {
                "value": 0,
                "label": "否"
              }
            ],
            "itemProps": {
              "tooltip": "字段是否为唯一索引unique，默认为 false , 如为 true 无需同时将 `index` 设置为 true"
            }
          }
        }
      },
      "数据元素": {
        "bind": "element_id",
        "edit": {
          "type": "Select",
          "props": {
            "itemProps": {
              "tooltip": "数据元素ID，element_id"
            },
            "xProps": {
              "$remote": {
                "query": {
                  "model": "ddic.element",
                  "label": "name",
                  "value": "id"
                },
                "process": "yao.component.SelectOptions"
              }
            }
          }
        }
      },
      "长度": {
        "edit": {
          "type": "InputNumber",
          "props": {
            "itemProps": {
              "tooltip": "字段长度length，对 `string` 等类型字段有效"
            }
          }
        },
        "bind": "length"
      },
      "字段类型": {
        "bind": "type",
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "字段类型定义type"
            },
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "model": "ddic.model.column.type",
                  "label": "name",
                  "value": "type"
                }
              }
            }
          },
          "type": "Select"
        }
      },
      "位数(含小数位)": {
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "字段位数(含小数位)precision，对 `float`、`decimal` 等类型字段有效"
            }
          },
          "type": "InputNumber"
        },
        "bind": "precision"
      },
      "小数位": {
        "bind": "scale",
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "字段小数位位数scale，对 `float`、`decimal` 等类型字段有效"
            }
          },
          "type": "InputNumber"
        }
      }
    }
  },
  "name": "::Model Column"
}