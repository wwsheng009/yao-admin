{
  "layout": {
    "actions": [
      {
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "name": "Fullscreen",
            "type": "Form.fullscreen",
            "payload": {}
          }
        ],
        "title": "切换全屏",
        "icon": "icon-maximize-2"
      },
      {
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "name": "StudioModel",
            "type": "Studio.model",
            "payload": {
              "method": "CreateOne",
              "args": [
                "ddic.model.column.type"
              ]
            }
          },
          {
            "payload": {
              "title": "提示",
              "content": "处理完成"
            },
            "name": "Confirm",
            "type": "Common.confirm"
          }
        ],
        "title": "重新生成代码",
        "icon": "icon-layers"
      },
      {
        "icon": "icon-arrow-left",
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "name": "CloseModal",
            "type": "Common.closeModal",
            "payload": {}
          }
        ],
        "title": "返回"
      },
      {
        "showWhenAdd": true,
        "action": [
          {
            "name": "Submit",
            "type": "Form.submit",
            "payload": {}
          },
          {
            "name": "Back",
            "type": "Common.closeModal",
            "payload": {}
          }
        ],
        "title": "保存",
        "icon": "icon-check",
        "style": "primary"
      },
      {
        "icon": "icon-trash-2",
        "style": "danger",
        "title": "Delete",
        "action": [
          {
            "payload": {
              "title": "提示",
              "content": "确认删除，删除后数据无法恢复？"
            },
            "name": "Confirm",
            "type": "Common.confirm"
          },
          {
            "payload": {
              "model": "ddic.model.column.type"
            },
            "type": "Form.delete",
            "name": "Delete"
          },
          {
            "payload": {},
            "name": "Back",
            "type": "Common.closeModal"
          }
        ]
      }
    ],
    "form": {
      "props": {},
      "sections": [
        {
          "columns": [
            {
              "name": "字段类型",
              "width": 8
            },
            {
              "width": 8,
              "name": "字段描述"
            },
            {
              "name": "注释",
              "width": 8
            }
          ]
        },
        {
          "columns": [
            {
              "tabs": [],
              "width": 24,
              "name": "列表"
            }
          ]
        }
      ]
    },
    "primary": "id"
  },
  "fields": {
    "form": {
      "字段类型": {
        "edit": {
          "type": "Input",
          "props": {}
        },
        "bind": "type"
      },
      "字段描述": {
        "bind": "name",
        "edit": {
          "props": {},
          "type": "Input"
        }
      },
      "注释": {
        "bind": "comment",
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "tooltip": "注释"
            }
          }
        }
      }
    }
  },
  "name": "::Model Column Type",
  "action": {
    "bind": {
      "model": "ddic.model.column.type",
      "option": {
        "withs": {}
      }
    }
  }
