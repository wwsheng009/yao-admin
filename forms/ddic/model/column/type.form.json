{
  "action": {
    "bind": {
      "model": "ddic.model.column.type",
      "option": {
        "withs": {}
      }
    }
  },
  "layout": {
    "primary": "id",
    "actions": [
      {
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "payload": {
              "method": "CreateOne",
              "args": [
                "ddic.model.column.type"
              ]
            },
            "name": "StudioModel",
            "type": "Studio.model"
          },
          {
            "type": "Common.confirm",
            "payload": {
              "content": "处理完成",
              "title": "提示"
            },
            "name": "Confirm"
          }
        ],
        "title": "重新生成代码",
        "icon": "icon-layers"
      },
      {
        "title": "返回",
        "icon": "icon-arrow-left",
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "name": "CloseModal",
            "type": "Common.closeModal",
            "payload": {}
          }
        ]
      },
      {
        "action": [
          {
            "type": "Form.submit",
            "payload": {},
            "name": "Submit"
          },
          {
            "type": "Common.closeModal",
            "payload": {},
            "name": "Back"
          }
        ],
        "title": "保存",
        "icon": "icon-check",
        "style": "primary",
        "showWhenAdd": true
      },
      {
        "style": "danger",
        "title": "Delete",
        "action": [
          {
            "type": "Common.confirm",
            "payload": {
              "title": "提示",
              "content": "确认删除，删除后数据无法恢复？"
            },
            "name": "Confirm"
          },
          {
            "payload": {
              "model": "ddic.model.column.type"
            },
            "type": "Form.delete",
            "name": "Delete"
          },
          {
            "type": "Common.closeModal",
            "payload": {},
            "name": "Back"
          }
        ],
        "icon": "icon-trash-2"
      }
    ],
    "form": {
      "sections": [
        {
          "columns": [
            {
              "width": 8,
              "name": "字段类型"
            },
            {
              "name": "字段描述",
              "width": 8
            },
            {
              "name": "注释",
              "width": 8
            }
          ]
        },
        {
          "columns": [
            {
              "name": "列表",
              "tabs": [],
              "width": 24
            }
          ]
        }
      ],
      "props": {}
    }
  },
  "fields": {
    "form": {
      "字段类型": {
        "bind": "type",
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ]
            }
          },
          "type": "Input"
        }
      },
      "字段描述": {
        "bind": "name",
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ]
            }
          },
          "type": "Input"
        }
      },
      "注释": {
        "bind": "comment",
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "tooltip": "注释"
            }
          }
        }
      }
    }
  },
  "name": "::Model Column Type"
}