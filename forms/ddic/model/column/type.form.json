{
  "layout": {
    "form": {
      "sections": [
        {
          "columns": [
            {
              "name": "字段描述",
              "width": 8
            },
            {
              "width": 8,
              "name": "字段类型"
            },
            {
              "name": "注释",
              "width": 8
            }
          ]
        }
      ],
      "props": {}
    },
    "primary": "id",
    "actions": [
      {
        "title": "重新生成代码",
        "icon": "icon-layers",
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "name": "StudioModel",
            "type": "Studio.model",
            "payload": {
              "args": [
                "ddic.model.column.type"
              ],
              "method": "CreateOne"
            }
          },
          {
            "name": "Confirm",
            "type": "Common.confirm",
            "payload": {
              "content": "处理完成",
              "title": "提示"
            }
          }
        ]
      },
      {
        "title": "返回",
        "icon": "icon-arrow-left",
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "payload": {},
            "name": "CloseModal",
            "type": "Common.closeModal"
          }
        ]
      },
      {
        "title": "保存",
        "icon": "icon-check",
        "style": "primary",
        "showWhenAdd": true,
        "action": [
          {
            "payload": {},
            "name": "Submit",
            "type": "Form.submit"
          },
          {
            "name": "Back",
            "type": "Common.closeModal",
            "payload": {}
          }
        ]
      },
      {
        "icon": "icon-trash-2",
        "style": "danger",
        "title": "Delete",
        "action": [
          {
            "name": "Confirm",
            "type": "Common.confirm",
            "payload": {
              "title": "提示",
              "content": "确认删除，删除后数据无法恢复？"
            }
          },
          {
            "type": "Form.delete",
            "name": "Delete",
            "payload": {
              "model": "ddic.model.column.type"
            }
          },
          {
            "name": "Back",
            "type": "Common.closeModal",
            "payload": {}
          }
        ]
      }
    ]
  },
  "fields": {
    "form": {
      "字段描述": {
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ]
            }
          },
          "type": "Input"
        },
        "bind": "name"
      },
      "字段类型": {
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ]
            }
          }
        },
        "bind": "type"
      },
      "注释": {
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "tooltip": "注释"
            }
          }
        },
        "bind": "comment"
      }
    }
  },
  "name": "::Model Column Type",
  "action": {
    "bind": {
      "model": "ddic.model.column.type",
      "option": {
        "withs": {}
      }
    }
  }
}