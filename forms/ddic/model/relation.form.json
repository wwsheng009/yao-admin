{
  "name": "::Model Relation",
  "action": {
    "bind": {
      "model": "ddic.model.relation",
      "option": {
        "withs": {
          "model": {}
        }
      }
    }
  },
  "layout": {
    "primary": "id",
    "actions": [
      {
        "title": "重新生成代码",
        "icon": "icon-layers",
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "name": "StudioModel",
            "type": "Studio.model",
            "payload": {
              "args": [
                "ddic.model.relation"
              ],
              "method": "CreateOne"
            }
          },
          {
            "type": "Common.confirm",
            "payload": {
              "title": "提示",
              "content": "处理完成"
            },
            "name": "Confirm"
          }
        ]
      },
      {
        "icon": "icon-arrow-left",
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "name": "CloseModal",
            "type": "Common.closeModal",
            "payload": {}
          }
        ],
        "title": "返回"
      },
      {
        "action": [
          {
            "name": "Submit",
            "type": "Form.submit",
            "payload": {}
          },
          {
            "payload": {},
            "name": "Back",
            "type": "Common.closeModal"
          }
        ],
        "title": "保存",
        "icon": "icon-check",
        "style": "primary",
        "showWhenAdd": true
      },
      {
        "style": "danger",
        "title": "Delete",
        "action": [
          {
            "type": "Common.confirm",
            "payload": {
              "content": "确认删除，删除后数据无法恢复？",
              "title": "提示"
            },
            "name": "Confirm"
          },
          {
            "payload": {
              "model": "ddic.model.relation"
            },
            "type": "Form.delete",
            "name": "Delete"
          },
          {
            "type": "Common.closeModal",
            "payload": {},
            "name": "Back"
          }
        ],
        "icon": "icon-trash-2"
      }
    ],
    "form": {
      "props": {},
      "sections": [
        {
          "columns": [
            {
              "name": "模型",
              "width": 8
            },
            {
              "name": "名称",
              "width": 8
            },
            {
              "width": 8,
              "name": "关联关系"
            },
            {
              "name": "外键",
              "width": 8
            },
            {
              "name": "主键",
              "width": 8
            },
            {
              "width": 24,
              "name": "关联条件"
            }
          ]
        },
        {
          "columns": [
            {
              "name": "列表",
              "tabs": [],
              "width": 24
            }
          ]
        }
      ]
    }
  },
  "fields": {
    "form": {
      "关联关系": {
        "edit": {
          "type": "Select",
          "props": {
            "options": [
              {
                "label": "::hasOne",
                "value": "hasOne"
              },
              {
                "label": "::hasMany",
                "value": "hasMany"
              }
            ],
            "placeholder": "请选择关联关系",
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "与当前数据模型的关系类型. `hasOne` 一对一, `hasMany` 一对多。"
            }
          }
        },
        "bind": "type"
      },
      "外键": {
        "bind": "foreign",
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "外键"
            }
          },
          "type": "Input"
        }
      },
      "主键": {
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "主键",
              "rules": [
                {
                  "required": true
                }
              ]
            }
          },
          "type": "Input"
        },
        "bind": "key"
      },
      "关联条件": {
        "bind": "query",
        "edit": {
          "type": "CodeEditor",
          "props": {
            "language": "json",
            "height": 200,
            "itemProps": {
              "tooltip": "关联条件"
            }
          },
          "compute": "scripts.ddic.compute.json.Edit"
        }
      },
      "模型": {
        "edit": {
          "type": "Select",
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "value": "id",
                  "model": "ddic.model",
                  "label": "name"
                }
              }
            },
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "所属模型"
            }
          }
        },
        "bind": "model_id"
      },
      "名称": {
        "bind": "name",
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "定义关系名称"
            }
          },
          "type": "Input"
        }
      }
    }
  }
}