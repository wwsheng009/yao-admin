{
  "name": "::Model Relation",
  "action": {
    "bind": {
      "model": "ddic.model.relation",
      "option": {
        "withs": {}
      }
    }
  },
  "layout": {
    "form": {
      "props": {},
      "sections": [
        {
          "columns": [
            {
              "name": "模型",
              "width": 8
            },
            {
              "name": "名称",
              "width": 8
            },
            {
              "name": "关联关系",
              "width": 8
            },
            {
              "name": "外键",
              "width": 8
            },
            {
              "width": 8,
              "name": "主键"
            },
            {
              "name": "关联条件",
              "width": 24
            }
          ]
        },
        {
          "columns": [
            {
              "name": "列表",
              "tabs": [],
              "width": 24
            }
          ]
        }
      ]
    },
    "primary": "id",
    "actions": [
      {
        "showWhenView": true,
        "action": [
          {
            "payload": {
              "method": "CreateOne",
              "args": [
                "ddic.model.relation"
              ]
            },
            "name": "StudioModel",
            "type": "Studio.model"
          },
          {
            "name": "Confirm",
            "type": "Common.confirm",
            "payload": {
              "title": "提示",
              "content": "处理完成"
            }
          }
        ],
        "title": "重新生成代码",
        "icon": "icon-layers",
        "showWhenAdd": true
      },
      {
        "icon": "icon-arrow-left",
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "name": "CloseModal",
            "type": "Common.closeModal",
            "payload": {}
          }
        ],
        "title": "返回"
      },
      {
        "action": [
          {
            "type": "Form.submit",
            "payload": {},
            "name": "Submit"
          },
          {
            "payload": {},
            "name": "Back",
            "type": "Common.closeModal"
          }
        ],
        "title": "保存",
        "icon": "icon-check",
        "style": "primary",
        "showWhenAdd": true
      },
      {
        "title": "Delete",
        "action": [
          {
            "type": "Common.confirm",
            "payload": {
              "content": "确认删除，删除后数据无法恢复？",
              "title": "提示"
            },
            "name": "Confirm"
          },
          {
            "payload": {
              "model": "ddic.model.relation"
            },
            "type": "Form.delete",
            "name": "Delete"
          },
          {
            "name": "Back",
            "type": "Common.closeModal",
            "payload": {}
          }
        ],
        "icon": "icon-trash-2",
        "style": "danger"
      }
    ]
  },
  "fields": {
    "form": {
      "关联条件": {
        "bind": "query",
        "edit": {
          "type": "CodeEditor",
          "props": {
            "itemProps": {
              "tooltip": "关联条件"
            },
            "language": "json",
            "height": 200
          },
          "compute": "scripts.ddic.compute.json.Edit"
        }
      },
      "模型": {
        "bind": "model_id",
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "所属模型"
            }
          },
          "type": "InputNumber"
        }
      },
      "名称": {
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "tooltip": "定义关系名称",
              "rules": [
                {
                  "required": true
                }
              ]
            }
          }
        },
        "bind": "name"
      },
      "关联关系": {
        "edit": {
          "type": "Select",
          "props": {
            "placeholder": "请选择关联关系",
            "options": [
              {
                "label": "::hasOne",
                "value": "hasOne"
              },
              {
                "label": "::hasMany",
                "value": "hasMany"
              }
            ],
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "与当前数据模型的关系类型. `hasOne` 一对一, `hasMany` 一对多。"
            }
          }
        },
        "bind": "type"
      },
      "外键": {
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "外键"
            }
          }
        },
        "bind": "foreign"
      },
      "主键": {
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "主键"
            }
          }
        },
        "bind": "key"
      }
    }
  }
}