{
  "layout": {
    "actions": [
      {
        "title": "切换全屏",
        "icon": "icon-maximize-2",
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "payload": {},
            "name": "Fullscreen",
            "type": "Form.fullscreen"
          }
        ]
      },
      {
        "showWhenView": true,
        "action": [
          {
            "payload": {
              "args": [
                "ddic.model.relation"
              ],
              "method": "CreateOne"
            },
            "name": "StudioModel",
            "type": "Studio.model"
          },
          {
            "type": "Common.confirm",
            "payload": {
              "content": "处理完成",
              "title": "提示"
            },
            "name": "Confirm"
          }
        ],
        "title": "重新生成代码",
        "icon": "icon-layers",
        "showWhenAdd": true
      },
      {
        "showWhenView": true,
        "action": [
          {
            "type": "Common.closeModal",
            "payload": {},
            "name": "CloseModal"
          }
        ],
        "title": "返回",
        "icon": "icon-arrow-left",
        "showWhenAdd": true
      },
      {
        "title": "保存",
        "icon": "icon-check",
        "style": "primary",
        "showWhenAdd": true,
        "action": [
          {
            "name": "Submit",
            "type": "Form.submit",
            "payload": {}
          },
          {
            "name": "Back",
            "type": "Common.closeModal",
            "payload": {}
          }
        ]
      },
      {
        "icon": "icon-trash-2",
        "style": "danger",
        "title": "Delete",
        "action": [
          {
            "payload": {
              "content": "确认删除，删除后数据无法恢复？",
              "title": "提示"
            },
            "name": "Confirm",
            "type": "Common.confirm"
          },
          {
            "name": "Delete",
            "payload": {
              "model": "ddic.model.relation"
            },
            "type": "Form.delete"
          },
          {
            "name": "Back",
            "type": "Common.closeModal",
            "payload": {}
          }
        ]
      }
    ],
    "form": {
      "props": {
        "reference": {
          "flatContent": {
            "name": "model",
            "defaultOpen": false,
            "payload": {
              "Form": {
                "type": "edit",
                "model": "ddic.model",
                "id": "{{model_id}}"
              }
            }
          }
        }
      },
      "sections": [
        {
          "columns": [
            {
              "width": 8,
              "name": "模型"
            },
            {
              "width": 8,
              "name": "名称"
            },
            {
              "name": "关联关系",
              "width": 8
            },
            {
              "name": "外键",
              "width": 8
            },
            {
              "width": 8,
              "name": "主键"
            },
            {
              "name": "关联条件",
              "width": 24
            }
          ]
        },
        {
          "columns": [
            {
              "name": "列表",
              "tabs": [],
              "width": 24
            }
          ]
        }
      ]
    },
    "primary": "id"
  },
  "fields": {
    "form": {
      "主键": {
        "bind": "key",
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "tooltip": "主键"
            }
          }
        }
      },
      "关联条件": {
        "bind": "query",
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "关联条件"
            },
            "language": "json",
            "height": 200
          },
          "type": "CodeEditor"
        }
      },
      "模型": {
        "edit": {
          "type": "Select",
          "props": {
            "itemProps": {
              "tooltip": "所属模型"
            },
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "label": "name",
                  "value": "id",
                  "model": "ddic.model"
                }
              }
            }
          }
        },
        "bind": "model_id"
      },
      "名称": {
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "tooltip": "定义关系名称"
            }
          }
        },
        "bind": "name"
      },
      "关联关系": {
        "bind": "type",
        "edit": {
          "type": "Select",
          "props": {
            "placeholder": "请选择关联关系",
            "itemProps": {
              "tooltip": "与当前数据模型的关系类型. `hasOne` 一对一, `hasMany` 一对多。"
            },
            "options": [
              {
                "value": "hasOne",
                "label": "::hasOne"
              },
              {
                "label": "::hasMany",
                "value": "hasMany"
              }
            ]
          }
        }
      },
      "外键": {
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "tooltip": "外键"
            }
          }
        },
        "bind": "foreign"
      }
    }
  },
  "name": "::Model Relation",
  "action": {
    "bind": {
      "model": "ddic.model.relation",
      "option": {
        "withs": {
          "model": {}
        }
      }
    }
  }
}