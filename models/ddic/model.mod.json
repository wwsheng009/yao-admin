{
  "name": "::Model",
  "table": { "name": "ddic_model", "comment": "业务模型" },
  "columns": [
    {
      "name": "id",
      "type": "ID",
      "label": "ID",
      "comment": "表名"
    },
    {
      "label": "模型名称",
      "name": "name",
      "type": "string",
      "length": 64,
      "unique": true,
      "validations": [
        {
          "method": "maxLength",
          "args": [64],
          "message": "{{label}}最大长度64"
        },
        {
          "method": "pattern",
          "args": ["^[a-zA-Z.][a-zA-Z0-9.]*$"],
          "message": "{{label}}应该由2-40位，大小写字母、数字、点号构成"
        }
      ]
    },
    {
      "label": "模型备注",
      "name": "model_comment",
      "type": "string",
      "length": 100,
      "comment": "模型定义注释",
      "nullable": true
    },
    {
      "label": "数据库表名",
      "name": "table_name",
      "type": "string",
      "length": 64,
      "nullable": true,
      "validations": [
        {
          "method": "maxLength",
          "args": [64],
          "message": "{{label}}最大长度64"
        },
        {
          "method": "pattern",
          "args": ["^[a-zA-Z_][a-zA-Z0-9_]*$"],
          "message": "{{label}}请输入有效的数据库表名，只允许数字与字母，下划线，划线"
        }
      ]
    },
    {
      "label": "数据库表备注",
      "name": "table_comment",
      "type": "string",
      "length": 100,
      "comment": "对应数据表中字段注释",
      "nullable": true
    },

    {
      "label": "软删除",
      "name": "soft_deletes",
      "type": "boolean",
      "default": true,
      "comment": "软删除，不直接删除"
    },
    {
      "label": "增加时间戳",
      "name": "timestamps",
      "type": "boolean",
      "default": true,
      "comment": "增加创建，更新时间戳timestamps"
    },
    {
      "comment": "关联关系",
      "label": "关联关系",
      "name": "relations",
      "type": "json",
      "nullable": true
    }
  ],
  "relations": {
    "columns": {
      "label": "字段列表",
      "type": "hasMany",
      "model": "ddic.model.column",
      "key": "model_id",
      "foreign": "id"
    }
  },
  "option": {},
  "xgen": {
    "form": {
      "fields": {
        "form": {
          "关联关系": {
            "edit": {
              "type": "List",
              "props": {
                "name": "ddic.model.relation",
                "showLabel": true
              }
            }
          }
        }
      }
    },
    "table": {
      "layout": {
        "filter": {
          "actions": [
            {
              "icon": "icon-plus",
              "width": 3,
              "action": [
                {
                  "name": "HistoryPush",
                  "type": "Common.historyPush",
                  "payload": {
                    "pathname": "/x/Form/ddic.model/0/edit"
                  }
                }
              ],
              "title": "创建"
            }
          ]
        }
      },
      "fields": {
        "table": {
          "关联关系": {
            "view": {
              "props": {
                "ddic_hide": true
              }
            }
          }
        }
      }
    }
  }
}
