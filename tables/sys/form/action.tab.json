{
  "name": "::Form Action",
  "action": {
    "bind": {
      "model": "sys.form.action",
      "option": {
        "withs": {
          "form": {}
        },
        "option": {
          "form": "sys.form.action"
        }
      }
    }
  },
  "layout": {
    "header": {
      "preset": {},
      "actions": []
    },
    "filter": {
      "columns": [
        {
          "name": "所属表单",
          "width": 4
        },
        {
          "width": 4,
          "name": "标题"
        }
      ],
      "actions": [
        {
          "title": "添加",
          "icon": "icon-plus",
          "width": 3,
          "action": [
            {
              "name": "OpenModal",
              "type": "Common.openModal",
              "payload": {
                "Form": {
                  "model": "sys.form.action",
                  "type": "edit"
                }
              }
            }
          ]
        }
      ]
    },
    "table": {
      "columns": [
        {
          "name": "所属表单",
          "width": 160
        },
        {
          "name": "标题",
          "width": 160
        },
        {
          "name": "图标",
          "width": 160
        },
        {
          "name": "样式",
          "width": 160
        },
        {
          "name": "修改时显示",
          "width": 160
        },
        {
          "name": "查看时显示",
          "width": 160
        },
        {
          "name": "操作",
          "width": 160
        }
      ],
      "operation": {
        "fold": false,
        "actions": [
          {
            "title": "查看",
            "icon": "icon-eye",
            "action": [
              {
                "payload": {
                  "Form": {
                    "model": "sys.form.action",
                    "type": "view"
                  }
                },
                "name": "OpenModal",
                "type": "Common.openModal"
              }
            ]
          },
          {
            "title": "编辑",
            "icon": "icon-edit-2",
            "action": [
              {
                "name": "OpenModal",
                "type": "Common.openModal",
                "payload": {
                  "Form": {
                    "type": "edit",
                    "model": "sys.form.action"
                  }
                }
              }
            ]
          },
          {
            "action": [
              {
                "payload": {
                  "title": "确认删除",
                  "content": "删除后不可撤销！"
                },
                "name": "Confirm",
                "type": "Common.confirm"
              },
              {
                "name": "Delete",
                "type": "Table.delete",
                "payload": {
                  "model": "sys.form.action"
                }
              }
            ],
            "title": "删除",
            "icon": "icon-trash-2"
          }
        ]
      }
    },
    "primary": "id"
  },
  "fields": {
    "filter": {
      "所属表单": {
        "bind": "where.form_id.in",
        "edit": {
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "value": "id",
                  "model": "sys.form",
                  "label": "name"
                }
              }
            }
          },
          "type": "Select"
        }
      },
      "标题": {
        "edit": {
          "type": "Input",
          "compute": "Trim",
          "props": {
            "placeholder": "请输入标题"
          }
        },
        "bind": "where.title.match"
      }
    },
    "table": {
      "样式": {
        "edit": {
          "bind": "style",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "按钮样式"
            }
          },
          "type": "Input"
        },
        "bind": "style",
        "view": {
          "type": "Text",
          "props": {}
        }
      },
      "修改时显示": {
        "bind": "showWhenAdd",
        "view": {
          "props": {
            "checkedValue": 1,
            "unCheckedChildren": "否",
            "unCheckedValue": 0,
            "checkedChildren": "是"
          },
          "type": "Switch"
        }
      },
      "查看时显示": {
        "view": {
          "type": "Switch",
          "props": {
            "checkedChildren": "是",
            "checkedValue": 1,
            "unCheckedChildren": "否",
            "unCheckedValue": 0
          }
        },
        "bind": "showWhenView"
      },
      "操作": {
        "view": {
          "props": {},
          "type": "Tooltip"
        },
        "bind": "action",
        "edit": {
          "props": {
            "language": "json",
            "height": 200,
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "Action列表"
            }
          },
          "type": "TextArea"
        }
      },
      "ID": {
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "type": "Input",
          "bind": "id",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "表名"
            }
          }
        },
        "bind": "id"
      },
      "所属表单": {
        "bind": "form_id",
        "view": {
          "type": "Tag",
          "props": {
            "xProps": {
              "$remote": {
                "query": {
                  "value": "id",
                  "model": "sys.form",
                  "label": "name"
                },
                "process": "yao.component.SelectOptions"
              }
            }
          }
        },
        "edit": {
          "type": "Select",
          "props": {
            "xProps": {
              "$remote": {
                "query": {
                  "model": "sys.form",
                  "label": "name",
                  "value": "id"
                },
                "process": "yao.component.SelectOptions"
              }
            },
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "字段所属的表单"
            }
          }
        }
      },
      "标题": {
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "标题"
            }
          },
          "type": "Input",
          "bind": "title"
        },
        "bind": "title"
      },
      "图标": {
        "bind": "icon",
        "view": {
          "compute": "scripts.file.image.ImagesView",
          "props": {},
          "type": "Image"
        },
        "edit": {
          "type": "Upload",
          "compute": "Upload",
          "props": {
            "filetype": "image",
            "disabled": true,
            "$api": {
              "process": "fs.system.Upload"
            },
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "图标"
            }
          }
        }
      }
    }
  }
}