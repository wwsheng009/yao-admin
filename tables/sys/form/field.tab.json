{
  "name": "::Form Field",
  "action": {
    "bind": {
      "model": "sys.form.field",
      "option": {
        "option": {
          "form": "sys.form.field"
        },
        "withs": {
          "form": {}
        }
      }
    }
  },
  "layout": {
    "primary": "id",
    "header": {
      "preset": {},
      "actions": []
    },
    "filter": {
      "columns": [
        {
          "name": "所属表单",
          "width": 4
        },
        {
          "name": "名称",
          "width": 4
        }
      ],
      "actions": [
        {
          "title": "添加",
          "icon": "icon-plus",
          "width": 3,
          "action": [
            {
              "name": "OpenModal",
              "type": "Common.openModal",
              "payload": {
                "Form": {
                  "model": "sys.form.field",
                  "type": "edit"
                }
              }
            }
          ]
        }
      ]
    },
    "table": {
      "columns": [
        {
          "name": "所属表单",
          "width": 160
        },
        {
          "name": "名称",
          "width": 160
        },
        {
          "name": "绑定字段",
          "width": 160
        },
        {
          "name": "编辑类型",
          "width": 160
        },
        {
          "name": "查看类型",
          "width": 160
        },
        {
          "name": "描述",
          "width": 160
        },
        {
          "name": "显示长度",
          "width": 160
        },
        {
          "name": "是否必输",
          "width": 160
        },
        {
          "name": "启用",
          "width": 160
        },
        {
          "name": "默认值",
          "width": 160
        },
        {
          "name": "是否显示",
          "width": 160
        },
        {
          "width": 160,
          "name": "编辑属性"
        },
        {
          "name": "查看属性",
          "width": 160
        },
        {
          "width": 160,
          "name": "选项"
        }
      ],
      "operation": {
        "fold": false,
        "actions": [
          {
            "action": [
              {
                "payload": {
                  "Form": {
                    "model": "sys.form.field",
                    "type": "view"
                  }
                },
                "name": "OpenModal",
                "type": "Common.openModal"
              }
            ],
            "title": "查看",
            "icon": "icon-eye"
          },
          {
            "action": [
              {
                "name": "OpenModal",
                "type": "Common.openModal",
                "payload": {
                  "Form": {
                    "type": "edit",
                    "model": "sys.form.field"
                  }
                }
              }
            ],
            "title": "编辑",
            "icon": "icon-edit-2"
          },
          {
            "title": "删除",
            "icon": "icon-trash-2",
            "action": [
              {
                "name": "Confirm",
                "type": "Common.confirm",
                "payload": {
                  "title": "确认删除",
                  "content": "删除后不可撤销！"
                }
              },
              {
                "type": "Table.delete",
                "payload": {
                  "model": "sys.form.field"
                },
                "name": "Delete"
              }
            ]
          }
        ]
      }
    }
  },
  "fields": {
    "table": {
      "选项": {
        "bind": "option",
        "edit": {
          "type": "TextArea",
          "props": {
            "language": "json",
            "height": 200,
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "字段许可值"
            }
          }
        },
        "view": {
          "type": "Tooltip",
          "props": {}
        }
      },
      "所属表单": {
        "bind": "form_id",
        "view": {
          "type": "Tag",
          "props": {
            "xProps": {
              "$remote": {
                "query": {
                  "value": "id",
                  "model": "sys.form",
                  "label": "name"
                },
                "process": "yao.component.SelectOptions"
              }
            }
          }
        },
        "edit": {
          "type": "Select",
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "value": "id",
                  "model": "sys.form",
                  "label": "name"
                }
              }
            },
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "字段所属的表单"
            }
          }
        }
      },
      "查看类型": {
        "bind": "view_type",
        "view": {
          "props": {},
          "type": "Text"
        },
        "edit": {
          "type": "Input",
          "bind": "view_type",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "查看控件类型"
            }
          }
        }
      },
      "是否必输": {
        "bind": "required",
        "view": {
          "props": {
            "unCheckedChildren": "否",
            "unCheckedValue": 0,
            "checkedChildren": "是",
            "checkedValue": 1
          },
          "type": "Switch"
        }
      },
      "是否显示": {
        "view": {
          "type": "Switch",
          "props": {
            "unCheckedChildren": "否",
            "unCheckedValue": 0,
            "checkedChildren": "是",
            "checkedValue": 1
          }
        },
        "bind": "is_dispaly"
      },
      "查看属性": {
        "view": {
          "props": {},
          "type": "Tooltip"
        },
        "bind": "view_props",
        "edit": {
          "type": "TextArea",
          "props": {
            "height": 200,
            "language": "json",
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "查看控件属性"
            }
          }
        }
      },
      "名称": {
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "bind": "name",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "字段名称"
            }
          },
          "type": "Input"
        },
        "bind": "name"
      },
      "描述": {
        "edit": {
          "bind": "description",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "字段介绍"
            }
          },
          "type": "Input"
        },
        "bind": "description",
        "view": {
          "props": {},
          "type": "Text"
        }
      },
      "启用": {
        "bind": "enable",
        "view": {
          "type": "Switch",
          "props": {
            "checkedChildren": "是",
            "checkedValue": 1,
            "unCheckedChildren": "否",
            "unCheckedValue": 0
          }
        }
      },
      "默认值": {
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "bind": "default",
          "props": {
            "itemProps": {
              "tooltip": "字段默认值",
              "rules": [
                {
                  "required": true
                }
              ]
            }
          },
          "type": "Input"
        },
        "bind": "default"
      },
      "编辑属性": {
        "view": {
          "type": "Tooltip",
          "props": {}
        },
        "bind": "edit_props",
        "edit": {
          "type": "TextArea",
          "props": {
            "language": "json",
            "height": 200,
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "编辑控件属性"
            }
          }
        }
      },
      "绑定字段": {
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "type": "Input",
          "bind": "bind",
          "props": {
            "itemProps": {
              "tooltip": "绑定的模型字段",
              "rules": [
                {
                  "required": true
                }
              ]
            }
          }
        },
        "bind": "bind"
      },
      "编辑类型": {
        "edit": {
          "type": "Input",
          "bind": "edit_type",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "编辑控件类型"
            }
          }
        },
        "bind": "edit_type",
        "view": {
          "type": "Text",
          "props": {}
        }
      },
      "显示长度": {
        "bind": "width",
        "view": {
          "props": {},
          "type": "Text"
        },
        "edit": {
          "type": "InputNumber",
          "bind": "width",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "字段显示长度"
            }
          }
        }
      },
      "ID": {
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "type": "Input",
          "bind": "id",
          "props": {
            "itemProps": {
              "tooltip": "表名",
              "rules": [
                {
                  "required": true
                }
              ]
            }
          }
        },
        "bind": "id"
      }
    },
    "filter": {
      "所属表单": {
        "bind": "where.form_id.in",
        "edit": {
          "type": "Select",
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "model": "sys.form",
                  "label": "name",
                  "value": "id"
                }
              }
            }
          }
        }
      },
      "名称": {
        "bind": "where.name.match",
        "edit": {
          "compute": "Trim",
          "props": {
            "placeholder": "请输入名称"
          },
          "type": "Input"
        }
      }
    }
  }
}