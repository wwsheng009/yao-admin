{
  "action": {
    "bind": {
      "option": {
        "withs": {},
        "option": {
          "form": "sys.model"
        }
      },
      "model": "sys.model"
    }
  },
  "layout": {
    "table": {
      "columns": [
        {
          "name": "名称",
          "width": 160
        },
        {
          "name": "备注",
          "width": 160
        },
        {
          "name": "描述",
          "width": 160
        }
      ],
      "operation": {
        "actions": [
          {
            "title": "查看",
            "icon": "icon-eye",
            "action": [
              {
                "payload": {
                  "Form": {
                    "model": "sys.model",
                    "type": "view"
                  }
                },
                "name": "OpenModal",
                "type": "Common.openModal"
              }
            ]
          },
          {
            "title": "编辑",
            "icon": "icon-edit-2",
            "action": [
              {
                "name": "OpenModal",
                "type": "Common.openModal",
                "payload": {
                  "Form": {
                    "type": "edit",
                    "model": "sys.model"
                  }
                }
              }
            ]
          },
          {
            "title": "删除",
            "icon": "icon-trash-2",
            "action": [
              {
                "type": "Common.confirm",
                "payload": {
                  "title": "确认删除",
                  "content": "删除后不可撤销！"
                },
                "name": "Confirm"
              },
              {
                "type": "Table.delete",
                "payload": {
                  "model": "sys.model"
                },
                "name": "Delete"
              }
            ]
          }
        ],
        "fold": false
      }
    },
    "primary": "id",
    "header": {
      "preset": {},
      "actions": []
    },
    "filter": {
      "columns": [
        {
          "name": "名称",
          "width": 4
        }
      ],
      "actions": [
        {
          "title": "添加",
          "icon": "icon-plus",
          "width": 3,
          "action": [
            {
              "name": "OpenModal",
              "type": "Common.openModal",
              "payload": {
                "Form": {
                  "model": "sys.model",
                  "type": "edit"
                }
              }
            }
          ]
        }
      ]
    }
  },
  "fields": {
    "filter": {
      "名称": {
        "bind": "where.name.match",
        "edit": {
          "type": "Input",
          "compute": "Trim",
          "props": {
            "placeholder": "请输入名称"
          }
        }
      }
    },
    "table": {
      "备注": {
        "bind": "comment",
        "view": {
          "props": {},
          "type": "Text"
        },
        "edit": {
          "bind": "comment",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "对应数据表中字段注释"
            }
          },
          "type": "Input"
        }
      },
      "描述": {
        "bind": "description",
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "bind": "description",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "介绍"
            }
          },
          "type": "TextArea"
        }
      },
      "ID": {
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "表名"
            }
          },
          "type": "Input",
          "bind": "id"
        },
        "bind": "id",
        "view": {
          "props": {},
          "type": "Text"
        }
      },
      "名称": {
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ]
            }
          },
          "type": "Input",
          "bind": "name"
        },
        "bind": "name"
      }
    }
  },
  "name": "::Model"
}