{
  "name": "::Form",
  "action": {
    "bind": {
      "model": "sys.form",
      "option": {
        "withs": {
          "model": {},
          "table": {}
        },
        "option": {
          "form": "sys.form"
        }
      }
    }
  },
  "layout": {
    "filter": {
      "actions": [
        {
          "action": [
            {
              "name": "OpenModal",
              "type": "Common.openModal",
              "payload": {
                "Form": {
                  "type": "edit",
                  "model": "sys.form"
                }
              }
            }
          ],
          "title": "添加",
          "icon": "icon-plus",
          "width": 3
        }
      ],
      "columns": [
        {
          "name": "名称",
          "width": 4
        },
        {
          "name": "关联模型",
          "width": 4
        },
        {
          "name": "关联表格",
          "width": 4
        }
      ]
    },
    "table": {
      "columns": [
        {
          "name": "名称",
          "width": 160
        },
        {
          "name": "主键",
          "width": 160
        },
        {
          "name": "关联模型",
          "width": 160
        },
        {
          "name": "关联表格",
          "width": 160
        },
        {
          "name": "备注",
          "width": 160
        },
        {
          "name": "绑定选项",
          "width": 160
        },
        {
          "name": "描述",
          "width": 160
        }
      ],
      "operation": {
        "fold": false,
        "actions": [
          {
            "title": "查看",
            "icon": "icon-eye",
            "action": [
              {
                "payload": {
                  "Form": {
                    "model": "sys.form",
                    "type": "view"
                  }
                },
                "name": "OpenModal",
                "type": "Common.openModal"
              }
            ]
          },
          {
            "title": "编辑",
            "icon": "icon-edit-2",
            "action": [
              {
                "name": "OpenModal",
                "type": "Common.openModal",
                "payload": {
                  "Form": {
                    "type": "edit",
                    "model": "sys.form"
                  }
                }
              }
            ]
          },
          {
            "title": "删除",
            "icon": "icon-trash-2",
            "action": [
              {
                "name": "Confirm",
                "type": "Common.confirm",
                "payload": {
                  "content": "删除后不可撤销！",
                  "title": "确认删除"
                }
              },
              {
                "payload": {
                  "model": "sys.form"
                },
                "name": "Delete",
                "type": "Table.delete"
              }
            ]
          }
        ]
      }
    },
    "primary": "id",
    "header": {
      "preset": {},
      "actions": []
    }
  },
  "fields": {
    "filter": {
      "名称": {
        "bind": "where.name.match",
        "edit": {
          "type": "Input",
          "compute": "Trim",
          "props": {
            "placeholder": "请输入名称"
          }
        }
      },
      "关联模型": {
        "bind": "where.model_id.in",
        "edit": {
          "type": "Select",
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "model": "sys.model",
                  "label": "name",
                  "value": "id"
                }
              }
            }
          }
        }
      },
      "关联表格": {
        "edit": {
          "type": "Select",
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "model": "sys.table",
                  "label": "name",
                  "value": "id"
                }
              }
            }
          }
        },
        "bind": "where.table_id.in"
      }
    },
    "table": {
      "ID": {
        "bind": "id",
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "bind": "id",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "标识"
            }
          },
          "type": "Input"
        }
      },
      "名称": {
        "edit": {
          "bind": "name",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ]
            }
          },
          "type": "Input"
        },
        "bind": "name",
        "view": {
          "type": "Text",
          "props": {}
        }
      },
      "主键": {
        "bind": "primary",
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "bind": "primary",
          "props": {
            "itemProps": {
              "tooltip": "显示主键"
            },
            "defaultValue": "id"
          },
          "type": "Input"
        }
      },
      "关联模型": {
        "view": {
          "type": "Tag",
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "model": "sys.model",
                  "label": "name",
                  "value": "id"
                }
              }
            }
          }
        },
        "edit": {
          "type": "Select",
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "value": "id",
                  "model": "sys.model",
                  "label": "name"
                }
              }
            },
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "表单关联的模型"
            }
          }
        },
        "bind": "model_id"
      },
      "关联表格": {
        "bind": "table_id",
        "view": {
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "value": "id",
                  "model": "sys.table",
                  "label": "name"
                }
              }
            }
          },
          "type": "Tag"
        },
        "edit": {
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "label": "name",
                  "value": "id",
                  "model": "sys.table"
                }
              }
            },
            "itemProps": {
              "tooltip": "表单关联的表格"
            }
          },
          "type": "Select"
        }
      },
      "备注": {
        "edit": {
          "bind": "comment",
          "props": {
            "itemProps": {
              "tooltip": "表注释",
              "rules": [
                {
                  "required": true
                }
              ]
            }
          },
          "type": "Input"
        },
        "bind": "comment",
        "view": {
          "type": "Text",
          "props": {}
        }
      },
      "绑定选项": {
        "edit": {
          "props": {
            "language": "json",
            "height": 200,
            "itemProps": {
              "tooltip": "绑定模型选项",
              "rules": [
                {
                  "required": true
                }
              ]
            }
          },
          "type": "TextArea"
        },
        "view": {
          "props": {},
          "type": "Tooltip"
        },
        "bind": "bind_option"
      },
      "描述": {
        "bind": "description",
        "view": {
          "props": {},
          "type": "Text"
        },
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "介绍"
            }
          },
          "type": "TextArea",
          "bind": "description"
        }
      }
    }
  }
}