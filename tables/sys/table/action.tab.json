{
  "action": {
    "bind": {
      "model": "sys.table.action",
      "option": {
        "withs": {},
        "option": {
          "form": "sys.table.action"
        }
      }
    }
  },
  "layout": {
    "table": {
      "columns": [
        {
          "name": "所属表格",
          "width": 160
        },
        {
          "name": "标题",
          "width": 160
        },
        {
          "name": "图标",
          "width": 160
        },
        {
          "width": 160,
          "name": "样式"
        },
        {
          "name": "修改时显示",
          "width": 160
        },
        {
          "name": "查看时显示",
          "width": 160
        },
        {
          "name": "操作",
          "width": 160
        }
      ],
      "operation": {
        "fold": false,
        "actions": [
          {
            "title": "查看",
            "icon": "icon-eye",
            "action": [
              {
                "payload": {
                  "Form": {
                    "model": "sys.table.action",
                    "type": "view"
                  }
                },
                "name": "OpenModal",
                "type": "Common.openModal"
              }
            ]
          },
          {
            "title": "编辑",
            "icon": "icon-edit-2",
            "action": [
              {
                "name": "OpenModal",
                "type": "Common.openModal",
                "payload": {
                  "Form": {
                    "type": "edit",
                    "model": "sys.table.action"
                  }
                }
              }
            ]
          },
          {
            "icon": "icon-trash-2",
            "action": [
              {
                "name": "Confirm",
                "type": "Common.confirm",
                "payload": {
                  "title": "确认删除",
                  "content": "删除后不可撤销！"
                }
              },
              {
                "payload": {
                  "model": "sys.table.action"
                },
                "name": "Delete",
                "type": "Table.delete"
              }
            ],
            "title": "删除"
          }
        ]
      }
    },
    "primary": "id",
    "header": {
      "preset": {},
      "actions": []
    },
    "filter": {
      "columns": [
        {
          "name": "标题",
          "width": 4
        }
      ],
      "actions": [
        {
          "title": "添加",
          "icon": "icon-plus",
          "width": 3,
          "action": [
            {
              "name": "OpenModal",
              "type": "Common.openModal",
              "payload": {
                "Form": {
                  "type": "edit",
                  "model": "sys.table.action"
                }
              }
            }
          ]
        }
      ]
    }
  },
  "fields": {
    "filter": {
      "标题": {
        "bind": "where.title.match",
        "edit": {
          "compute": "Trim",
          "props": {
            "placeholder": "请输入标题"
          },
          "type": "Input"
        }
      }
    },
    "table": {
      "ID": {
        "bind": "id",
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "表名"
            }
          },
          "type": "Input",
          "bind": "id"
        }
      },
      "所属表格": {
        "bind": "table_id",
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "type": "InputNumber",
          "bind": "table_id",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "字段所属的表格"
            }
          }
        }
      },
      "标题": {
        "bind": "title",
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "type": "Input",
          "bind": "title",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "标题"
            }
          }
        }
      },
      "图标": {
        "bind": "icon",
        "view": {
          "props": {},
          "type": "Image",
          "compute": "scripts.file.image.ImagesView"
        },
        "edit": {
          "type": "Upload",
          "compute": "Upload",
          "props": {
            "filetype": "image",
            "disabled": true,
            "$api": {
              "process": "fs.system.Upload"
            },
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "图标"
            }
          }
        }
      },
      "样式": {
        "bind": "style",
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "bind": "style",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "按钮样式"
            }
          },
          "type": "Input"
        }
      },
      "修改时显示": {
        "bind": "showWhenAdd",
        "view": {
          "type": "Switch",
          "props": {
            "checkedValue": 1,
            "unCheckedChildren": "否",
            "unCheckedValue": 0,
            "checkedChildren": "是"
          }
        }
      },
      "查看时显示": {
        "view": {
          "props": {
            "unCheckedChildren": "否",
            "unCheckedValue": 0,
            "checkedChildren": "是",
            "checkedValue": 1
          },
          "type": "Switch"
        },
        "bind": "showWhenView"
      },
      "操作": {
        "bind": "action",
        "edit": {
          "props": {
            "language": "json",
            "height": 200,
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "Action列表"
            }
          },
          "type": "TextArea"
        },
        "view": {
          "type": "Tooltip",
          "props": {}
        }
      }
    }
  },
  "name": "::Table Action"
}