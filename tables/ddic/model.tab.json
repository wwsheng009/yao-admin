{
  "name": "::Model",
  "action": {
    "bind": {
      "model": "ddic.model",
      "option": {
        "withs": {
          "columns": {}
        },
        "option": {
          "form": "ddic.model"
        }
      }
    }
  },
  "layout": {
    "primary": "id",
    "header": {
      "preset": {},
      "actions": []
    },
    "filter": {
      "columns": [
        {
          "name": "命名空间",
          "width": 4
        },
        {
          "name": "模型名称",
          "width": 4
        },
        {
          "width": 4,
          "name": "数据库表名"
        }
      ],
      "actions": [
        {
          "icon": "icon-plus",
          "width": 3,
          "action": [
            {
              "type": "Common.openModal",
              "payload": {
                "Form": {
                  "type": "edit",
                  "model": "ddic.model"
                }
              },
              "name": "OpenModal"
            }
          ],
          "title": "添加"
        }
      ]
    },
    "table": {
      "operation": {
        "fold": false,
        "actions": [
          {
            "title": "查看",
            "icon": "icon-eye",
            "action": [
              {
                "payload": {
                  "Form": {
                    "model": "ddic.model",
                    "type": "view"
                  }
                },
                "name": "OpenModal",
                "type": "Common.openModal"
              }
            ]
          },
          {
            "title": "编辑",
            "icon": "icon-edit-2",
            "action": [
              {
                "name": "OpenModal",
                "type": "Common.openModal",
                "payload": {
                  "Form": {
                    "type": "edit",
                    "model": "ddic.model"
                  }
                }
              }
            ]
          },
          {
            "title": "删除",
            "icon": "icon-trash-2",
            "action": [
              {
                "name": "Confirm",
                "type": "Common.confirm",
                "payload": {
                  "title": "确认删除",
                  "content": "删除后不可撤销！"
                }
              },
              {
                "name": "Delete",
                "type": "Table.delete",
                "payload": {
                  "model": "ddic.model"
                }
              }
            ]
          }
        ]
      },
      "columns": [
        {
          "name": "ID",
          "width": 160
        },
        {
          "name": "命名空间",
          "width": 160
        },
        {
          "name": "模型名称",
          "width": 160
        },
        {
          "name": "模型备注",
          "width": 160
        },
        {
          "name": "数据库表名",
          "width": 160
        },
        {
          "width": 250,
          "name": "数据库表备注"
        },
        {
          "name": "软删除",
          "width": 160
        },
        {
          "name": "增加时间戳",
          "width": 160
        }
      ]
    }
  },
  "fields": {
    "filter": {
      "模型名称": {
        "bind": "where.name.match",
        "edit": {
          "type": "Input",
          "compute": "Trim",
          "props": {
            "placeholder": "请输入模型名称"
          }
        }
      },
      "数据库表名": {
        "bind": "where.table_name.match",
        "edit": {
          "compute": "Trim",
          "props": {
            "placeholder": "请输入数据库表名"
          },
          "type": "Input"
        }
      },
      "命名空间": {
        "bind": "where.namespace.match",
        "edit": {
          "type": "Input",
          "compute": "Trim",
          "props": {
            "placeholder": "请输入命名空间"
          }
        }
      }
    },
    "table": {
      "数据库表备注": {
        "edit": {
          "type": "Input",
          "bind": "table_comment",
          "props": {
            "itemProps": {
              "tooltip": "对应数据表中字段注释"
            }
          }
        },
        "bind": "table_comment",
        "view": {
          "props": {},
          "type": "Text"
        }
      },
      "软删除": {
        "bind": "soft_deletes",
        "view": {
          "type": "Switch",
          "props": {
            "checkedChildren": "是",
            "checkedValue": 1,
            "unCheckedChildren": "否",
            "unCheckedValue": 0
          }
        }
      },
      "增加时间戳": {
        "bind": "timestamps",
        "view": {
          "type": "Switch",
          "props": {
            "checkedChildren": "是",
            "checkedValue": 1,
            "unCheckedChildren": "否",
            "unCheckedValue": 0
          }
        }
      },
      "关联关系": {
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "关联关系"
            }
          },
          "compute": "scripts.ddic.compute.json.Edit",
          "type": "TextArea"
        },
        "bind": "relations",
        "view": {
          "props": {
            "ddic_hide": true
          },
          "type": "Tooltip",
          "compute": "scripts.ddic.compute.json.View"
        }
      },
      "命名空间": {
        "bind": "namespace",
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "type": "Input",
          "bind": "namespace",
          "props": {
            "defaultValue": "app"
          }
        }
      },
      "模型名称": {
        "bind": "name",
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ]
            }
          },
          "type": "Input",
          "bind": "name"
        }
      },
      "模型备注": {
        "bind": "model_comment",
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "type": "Input",
          "bind": "model_comment",
          "props": {
            "itemProps": {
              "tooltip": "模型定义注释"
            }
          }
        }
      },
      "ID": {
        "bind": "id",
        "view": {
          "props": {},
          "type": "Text"
        },
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "表名"
            }
          },
          "type": "Input",
          "bind": "id"
        }
      },
      "数据库表名": {
        "bind": "table_name",
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "bind": "table_name",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ]
            }
          },
          "type": "Input"
        }
      }
    }
  }
}