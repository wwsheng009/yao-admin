{
  "name": "::Model",
  "action": {
    "bind": {
      "model": "ddic.model",
      "option": {
        "option": {
          "form": "ddic.model"
        },
        "withs": {
          "columns": {}
        }
      }
    }
  },
  "layout": {
    "primary": "id",
    "header": {
      "actions": [],
      "preset": {}
    },
    "filter": {
      "columns": [
        {
          "name": "模型名称",
          "width": 4
        },
        {
          "name": "数据库表名",
          "width": 4
        }
      ],
      "actions": [
        {
          "action": [
            {
              "type": "Common.openModal",
              "payload": {
                "Form": {
                  "model": "ddic.model",
                  "type": "edit"
                }
              },
              "name": "OpenModal"
            }
          ],
          "title": "添加",
          "icon": "icon-plus",
          "width": 3
        }
      ]
    },
    "table": {
      "columns": [
        {
          "name": "ID",
          "width": 160
        },
        {
          "name": "模型名称",
          "width": 160
        },
        {
          "width": 160,
          "name": "模型备注"
        },
        {
          "name": "数据库表名",
          "width": 160
        },
        {
          "name": "数据库表备注",
          "width": 250
        },
        {
          "name": "软删除",
          "width": 160
        },
        {
          "name": "增加时间戳",
          "width": 160
        }
      ],
      "operation": {
        "fold": false,
        "actions": [
          {
            "icon": "icon-eye",
            "action": [
              {
                "name": "OpenModal",
                "type": "Common.openModal",
                "payload": {
                  "Form": {
                    "model": "ddic.model",
                    "type": "view"
                  }
                }
              }
            ],
            "title": "查看"
          },
          {
            "action": [
              {
                "type": "Common.openModal",
                "payload": {
                  "Form": {
                    "model": "ddic.model",
                    "type": "edit"
                  }
                },
                "name": "OpenModal"
              }
            ],
            "title": "编辑",
            "icon": "icon-edit-2"
          },
          {
            "title": "删除",
            "icon": "icon-trash-2",
            "action": [
              {
                "name": "Confirm",
                "type": "Common.confirm",
                "payload": {
                  "title": "确认删除",
                  "content": "删除后不可撤销！"
                }
              },
              {
                "payload": {
                  "model": "ddic.model"
                },
                "name": "Delete",
                "type": "Table.delete"
              }
            ]
          }
        ]
      }
    }
  },
  "fields": {
    "filter": {
      "模型名称": {
        "bind": "where.name.match",
        "edit": {
          "compute": "Trim",
          "props": {
            "placeholder": "请输入模型名称"
          },
          "type": "Input"
        }
      },
      "数据库表名": {
        "bind": "where.table_name.match",
        "edit": {
          "compute": "Trim",
          "props": {
            "placeholder": "请输入数据库表名"
          },
          "type": "Input"
        }
      }
    },
    "table": {
      "数据库表备注": {
        "view": {
          "props": {},
          "type": "Text"
        },
        "edit": {
          "bind": "table_comment",
          "props": {
            "itemProps": {
              "tooltip": "对应数据表中字段注释"
            }
          },
          "type": "Input"
        },
        "bind": "table_comment"
      },
      "软删除": {
        "bind": "soft_deletes",
        "view": {
          "props": {
            "checkedValue": 1,
            "unCheckedChildren": "否",
            "unCheckedValue": 0,
            "checkedChildren": "是"
          },
          "type": "Switch"
        }
      },
      "增加时间戳": {
        "bind": "timestamps",
        "view": {
          "type": "Switch",
          "props": {
            "unCheckedChildren": "否",
            "unCheckedValue": 0,
            "checkedChildren": "是",
            "checkedValue": 1
          }
        }
      },
      "ID": {
        "view": {
          "props": {},
          "type": "Text"
        },
        "edit": {
          "bind": "id",
          "props": {
            "itemProps": {
              "tooltip": "表名"
            }
          },
          "type": "Input"
        },
        "bind": "id"
      },
      "模型名称": {
        "edit": {
          "bind": "name",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "pattern": "^[a-zA-Z.]+$",
                  "message": "{{label}}应该由6-18位，大小写字母、数字构成"
                },
                {
                  "type": "string",
                  "max": 18,
                  "required": true,
                  "min": 6
                }
              ]
            }
          },
          "type": "Input"
        },
        "bind": "name",
        "view": {
          "props": {},
          "type": "Text"
        }
      },
      "模型备注": {
        "edit": {
          "bind": "model_comment",
          "props": {
            "itemProps": {
              "tooltip": "模型定义注释"
            }
          },
          "type": "Input"
        },
        "bind": "model_comment",
        "view": {
          "props": {},
          "type": "Text"
        }
      },
      "数据库表名": {
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "type": "Input",
          "bind": "table_name",
          "props": {}
        },
        "bind": "table_name"
      }
    }
  }
}