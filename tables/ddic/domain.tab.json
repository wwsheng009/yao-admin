{
  "name": "::Domain",
  "action": {
    "bind": {
      "model": "ddic.domain",
      "option": {
        "withs": {
          "field_type": {}
        },
        "option": {
          "form": "ddic.domain"
        }
      }
    }
  },
  "layout": {
    "primary": "id",
    "header": {
      "preset": {},
      "actions": []
    },
    "filter": {
      "columns": [
        {
          "name": "描述",
          "width": 4
        },
        {
          "name": "字段类型",
          "width": 4
        }
      ],
      "actions": [
        {
          "action": [
            {
              "name": "OpenModal",
              "type": "Common.openModal",
              "payload": {
                "Form": {
                  "type": "edit",
                  "model": "ddic.domain"
                }
              }
            }
          ],
          "title": "添加",
          "icon": "icon-plus",
          "width": 3
        }
      ]
    },
    "table": {
      "columns": [
        {
          "name": "标识",
          "width": 160
        },
        {
          "name": "描述",
          "width": 160
        },
        {
          "name": "字段类型",
          "width": 160
        },
        {
          "name": "字段长度",
          "width": 160
        },
        {
          "name": "位数",
          "width": 160
        },
        {
          "name": "小数位位数",
          "width": 160
        },
        {
          "name": "许可值",
          "width": 160
        },
        {
          "name": "校验规则",
          "width": 160
        }
      ],
      "operation": {
        "fold": false,
        "actions": [
          {
            "title": "查看",
            "icon": "icon-eye",
            "action": [
              {
                "payload": {
                  "Form": {
                    "model": "ddic.domain",
                    "type": "view"
                  }
                },
                "name": "OpenModal",
                "type": "Common.openModal"
              }
            ]
          },
          {
            "title": "编辑",
            "icon": "icon-edit-2",
            "action": [
              {
                "name": "OpenModal",
                "type": "Common.openModal",
                "payload": {
                  "Form": {
                    "model": "ddic.domain",
                    "type": "edit"
                  }
                }
              }
            ]
          },
          {
            "action": [
              {
                "name": "Confirm",
                "type": "Common.confirm",
                "payload": {
                  "title": "确认删除",
                  "content": "删除后不可撤销！"
                }
              },
              {
                "payload": {
                  "model": "ddic.domain"
                },
                "name": "Delete",
                "type": "Table.delete"
              }
            ],
            "title": "删除",
            "icon": "icon-trash-2"
          }
        ]
      }
    }
  },
  "fields": {
    "table": {
      "标识": {
        "bind": "id",
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "type": "Input",
          "bind": "id",
          "props": {
            "itemProps": {
              "tooltip": "标识"
            }
          }
        }
      },
      "描述": {
        "bind": "name",
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "type": "Input",
          "bind": "name",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ]
            }
          }
        }
      },
      "字段类型": {
        "bind": "field_type_id",
        "view": {
          "type": "Tag",
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "label": "name",
                  "value": "id",
                  "model": "ddic.model.column.type"
                }
              }
            }
          }
        },
        "edit": {
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "model": "ddic.model.column.type",
                  "label": "name",
                  "value": "id"
                }
              }
            },
            "itemProps": {
              "tooltip": "字段类型定义"
            }
          },
          "type": "Select"
        }
      },
      "字段长度": {
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "type": "InputNumber",
          "bind": "length",
          "props": {
            "itemProps": {
              "tooltip": "字段长度，对string等类型字段有效"
            }
          }
        },
        "bind": "length"
      },
      "位数": {
        "bind": "precision",
        "view": {
          "props": {},
          "type": "Text"
        },
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "字段位数(含小数位)，对float、decimal等类型字段有效"
            }
          },
          "type": "InputNumber",
          "bind": "precision"
        }
      },
      "小数位位数": {
        "bind": "scale",
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "type": "InputNumber",
          "bind": "scale",
          "props": {
            "itemProps": {
              "tooltip": "字段小数位位数，对float、decimal等类型字段有效"
            }
          }
        }
      },
      "许可值": {
        "bind": "option"
      },
      "校验规则": {
        "bind": "validations",
        "view": {
          "compute": "scripts.ddic.compute.json.View",
          "props": {},
          "type": "Tooltip"
        },
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "字段校验规则"
            }
          },
          "compute": "scripts.ddic.compute.json.Edit",
          "type": "TextArea"
        }
      }
    },
    "filter": {
      "描述": {
        "bind": "where.name.match",
        "edit": {
          "type": "Input",
          "compute": "Trim",
          "props": {
            "placeholder": "请输入描述"
          }
        }
      },
      "字段类型": {
        "bind": "where.field_type_id.in",
        "edit": {
          "type": "Select",
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "label": "name",
                  "value": "id",
                  "model": "ddic.model.column.type"
                }
              }
            },
            "itemProps": {
              "tooltip": "字段类型定义"
            }
          }
        }
      }
    }
  }
}