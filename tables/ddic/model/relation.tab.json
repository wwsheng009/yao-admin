{
  "name": "::Model Relation",
  "action": {
    "bind": {
      "model": "ddic.model.relation",
      "option": {
        "withs": {
          "model": {}
        },
        "option": {
          "form": "ddic.model.relation"
        }
      }
    }
  },
  "layout": {
    "primary": "id",
    "header": {
      "preset": {},
      "actions": []
    },
    "filter": {
      "columns": [
        {
          "width": 4,
          "name": "模型"
        },
        {
          "name": "名称",
          "width": 4
        }
      ],
      "actions": [
        {
          "title": "添加",
          "icon": "icon-plus",
          "width": 3,
          "action": [
            {
              "name": "OpenModal",
              "type": "Common.openModal",
              "payload": {
                "Form": {
                  "type": "edit",
                  "model": "ddic.model.relation"
                }
              }
            }
          ]
        }
      ]
    },
    "table": {
      "columns": [
        {
          "name": "ID",
          "width": 160
        },
        {
          "name": "模型",
          "width": 160
        },
        {
          "width": 160,
          "name": "名称"
        },
        {
          "name": "关联关系",
          "width": 160
        },
        {
          "name": "外键",
          "width": 160
        },
        {
          "name": "主键",
          "width": 160
        },
        {
          "name": "关联条件",
          "width": 160
        }
      ],
      "operation": {
        "fold": false,
        "actions": [
          {
            "title": "查看",
            "icon": "icon-eye",
            "action": [
              {
                "payload": {
                  "Form": {
                    "model": "ddic.model.relation",
                    "type": "view"
                  }
                },
                "name": "OpenModal",
                "type": "Common.openModal"
              }
            ]
          },
          {
            "title": "编辑",
            "icon": "icon-edit-2",
            "action": [
              {
                "name": "OpenModal",
                "type": "Common.openModal",
                "payload": {
                  "Form": {
                    "type": "edit",
                    "model": "ddic.model.relation"
                  }
                }
              }
            ]
          },
          {
            "action": [
              {
                "name": "Confirm",
                "type": "Common.confirm",
                "payload": {
                  "title": "确认删除",
                  "content": "删除后不可撤销！"
                }
              },
              {
                "name": "Delete",
                "type": "Table.delete",
                "payload": {
                  "model": "ddic.model.relation"
                }
              }
            ],
            "title": "删除",
            "icon": "icon-trash-2"
          }
        ]
      }
    }
  },
  "fields": {
    "filter": {
      "模型": {
        "bind": "where.model_id.in",
        "edit": {
          "type": "Select",
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "model": "ddic.model",
                  "label": "name",
                  "value": "id"
                }
              }
            },
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "所属模型"
            }
          }
        }
      },
      "名称": {
        "edit": {
          "type": "Input",
          "compute": "Trim",
          "props": {
            "placeholder": "请输入名称"
          }
        },
        "bind": "where.name.match"
      }
    },
    "table": {
      "主键": {
        "bind": "key",
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "bind": "key",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "主键"
            }
          },
          "type": "Input"
        }
      },
      "关联条件": {
        "bind": "query",
        "view": {
          "compute": "scripts.ddic.compute.json.View",
          "props": {},
          "type": "Tooltip"
        },
        "edit": {
          "type": "TextArea",
          "props": {
            "itemProps": {
              "tooltip": "关联条件"
            }
          },
          "compute": "scripts.ddic.compute.json.Edit"
        }
      },
      "ID": {
        "view": {
          "props": {},
          "type": "Text"
        },
        "edit": {
          "bind": "id",
          "props": {
            "itemProps": {
              "tooltip": "表名"
            }
          },
          "type": "Input"
        },
        "bind": "id"
      },
      "模型": {
        "view": {
          "type": "Tag",
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "label": "name",
                  "value": "id",
                  "model": "ddic.model"
                }
              }
            }
          }
        },
        "edit": {
          "type": "Select",
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "model": "ddic.model",
                  "label": "name",
                  "value": "id"
                }
              }
            },
            "itemProps": {
              "tooltip": "所属模型",
              "rules": [
                {
                  "required": true
                }
              ]
            }
          }
        },
        "bind": "model_id"
      },
      "名称": {
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "type": "Input",
          "bind": "name",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "定义关系名称"
            }
          }
        },
        "bind": "name"
      },
      "关联关系": {
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "与当前数据模型的关系类型. `hasOne` 一对一, `hasMany` 一对多。"
            },
            "placeholder": "请选择关联关系",
            "options": [
              {
                "label": "::hasOne",
                "value": "hasOne"
              },
              {
                "label": "::hasMany",
                "value": "hasMany"
              }
            ]
          },
          "type": "Select"
        },
        "view": {
          "type": "Tag",
          "props": {
            "options": [
              {
                "label": "::hasOne",
                "value": "hasOne"
              },
              {
                "label": "::hasMany",
                "value": "hasMany"
              }
            ],
            "placeholder": "请选择关联关系"
          }
        },
        "bind": "type"
      },
      "外键": {
        "bind": "foreign",
        "view": {
          "props": {},
          "type": "Text"
        },
        "edit": {
          "bind": "foreign",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "外键"
            }
          },
          "type": "Input"
        }
      }
    }
  }
}