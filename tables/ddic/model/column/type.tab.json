{
  "name": "::Model Column Type",
  "action": {
    "bind": {
      "model": "ddic.model.column.type",
      "option": {
        "withs": {},
        "option": {
          "form": "ddic.model.column.type"
        }
      }
    }
  },
  "layout": {
    "primary": "id",
    "header": {
      "actions": [],
      "preset": {}
    },
    "filter": {
      "columns": [
        {
          "name": "字段描述",
          "width": 4
        }
      ],
      "actions": [
        {
          "icon": "icon-plus",
          "width": 3,
          "action": [
            {
              "payload": {
                "Form": {
                  "model": "ddic.model.column.type",
                  "type": "edit"
                }
              },
              "name": "OpenModal",
              "type": "Common.openModal"
            }
          ],
          "title": "添加"
        }
      ]
    },
    "table": {
      "columns": [
        {
          "name": "标识",
          "width": 160
        },
        {
          "name": "字段类型",
          "width": 160
        },
        {
          "name": "字段描述",
          "width": 160
        },
        {
          "name": "注释",
          "width": 160
        }
      ],
      "operation": {
        "fold": false,
        "actions": [
          {
            "title": "查看",
            "icon": "icon-eye",
            "action": [
              {
                "payload": {
                  "Form": {
                    "model": "ddic.model.column.type",
                    "type": "view"
                  }
                },
                "name": "OpenModal",
                "type": "Common.openModal"
              }
            ]
          },
          {
            "title": "编辑",
            "icon": "icon-edit-2",
            "action": [
              {
                "name": "OpenModal",
                "type": "Common.openModal",
                "payload": {
                  "Form": {
                    "type": "edit",
                    "model": "ddic.model.column.type"
                  }
                }
              }
            ]
          },
          {
            "title": "删除",
            "icon": "icon-trash-2",
            "action": [
              {
                "name": "Confirm",
                "type": "Common.confirm",
                "payload": {
                  "title": "确认删除",
                  "content": "删除后不可撤销！"
                }
              },
              {
                "payload": {
                  "model": "ddic.model.column.type"
                },
                "name": "Delete",
                "type": "Table.delete"
              }
            ]
          }
        ]
      }
    }
  },
  "fields": {
    "filter": {
      "字段描述": {
        "bind": "where.name.match",
        "edit": {
          "type": "Input",
          "compute": "Trim",
          "props": {
            "placeholder": "请输入字段描述"
          }
        }
      }
    },
    "table": {
      "标识": {
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "标识"
            }
          },
          "type": "Input",
          "bind": "id"
        },
        "bind": "id",
        "view": {
          "props": {},
          "type": "Text"
        }
      },
      "字段类型": {
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ]
            }
          },
          "type": "Input",
          "bind": "type"
        },
        "bind": "type"
      },
      "字段描述": {
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "bind": "name",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ]
            }
          },
          "type": "Input"
        },
        "bind": "name"
      },
      "注释": {
        "bind": "comment",
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "注释"
            }
          },
          "type": "Input",
          "bind": "comment"
        }
      }
    }
  }
}