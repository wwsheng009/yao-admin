{
  "name": "::Model Column",
  "action": {
    "bind": {
      "model": "ddic.model.column",
      "option": {
        "withs": {
          "model": {},
          "domain": {},
          "element": {},
          "column_type": {}
        },
        "option": {
          "form": "ddic.model.column"
        }
      }
    }
  },
  "layout": {
    "filter": {
      "columns": [
        {
          "name": "模型",
          "width": 4
        },
        {
          "name": "名称",
          "width": 4
        },
        {
          "name": "域",
          "width": 4
        },
        {
          "name": "数据元素",
          "width": 4
        },
        {
          "name": "字段类型",
          "width": 4
        }
      ],
      "actions": [
        {
          "title": "添加",
          "icon": "icon-plus",
          "width": 3,
          "action": [
            {
              "name": "OpenModal",
              "type": "Common.openModal",
              "payload": {
                "Form": {
                  "type": "edit",
                  "model": "ddic.model.column"
                }
              }
            }
          ]
        }
      ]
    },
    "table": {
      "columns": [
        {
          "name": "模型",
          "width": 160
        },
        {
          "name": "名称",
          "width": 160
        },
        {
          "name": "域",
          "width": 160
        },
        {
          "name": "数据元素",
          "width": 160
        },
        {
          "width": 160,
          "name": "标签"
        },
        {
          "name": "字段类型",
          "width": 160
        },
        {
          "name": "长度",
          "width": 160
        },
        {
          "name": "位数(含小数位)",
          "width": 250
        },
        {
          "name": "小数位",
          "width": 160
        },
        {
          "name": "是否空值",
          "width": 160
        },
        {
          "name": "默认值",
          "width": 160
        },
        {
          "name": "加密方式",
          "width": 160
        },
        {
          "name": "索引",
          "width": 160
        },
        {
          "name": "唯一索引",
          "width": 160
        },
        {
          "name": "主键",
          "width": 160
        },
        {
          "name": "注释",
          "width": 160
        },
        {
          "name": "选项",
          "width": 160
        },
        {
          "name": "字段校验规则",
          "width": 250
        }
      ],
      "operation": {
        "fold": false,
        "actions": [
          {
            "icon": "icon-eye",
            "action": [
              {
                "payload": {
                  "Form": {
                    "model": "ddic.model.column",
                    "type": "view"
                  }
                },
                "name": "OpenModal",
                "type": "Common.openModal"
              }
            ],
            "title": "查看"
          },
          {
            "title": "编辑",
            "icon": "icon-edit-2",
            "action": [
              {
                "name": "OpenModal",
                "type": "Common.openModal",
                "payload": {
                  "Form": {
                    "type": "edit",
                    "model": "ddic.model.column"
                  }
                }
              }
            ]
          },
          {
            "title": "删除",
            "icon": "icon-trash-2",
            "action": [
              {
                "name": "Confirm",
                "type": "Common.confirm",
                "payload": {
                  "title": "确认删除",
                  "content": "删除后不可撤销！"
                }
              },
              {
                "name": "Delete",
                "type": "Table.delete",
                "payload": {
                  "model": "ddic.model.column"
                }
              }
            ]
          }
        ]
      }
    },
    "primary": "id",
    "header": {
      "preset": {},
      "actions": []
    }
  },
  "fields": {
    "table": {
      "域": {
        "bind": "domain_id",
        "view": {
          "type": "Tag",
          "props": {
            "xProps": {
              "$remote": {
                "query": {
                  "value": "id",
                  "model": "ddic.domain",
                  "label": "name"
                },
                "process": "yao.component.SelectOptions"
              }
            }
          }
        },
        "edit": {
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "label": "name",
                  "value": "id",
                  "model": "ddic.domain"
                }
              }
            },
            "itemProps": {
              "tooltip": "域ID"
            }
          },
          "type": "Select"
        }
      },
      "数据元素": {
        "view": {
          "type": "Tag",
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "label": "name",
                  "value": "id",
                  "model": "ddic.element"
                }
              }
            }
          }
        },
        "edit": {
          "type": "Select",
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "value": "id",
                  "model": "ddic.element",
                  "label": "name"
                }
              }
            },
            "itemProps": {
              "tooltip": "数据元素ID"
            }
          }
        },
        "bind": "element_id"
      },
      "长度": {
        "edit": {
          "type": "InputNumber",
          "bind": "length",
          "props": {
            "itemProps": {
              "tooltip": "字段长度，对 `string` 等类型字段有效"
            }
          }
        },
        "bind": "length",
        "view": {
          "type": "Text",
          "props": {}
        }
      },
      "位数(含小数位)": {
        "view": {
          "props": {},
          "type": "Text"
        },
        "edit": {
          "bind": "precision",
          "props": {
            "itemProps": {
              "tooltip": "字段位数(含小数位)，对 `float`、`decimal` 等类型字段有效"
            }
          },
          "type": "InputNumber"
        },
        "bind": "precision"
      },
      "唯一索引": {
        "view": {
          "props": {
            "unCheckedChildren": "否",
            "unCheckedValue": 0,
            "checkedChildren": "是",
            "checkedValue": 1
          },
          "type": "Switch"
        },
        "bind": "unique"
      },
      "名称": {
        "bind": "name",
        "view": {
          "props": {},
          "type": "Text"
        },
        "edit": {
          "bind": "name",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "数据库表的字段名"
            }
          },
          "type": "Input"
        }
      },
      "标签": {
        "edit": {
          "type": "Input",
          "bind": "label",
          "props": {
            "itemProps": {
              "tooltip": "字段显示名称，用于在管理表单，开发平台等成场景下呈现"
            }
          }
        },
        "bind": "label",
        "view": {
          "type": "Text",
          "props": {}
        }
      },
      "是否空值": {
        "bind": "nullable",
        "view": {
          "type": "Switch",
          "props": {
            "checkedValue": 1,
            "unCheckedChildren": "否",
            "unCheckedValue": 0,
            "checkedChildren": "是"
          }
        }
      },
      "默认值": {
        "bind": "default",
        "view": {
          "props": {},
          "type": "Text"
        },
        "edit": {
          "type": "Input",
          "bind": "default",
          "props": {
            "itemProps": {
              "tooltip": "string|number|float|字段默认值"
            }
          }
        }
      },
      "注释": {
        "bind": "comment",
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "type": "Input",
          "bind": "comment",
          "props": {
            "itemProps": {
              "tooltip": "注释"
            }
          }
        }
      },
      "选项": {
        "bind": "option",
        "edit": {
          "props": {
            "language": "json",
            "height": 200,
            "itemProps": {
              "tooltip": "字段许可值，对 `enum` 类型字段有效"
            }
          },
          "type": "TextArea"
        },
        "view": {
          "props": {},
          "type": "Tooltip"
        }
      },
      "ID": {
        "view": {
          "props": {},
          "type": "Text"
        },
        "edit": {
          "type": "Input",
          "bind": "id",
          "props": {
            "itemProps": {
              "tooltip": "标识"
            }
          }
        },
        "bind": "id"
      },
      "索引": {
        "view": {
          "props": {
            "checkedValue": 1,
            "unCheckedChildren": "否",
            "unCheckedValue": 0,
            "checkedChildren": "是"
          },
          "type": "Switch"
        },
        "bind": "index"
      },
      "主键": {
        "view": {
          "props": {
            "unCheckedValue": 0,
            "checkedChildren": "是",
            "checkedValue": 1,
            "unCheckedChildren": "否"
          },
          "type": "Switch"
        },
        "bind": "primary"
      },
      "模型": {
        "bind": "model_id",
        "view": {
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "value": "id",
                  "model": "ddic.model",
                  "label": "name"
                }
              }
            }
          },
          "type": "Tag"
        },
        "edit": {
          "type": "Select",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "字段所属的模型"
            },
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "model": "ddic.model",
                  "label": "name",
                  "value": "id"
                }
              }
            }
          }
        }
      },
      "小数位": {
        "view": {
          "props": {},
          "type": "Text"
        },
        "edit": {
          "type": "InputNumber",
          "bind": "scale",
          "props": {
            "itemProps": {
              "tooltip": "字段小数位位数，对 `float`、`decimal` 等类型字段有效"
            }
          }
        },
        "bind": "scale"
      },
      "加密方式": {
        "view": {
          "props": {
            "options": [
              {
                "label": "::PASSWORD",
                "value": "PASSWORD"
              },
              {
                "label": "::AES",
                "value": "AES"
              }
            ],
            "placeholder": "请选择加密方式"
          },
          "type": "Tag"
        },
        "bind": "crypt",
        "edit": {
          "type": "Select",
          "props": {
            "placeholder": "请选择加密方式",
            "options": [
              {
                "label": "::PASSWORD",
                "value": "PASSWORD"
              },
              {
                "label": "::AES",
                "value": "AES"
              }
            ],
            "itemProps": {
              "tooltip": "字段加密存储方式。许可值 `AES(MySQL Only)`, `PASSWORD`"
            }
          }
        }
      },
      "字段校验规则": {
        "edit": {
          "props": {
            "height": 200,
            "language": "json",
            "itemProps": {
              "tooltip": "字段校验规则"
            }
          },
          "type": "TextArea"
        },
        "view": {
          "type": "Tooltip",
          "props": {}
        },
        "bind": "validations"
      },
      "字段类型": {
        "view": {
          "type": "Tag",
          "props": {
            "xProps": {
              "$remote": {
                "query": {
                  "model": "ddic.model.column.type",
                  "label": "name",
                  "value": "id"
                },
                "process": "yao.component.SelectOptions"
              }
            }
          }
        },
        "edit": {
          "type": "Select",
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "value": "id",
                  "model": "ddic.model.column.type",
                  "label": "name"
                }
              }
            },
            "itemProps": {
              "tooltip": "字段类型定义"
            }
          }
        },
        "bind": "column_type_id"
      }
    },
    "filter": {
      "名称": {
        "bind": "where.name.match",
        "edit": {
          "props": {
            "placeholder": "请输入名称"
          },
          "type": "Input",
          "compute": "Trim"
        }
      },
      "域": {
        "bind": "where.domain_id.in",
        "edit": {
          "type": "Select",
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "model": "ddic.domain",
                  "label": "name",
                  "value": "id"
                }
              }
            }
          }
        }
      },
      "数据元素": {
        "bind": "where.element_id.in",
        "edit": {
          "type": "Select",
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "model": "ddic.element",
                  "label": "name",
                  "value": "id"
                }
              }
            }
          }
        }
      },
      "字段类型": {
        "bind": "where.column_type_id.in",
        "edit": {
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "model": "ddic.model.column.type",
                  "label": "name",
                  "value": "id"
                }
              }
            }
          },
          "type": "Select"
        }
      },
      "模型": {
        "bind": "where.model_id.in",
        "edit": {
          "type": "Select",
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "model": "ddic.model",
                  "label": "name",
                  "value": "id"
                }
              }
            }
          }
        }
      }
    }
  }
}