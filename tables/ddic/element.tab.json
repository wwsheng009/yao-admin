{
  "name": "::Data Element",
  "action": {
    "bind": {
      "model": "ddic.element",
      "option": {
        "withs": {
          "domain": {},
          "field_type": {}
        },
        "option": {
          "form": "ddic.element"
        }
      }
    }
  },
  "layout": {
    "primary": "id",
    "header": {
      "preset": {},
      "actions": []
    },
    "filter": {
      "columns": [
        {
          "width": 4,
          "name": "描述"
        },
        {
          "name": "域",
          "width": 4
        },
        {
          "name": "字段类型",
          "width": 4
        }
      ],
      "actions": [
        {
          "title": "添加",
          "icon": "icon-plus",
          "width": 3,
          "action": [
            {
              "name": "OpenModal",
              "type": "Common.openModal",
              "payload": {
                "Form": {
                  "type": "edit",
                  "model": "ddic.element"
                }
              }
            }
          ]
        }
      ]
    },
    "table": {
      "operation": {
        "fold": false,
        "actions": [
          {
            "title": "查看",
            "icon": "icon-eye",
            "action": [
              {
                "payload": {
                  "Form": {
                    "model": "ddic.element",
                    "type": "view"
                  }
                },
                "name": "OpenModal",
                "type": "Common.openModal"
              }
            ]
          },
          {
            "title": "编辑",
            "icon": "icon-edit-2",
            "action": [
              {
                "payload": {
                  "Form": {
                    "type": "edit",
                    "model": "ddic.element"
                  }
                },
                "name": "OpenModal",
                "type": "Common.openModal"
              }
            ]
          },
          {
            "title": "删除",
            "icon": "icon-trash-2",
            "action": [
              {
                "name": "Confirm",
                "type": "Common.confirm",
                "payload": {
                  "title": "确认删除",
                  "content": "删除后不可撤销！"
                }
              },
              {
                "name": "Delete",
                "type": "Table.delete",
                "payload": {
                  "model": "ddic.element"
                }
              }
            ]
          }
        ]
      },
      "columns": [
        {
          "width": 160,
          "name": "描述"
        },
        {
          "name": "域",
          "width": 160
        },
        {
          "name": "字段类型",
          "width": 160
        },
        {
          "name": "字段长度",
          "width": 160
        },
        {
          "name": "字段位数(含小数位)",
          "width": 250
        },
        {
          "width": 250,
          "name": "字段小数位位数"
        },
        {
          "name": "是否为空",
          "width": 160
        },
        {
          "name": "字段默认值",
          "width": 160
        },
        {
          "name": "加密方式",
          "width": 160
        },
        {
          "name": "字段许可值",
          "width": 160
        },
        {
          "name": "字段校验规则",
          "width": 250
        }
      ]
    }
  },
  "fields": {
    "filter": {
      "描述": {
        "bind": "where.name.match",
        "edit": {
          "type": "Input",
          "compute": "Trim",
          "props": {
            "placeholder": "请输入描述"
          }
        }
      },
      "域": {
        "bind": "where.domain_id.in",
        "edit": {
          "type": "Select",
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "model": "ddic.domain",
                  "label": "name",
                  "value": "id"
                }
              }
            }
          }
        }
      },
      "字段类型": {
        "bind": "where.field_type_id.in",
        "edit": {
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "model": "ddic.model.column.type",
                  "label": "name",
                  "value": "id"
                }
              }
            }
          },
          "type": "Select"
        }
      }
    },
    "table": {
      "字段校验规则": {
        "edit": {
          "props": {
            "language": "json",
            "height": 200,
            "itemProps": {
              "tooltip": "字段校验规则"
            }
          },
          "type": "TextArea"
        },
        "view": {
          "props": {},
          "type": "Tooltip"
        },
        "bind": "validations"
      },
      "标识": {
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "type": "Input",
          "bind": "id",
          "props": {
            "itemProps": {
              "tooltip": "标识"
            }
          }
        },
        "bind": "id"
      },
      "域": {
        "bind": "domain_id",
        "view": {
          "type": "Tag",
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "value": "id",
                  "model": "ddic.domain",
                  "label": "name"
                }
              }
            }
          }
        },
        "edit": {
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "model": "ddic.domain",
                  "label": "name",
                  "value": "id"
                }
              }
            },
            "itemProps": {
              "tooltip": "域定义"
            }
          },
          "type": "Select"
        }
      },
      "字段类型": {
        "edit": {
          "type": "Select",
          "props": {
            "xProps": {
              "$remote": {
                "query": {
                  "label": "name",
                  "value": "id",
                  "model": "ddic.model.column.type"
                },
                "process": "yao.component.SelectOptions"
              }
            },
            "itemProps": {
              "tooltip": "字段类型定义"
            }
          }
        },
        "bind": "field_type_id",
        "view": {
          "type": "Tag",
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "value": "id",
                  "model": "ddic.model.column.type",
                  "label": "name"
                }
              }
            }
          }
        }
      },
      "字段位数(含小数位)": {
        "edit": {
          "bind": "precision",
          "props": {
            "itemProps": {
              "tooltip": "字段位数(含小数位)，对 `float`、`decimal` 等类型字段有效"
            }
          },
          "type": "InputNumber"
        },
        "bind": "precision",
        "view": {
          "props": {},
          "type": "Text"
        }
      },
      "字段小数位位数": {
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "type": "InputNumber",
          "bind": "scale",
          "props": {
            "itemProps": {
              "tooltip": "字段小数位位数，对 `float`、`decimal` 等类型字段有效"
            }
          }
        },
        "bind": "scale"
      },
      "字段默认值": {
        "view": {
          "props": {},
          "type": "Text"
        },
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "string|number|float|字段默认值"
            }
          },
          "type": "Input",
          "bind": "default"
        },
        "bind": "default"
      },
      "字段许可值": {
        "edit": {
          "props": {
            "height": 200,
            "language": "json",
            "itemProps": {
              "tooltip": "字段许可值，对 `enum` 类型字段有效"
            }
          },
          "type": "TextArea"
        },
        "view": {
          "type": "Tooltip",
          "props": {}
        },
        "bind": "option"
      },
      "描述": {
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "bind": "name",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ]
            }
          },
          "type": "Input"
        },
        "bind": "name"
      },
      "字段长度": {
        "bind": "length",
        "view": {
          "props": {},
          "type": "Text"
        },
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "字段长度，对 `string` 等类型字段有效"
            }
          },
          "type": "InputNumber",
          "bind": "length"
        }
      },
      "是否为空": {
        "bind": "nullable",
        "view": {
          "props": {
            "unCheckedChildren": "否",
            "unCheckedValue": 0,
            "checkedChildren": "是",
            "checkedValue": 1
          },
          "type": "Switch"
        }
      },
      "加密方式": {
        "edit": {
          "props": {
            "options": [
              {
                "label": "::PASSWORD",
                "value": "PASSWORD"
              },
              {
                "value": "AES",
                "label": "::AES"
              }
            ],
            "placeholder": "请选择加密方式",
            "itemProps": {
              "tooltip": "字段加密存储方式。许可值 `AES(MySQL Only)`, `PASSWORD`"
            }
          },
          "type": "Select"
        },
        "view": {
          "props": {
            "options": [
              {
                "label": "::PASSWORD",
                "value": "PASSWORD"
              },
              {
                "label": "::AES",
                "value": "AES"
              }
            ],
            "placeholder": "请选择加密方式"
          },
          "type": "Tag"
        },
        "bind": "crypt"
      }
    }
  }
}