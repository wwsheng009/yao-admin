{
  "name": "::Data Element",
  "action": {
    "bind": {
      "option": {
        "withs": {
          "domain": {}
        },
        "option": {
          "form": "ddic.element"
        }
      },
      "model": "ddic.element"
    }
  },
  "layout": {
    "primary": "id",
    "header": {
      "preset": {},
      "actions": []
    },
    "filter": {
      "columns": [
        {
          "name": "域",
          "width": 4
        },
        {
          "name": "名称",
          "width": 4
        },
        {
          "width": 4,
          "name": "字段标题"
        }
      ],
      "actions": [
        {
          "width": 3,
          "action": [
            {
              "name": "OpenModal",
              "type": "Common.openModal",
              "payload": {
                "Form": {
                  "type": "edit",
                  "model": "ddic.element"
                }
              }
            }
          ],
          "title": "添加",
          "icon": "icon-plus"
        }
      ]
    },
    "table": {
      "columns": [
        {
          "name": "域",
          "width": 160
        },
        {
          "name": "名称",
          "width": 160
        },
        {
          "name": "字段标题",
          "width": 160
        },
        {
          "name": "字段介绍",
          "width": 160
        },
        {
          "name": "字段长度",
          "width": 160
        },
        {
          "name": "字段位数(含小数位)",
          "width": 250
        },
        {
          "name": "字段小数位位数",
          "width": 250
        },
        {
          "width": 160,
          "name": "是否为空"
        },
        {
          "name": "字段默认值",
          "width": 160
        },
        {
          "name": "加密方式",
          "width": 160
        },
        {
          "name": "字段注释",
          "width": 160
        },
        {
          "name": "字段许可值",
          "width": 160
        },
        {
          "name": "字段校验规则",
          "width": 250
        }
      ],
      "operation": {
        "fold": false,
        "actions": [
          {
            "title": "查看",
            "icon": "icon-eye",
            "action": [
              {
                "payload": {
                  "Form": {
                    "model": "ddic.element",
                    "type": "view"
                  }
                },
                "name": "OpenModal",
                "type": "Common.openModal"
              }
            ]
          },
          {
            "title": "编辑",
            "icon": "icon-edit-2",
            "action": [
              {
                "name": "OpenModal",
                "type": "Common.openModal",
                "payload": {
                  "Form": {
                    "type": "edit",
                    "model": "ddic.element"
                  }
                }
              }
            ]
          },
          {
            "title": "删除",
            "icon": "icon-trash-2",
            "action": [
              {
                "name": "Confirm",
                "type": "Common.confirm",
                "payload": {
                  "title": "确认删除",
                  "content": "删除后不可撤销！"
                }
              },
              {
                "name": "Delete",
                "type": "Table.delete",
                "payload": {
                  "model": "ddic.element"
                }
              }
            ]
          }
        ]
      }
    }
  },
  "fields": {
    "filter": {
      "域": {
        "bind": "where.domain_id.in",
        "edit": {
          "type": "Select",
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "value": "id",
                  "model": "ddic.domain",
                  "label": "name"
                }
              }
            }
          }
        }
      },
      "名称": {
        "bind": "where.name.match",
        "edit": {
          "type": "Input",
          "compute": "Trim",
          "props": {
            "placeholder": "请输入名称"
          }
        }
      },
      "字段标题": {
        "bind": "where.title.match",
        "edit": {
          "compute": "Trim",
          "props": {
            "placeholder": "请输入字段标题"
          },
          "type": "Input"
        }
      }
    },
    "table": {
      "标识": {
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "标识"
            }
          },
          "type": "Input",
          "bind": "id"
        },
        "bind": "id",
        "view": {
          "type": "Text",
          "props": {}
        }
      },
      "域": {
        "view": {
          "type": "Tag",
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "value": "id",
                  "model": "ddic.domain",
                  "label": "name"
                }
              }
            }
          }
        },
        "edit": {
          "props": {
            "xProps": {
              "$remote": {
                "query": {
                  "label": "name",
                  "value": "id",
                  "model": "ddic.domain"
                },
                "process": "yao.component.SelectOptions"
              }
            },
            "itemProps": {
              "tooltip": "域定义"
            },
            "defaultValue": 0
          },
          "type": "Select"
        },
        "bind": "domain_id"
      },
      "字段标题": {
        "edit": {
          "type": "Input",
          "bind": "title",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "字段标题"
            }
          }
        },
        "bind": "title",
        "view": {
          "type": "Text",
          "props": {}
        }
      },
      "字段长度": {
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "字段长度，对 `string` 等类型字段有效"
            }
          },
          "type": "InputNumber",
          "bind": "length"
        },
        "bind": "length"
      },
      "字段位数(含小数位)": {
        "bind": "precision",
        "view": {
          "props": {},
          "type": "Text"
        },
        "edit": {
          "bind": "precision",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "字段位数(含小数位)，对 `float`、`decimal` 等类型字段有效"
            }
          },
          "type": "InputNumber"
        }
      },
      "字段小数位位数": {
        "bind": "scale",
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "bind": "scale",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "字段小数位位数，对 `float`、`decimal` 等类型字段有效"
            }
          },
          "type": "InputNumber"
        }
      },
      "字段校验规则": {
        "edit": {
          "type": "TextArea",
          "props": {
            "language": "json",
            "height": 200,
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "字段校验规则"
            }
          }
        },
        "view": {
          "props": {},
          "type": "Tooltip"
        },
        "bind": "validations"
      },
      "名称": {
        "bind": "name",
        "view": {
          "props": {},
          "type": "Text"
        },
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ]
            }
          },
          "type": "Input",
          "bind": "name"
        }
      },
      "字段介绍": {
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "type": "Input",
          "bind": "description",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "字段介绍"
            }
          }
        },
        "bind": "description"
      },
      "是否为空": {
        "bind": "nullable",
        "view": {
          "type": "Switch",
          "props": {
            "checkedValue": 1,
            "unCheckedChildren": "否",
            "unCheckedValue": 0,
            "checkedChildren": "是"
          }
        }
      },
      "字段默认值": {
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "string|number|float|字段默认值"
            }
          },
          "type": "Input",
          "bind": "default"
        },
        "bind": "default"
      },
      "加密方式": {
        "view": {
          "type": "Tag",
          "props": {
            "placeholder": "请选择加密方式",
            "options": [
              {
                "value": "PASSWORD",
                "label": "::PASSWORD"
              },
              {
                "value": "AES",
                "label": "::AES"
              }
            ]
          }
        },
        "bind": "crypt",
        "edit": {
          "props": {
            "placeholder": "请选择加密方式",
            "options": [
              {
                "label": "::PASSWORD",
                "value": "PASSWORD"
              },
              {
                "value": "AES",
                "label": "::AES"
              }
            ],
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "字段加密存储方式。许可值 `AES(MySQL Only)`, `PASSWORD`"
            }
          },
          "type": "Select"
        }
      },
      "字段注释": {
        "edit": {
          "type": "TextArea",
          "bind": "comment",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "字段注释"
            }
          }
        },
        "bind": "comment",
        "view": {
          "props": {},
          "type": "Text"
        }
      },
      "字段许可值": {
        "edit": {
          "props": {
            "language": "json",
            "height": 200,
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "字段许可值，对 `enum` 类型字段有效"
            }
          },
          "type": "TextArea"
        },
        "view": {
          "props": {},
          "type": "Tooltip"
        },
        "bind": "option"
      }
    }
  }
}