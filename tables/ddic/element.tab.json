{
  "layout": {
    "filter": {
      "actions": [
        {
          "width": 3,
          "action": [
            {
              "type": "Common.openModal",
              "payload": {
                "Form": {
                  "model": "ddic.element",
                  "type": "edit"
                }
              },
              "name": "OpenModal"
            }
          ],
          "title": "添加",
          "icon": "icon-plus"
        }
      ],
      "columns": [
        {
          "name": "描述",
          "width": 4
        },
        {
          "width": 4,
          "name": "域"
        }
      ]
    },
    "table": {
      "operation": {
        "actions": [
          {
            "title": "查看",
            "icon": "icon-eye",
            "action": [
              {
                "type": "Common.openModal",
                "payload": {
                  "Form": {
                    "model": "ddic.element",
                    "type": "view"
                  }
                },
                "name": "OpenModal"
              }
            ]
          },
          {
            "title": "编辑",
            "icon": "icon-edit-2",
            "action": [
              {
                "payload": {
                  "Form": {
                    "model": "ddic.element",
                    "type": "edit"
                  }
                },
                "name": "OpenModal",
                "type": "Common.openModal"
              }
            ]
          },
          {
            "icon": "icon-trash-2",
            "action": [
              {
                "name": "Confirm",
                "type": "Common.confirm",
                "payload": {
                  "title": "确认删除",
                  "content": "删除后不可撤销！"
                }
              },
              {
                "type": "Table.delete",
                "payload": {
                  "model": "ddic.element"
                },
                "name": "Delete"
              }
            ],
            "title": "删除"
          }
        ],
        "fold": false
      },
      "columns": [
        {
          "name": "标识",
          "width": 160
        },
        {
          "name": "描述",
          "width": 160
        },
        {
          "name": "域",
          "width": 160
        },
        {
          "width": 160,
          "name": "字段类型"
        },
        {
          "name": "字段长度",
          "width": 160
        },
        {
          "name": "字段位数(含小数位)",
          "width": 250
        },
        {
          "name": "字段小数位位数",
          "width": 250
        }
      ]
    },
    "primary": "id",
    "header": {
      "preset": {},
      "actions": []
    }
  },
  "fields": {
    "filter": {
      "域": {
        "bind": "where.domain_id.in",
        "edit": {
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "model": "ddic.domain",
                  "label": "name",
                  "value": "id"
                }
              }
            }
          },
          "type": "Select"
        }
      },
      "描述": {
        "edit": {
          "props": {
            "placeholder": "请输入描述"
          },
          "type": "Input",
          "compute": "Trim"
        },
        "bind": "where.name.match"
      }
    },
    "table": {
      "字段小数位位数": {
        "edit": {
          "bind": "scale",
          "props": {
            "itemProps": {
              "tooltip": "字段小数位位数，对 `float`、`decimal` 等类型字段有效"
            }
          },
          "type": "InputNumber"
        },
        "bind": "scale",
        "view": {
          "props": {},
          "type": "Text"
        }
      },
      "校验规则": {
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "字段校验规则"
            }
          },
          "type": "TextArea"
        },
        "bind": "validations",
        "view": {
          "props": {},
          "type": "Tooltip"
        }
      },
      "标识": {
        "edit": {
          "type": "Input",
          "bind": "id",
          "props": {
            "itemProps": {
              "tooltip": "标识"
            }
          }
        },
        "bind": "id",
        "view": {
          "type": "Text",
          "props": {}
        }
      },
      "描述": {
        "bind": "name",
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "bind": "name",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "type": "string",
                  "max": 80,
                  "required": true,
                  "min": 2
                }
              ]
            }
          },
          "type": "Input"
        }
      },
      "域": {
        "view": {
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "model": "ddic.domain",
                  "label": "name",
                  "value": "id"
                }
              }
            }
          },
          "type": "Tag"
        },
        "edit": {
          "type": "Select",
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "label": "name",
                  "value": "id",
                  "model": "ddic.domain"
                }
              }
            },
            "itemProps": {
              "tooltip": "域定义"
            }
          }
        },
        "bind": "domain_id"
      },
      "字段类型": {
        "view": {
          "type": "Tag",
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "model": "ddic.model.column.type",
                  "label": "name",
                  "value": "type"
                }
              }
            }
          }
        },
        "edit": {
          "props": {
            "xProps": {
              "$remote": {
                "query": {
                  "model": "ddic.model.column.type",
                  "label": "name",
                  "value": "type"
                },
                "process": "yao.component.SelectOptions"
              }
            },
            "itemProps": {
              "tooltip": "字段类型定义"
            }
          },
          "type": "Select",
          "bind": "type"
        },
        "bind": "type"
      },
      "字段长度": {
        "edit": {
          "type": "InputNumber",
          "bind": "length",
          "props": {
            "itemProps": {
              "tooltip": "字段长度，对 `string` 等类型字段有效"
            }
          }
        },
        "bind": "length",
        "view": {
          "props": {},
          "type": "Text"
        }
      },
      "字段位数(含小数位)": {
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "字段位数(含小数位)，对 `float`、`decimal` 等类型字段有效"
            }
          },
          "type": "InputNumber",
          "bind": "precision"
        },
        "bind": "precision"
      }
    }
  },
  "name": "::Data Element",
  "action": {
    "bind": {
      "option": {
        "withs": {
          "domain": {}
        },
        "option": {
          "form": "ddic.element"
        }
      },
      "model": "ddic.element"
    }
  }
}