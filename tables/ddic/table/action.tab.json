{
  "name": "::Table Action",
  "action": {
    "bind": {
      "option": {
        "option": {
          "form": "ddic.table.action"
        },
        "withs": {
          "form": {}
        }
      },
      "model": "ddic.table.action"
    }
  },
  "layout": {
    "primary": "id",
    "header": {
      "preset": {},
      "actions": []
    },
    "filter": {
      "actions": [
        {
          "action": [
            {
              "payload": {
                "Form": {
                  "type": "edit",
                  "model": "ddic.table.action"
                }
              },
              "name": "OpenModal",
              "type": "Common.openModal"
            }
          ],
          "title": "添加",
          "icon": "icon-plus",
          "width": 3
        }
      ],
      "columns": [
        {
          "name": "所属表格",
          "width": 4
        },
        {
          "name": "标题",
          "width": 4
        }
      ]
    },
    "table": {
      "columns": [
        {
          "name": "ID",
          "width": 160
        },
        {
          "width": 160,
          "name": "所属表格"
        },
        {
          "name": "标题",
          "width": 160
        },
        {
          "name": "图标",
          "width": 160
        },
        {
          "name": "样式",
          "width": 160
        },
        {
          "width": 160,
          "name": "修改时显示"
        },
        {
          "name": "查看时显示",
          "width": 160
        }
      ],
      "operation": {
        "fold": false,
        "actions": [
          {
            "title": "查看",
            "icon": "icon-eye",
            "action": [
              {
                "payload": {
                  "Form": {
                    "model": "ddic.table.action",
                    "type": "view"
                  }
                },
                "name": "OpenModal",
                "type": "Common.openModal"
              }
            ]
          },
          {
            "title": "编辑",
            "icon": "icon-edit-2",
            "action": [
              {
                "type": "Common.openModal",
                "payload": {
                  "Form": {
                    "type": "edit",
                    "model": "ddic.table.action"
                  }
                },
                "name": "OpenModal"
              }
            ]
          },
          {
            "icon": "icon-trash-2",
            "action": [
              {
                "type": "Common.confirm",
                "payload": {
                  "title": "确认删除",
                  "content": "删除后不可撤销！"
                },
                "name": "Confirm"
              },
              {
                "payload": {
                  "model": "ddic.table.action"
                },
                "name": "Delete",
                "type": "Table.delete"
              }
            ],
            "title": "删除"
          }
        ]
      }
    }
  },
  "fields": {
    "filter": {
      "标题": {
        "bind": "where.title.match",
        "edit": {
          "type": "Input",
          "compute": "Trim",
          "props": {
            "placeholder": "请输入标题"
          }
        }
      },
      "所属表格": {
        "edit": {
          "props": {
            "xProps": {
              "$remote": {
                "query": {
                  "label": "name",
                  "value": "id",
                  "model": "ddic.form"
                },
                "process": "yao.component.SelectOptions"
              }
            }
          },
          "type": "Select"
        },
        "bind": "where.table_id.in"
      }
    },
    "table": {
      "ID": {
        "edit": {
          "type": "Input",
          "bind": "id",
          "props": {
            "itemProps": {
              "tooltip": "表名"
            }
          }
        },
        "bind": "id",
        "view": {
          "props": {},
          "type": "Text"
        }
      },
      "所属表格": {
        "view": {
          "type": "Tag",
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "value": "id",
                  "model": "ddic.form",
                  "label": "name"
                }
              }
            }
          }
        },
        "edit": {
          "type": "Select",
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "label": "name",
                  "value": "id",
                  "model": "ddic.form"
                }
              }
            },
            "itemProps": {
              "tooltip": "字段所属的表格"
            }
          }
        },
        "bind": "table_id"
      },
      "标题": {
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "bind": "title",
          "props": {
            "itemProps": {
              "tooltip": "标题"
            }
          },
          "type": "Input"
        },
        "bind": "title"
      },
      "图标": {
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "图标"
            }
          },
          "type": "Input",
          "bind": "icon"
        },
        "bind": "icon"
      },
      "样式": {
        "bind": "style",
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "bind": "style",
          "props": {
            "itemProps": {
              "tooltip": "按钮样式"
            }
          },
          "type": "Input"
        }
      },
      "修改时显示": {
        "bind": "showWhenAdd",
        "view": {
          "props": {
            "unCheckedChildren": "否",
            "unCheckedValue": 0,
            "checkedChildren": "是",
            "checkedValue": 1
          },
          "type": "Switch"
        }
      },
      "查看时显示": {
        "bind": "showWhenView",
        "view": {
          "props": {
            "checkedChildren": "是",
            "checkedValue": 1,
            "unCheckedChildren": "否",
            "unCheckedValue": 0
          },
          "type": "Switch"
        }
      },
      "操作": {
        "edit": {
          "type": "TextArea",
          "props": {
            "itemProps": {
              "tooltip": "Action列表"
            }
          }
        },
        "bind": "action",
        "view": {
          "type": "Tooltip",
          "props": {}
        }
      }
    }
  }
}