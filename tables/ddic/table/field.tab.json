{
  "name": "::Table Field",
  "action": {
    "bind": {
      "model": "ddic.table.field",
      "option": {
        "option": {
          "form": "ddic.table.field"
        },
        "withs": {
          "table": {}
        }
      }
    }
  },
  "layout": {
    "primary": "id",
    "header": {
      "preset": {},
      "actions": []
    },
    "filter": {
      "actions": [
        {
          "title": "添加",
          "icon": "icon-plus",
          "width": 3,
          "action": [
            {
              "name": "OpenModal",
              "type": "Common.openModal",
              "payload": {
                "Form": {
                  "type": "edit",
                  "model": "ddic.table.field"
                }
              }
            }
          ]
        }
      ],
      "columns": [
        {
          "name": "表格标识",
          "width": 4
        },
        {
          "name": "名称",
          "width": 4
        }
      ]
    },
    "table": {
      "columns": [
        {
          "name": "ID",
          "width": 160
        },
        {
          "name": "表格标识",
          "width": 160
        },
        {
          "name": "名称",
          "width": 160
        },
        {
          "name": "绑定字段",
          "width": 160
        },
        {
          "name": "编辑类型",
          "width": 160
        },
        {
          "width": 160,
          "name": "查看类型"
        },
        {
          "name": "显示长度",
          "width": 160
        },
        {
          "name": "是否必输",
          "width": 160
        },
        {
          "name": "默认值",
          "width": 160
        },
        {
          "width": 160,
          "name": "启用"
        },
        {
          "width": 160,
          "name": "是否显示"
        },
        {
          "name": "是否编辑",
          "width": 160
        }
      ],
      "operation": {
        "actions": [
          {
            "action": [
              {
                "type": "Common.openModal",
                "payload": {
                  "Form": {
                    "model": "ddic.table.field",
                    "type": "view"
                  }
                },
                "name": "OpenModal"
              }
            ],
            "title": "查看",
            "icon": "icon-eye"
          },
          {
            "title": "编辑",
            "icon": "icon-edit-2",
            "action": [
              {
                "type": "Common.openModal",
                "payload": {
                  "Form": {
                    "type": "edit",
                    "model": "ddic.table.field"
                  }
                },
                "name": "OpenModal"
              }
            ]
          },
          {
            "title": "删除",
            "icon": "icon-trash-2",
            "action": [
              {
                "name": "Confirm",
                "type": "Common.confirm",
                "payload": {
                  "title": "确认删除",
                  "content": "删除后不可撤销！"
                }
              },
              {
                "name": "Delete",
                "type": "Table.delete",
                "payload": {
                  "model": "ddic.table.field"
                }
              }
            ]
          }
        ],
        "fold": false
      }
    }
  },
  "fields": {
    "filter": {
      "表格标识": {
        "edit": {
          "props": {
            "xProps": {
              "$remote": {
                "query": {
                  "value": "id",
                  "model": "ddic.table",
                  "label": "name"
                },
                "process": "yao.component.SelectOptions"
              }
            }
          },
          "type": "Select"
        },
        "bind": "where.table_id.in"
      },
      "名称": {
        "bind": "where.name.match",
        "edit": {
          "props": {
            "placeholder": "请输入名称"
          },
          "type": "Input",
          "compute": "Trim"
        }
      }
    },
    "table": {
      "查看属性": {
        "view": {
          "type": "Tooltip",
          "props": {}
        },
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "查看控件属性"
            }
          },
          "type": "TextArea"
        },
        "bind": "view_props"
      },
      "编辑类型": {
        "edit": {
          "bind": "edit_type",
          "props": {
            "itemProps": {
              "tooltip": "编辑控件类型"
            }
          },
          "type": "Input"
        },
        "bind": "edit_type",
        "view": {
          "props": {},
          "type": "Text"
        }
      },
      "启用": {
        "view": {
          "type": "Switch",
          "props": {
            "unCheckedChildren": "否",
            "unCheckedValue": 0,
            "checkedChildren": "是",
            "checkedValue": 1
          }
        },
        "bind": "enable"
      },
      "是否编辑": {
        "bind": "is_edit",
        "view": {
          "type": "Switch",
          "props": {
            "checkedValue": 1,
            "unCheckedChildren": "否",
            "unCheckedValue": 0,
            "checkedChildren": "是"
          }
        }
      },
      "选项": {
        "view": {
          "props": {},
          "type": "Tooltip"
        },
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "字段许可值"
            }
          },
          "type": "TextArea"
        },
        "bind": "option"
      },
      "查看类型": {
        "edit": {
          "type": "Input",
          "bind": "view_type",
          "props": {
            "itemProps": {
              "tooltip": "查看控件类型"
            }
          }
        },
        "bind": "view_type",
        "view": {
          "type": "Text",
          "props": {}
        }
      },
      "是否显示": {
        "view": {
          "props": {
            "unCheckedChildren": "否",
            "unCheckedValue": 0,
            "checkedChildren": "是",
            "checkedValue": 1
          },
          "type": "Switch"
        },
        "bind": "is_dispaly"
      },
      "显示长度": {
        "bind": "width",
        "view": {
          "props": {},
          "type": "Text"
        },
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "字段显示长度"
            }
          },
          "type": "InputNumber",
          "bind": "width"
        }
      },
      "是否必输": {
        "view": {
          "type": "Switch",
          "props": {
            "unCheckedChildren": "否",
            "unCheckedValue": 0,
            "checkedChildren": "是",
            "checkedValue": 1
          }
        },
        "bind": "required"
      },
      "ID": {
        "view": {
          "props": {},
          "type": "Text"
        },
        "edit": {
          "bind": "id",
          "props": {
            "itemProps": {
              "tooltip": "表名"
            }
          },
          "type": "Input"
        },
        "bind": "id"
      },
      "表格标识": {
        "bind": "table_id",
        "view": {
          "type": "Tag",
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "value": "id",
                  "model": "ddic.table",
                  "label": "name"
                }
              }
            }
          }
        },
        "edit": {
          "type": "Select",
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "label": "name",
                  "value": "id",
                  "model": "ddic.table"
                }
              }
            },
            "itemProps": {
              "tooltip": "字段所属的表格"
            }
          }
        }
      },
      "默认值": {
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "type": "Input",
          "bind": "default",
          "props": {
            "itemProps": {
              "tooltip": "字段默认值"
            }
          }
        },
        "bind": "default"
      },
      "编辑属性": {
        "view": {
          "type": "Tooltip",
          "props": {}
        },
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "编辑控件属性"
            }
          },
          "type": "TextArea"
        },
        "bind": "edit_props"
      },
      "名称": {
        "bind": "name",
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "type": "Input",
          "bind": "name",
          "props": {
            "itemProps": {
              "tooltip": "字段名称"
            }
          }
        }
      },
      "绑定字段": {
        "edit": {
          "type": "Input",
          "bind": "bind",
          "props": {
            "itemProps": {
              "tooltip": "绑定的模型字段"
            }
          }
        },
        "bind": "bind",
        "view": {
          "type": "Text",
          "props": {}
        }
      }
    }
  }
}