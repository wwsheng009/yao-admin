{
  "name": "::Pet",
  "action": {
    "bind": {
      "model": "demo.pet",
      "option": {
        "withs": {},
        "option": {
          "form": "demo.pet"
        }
      }
    }
  },
  "layout": {
    "filter": {
      "columns": [
        {
          "name": "昵称",
          "width": 4
        }
      ],
      "actions": [
        {
          "title": "添加",
          "icon": "icon-plus",
          "width": 3,
          "action": [
            {
              "type": "Common.openModal",
              "payload": {
                "Form": {
                  "type": "edit",
                  "model": "demo.pet"
                }
              },
              "name": "OpenModal"
            }
          ]
        }
      ]
    },
    "table": {
      "columns": [
        {
          "width": 160,
          "name": "昵称"
        },
        {
          "name": "类型",
          "width": 160
        },
        {
          "name": "入院状态",
          "width": 160
        },
        {
          "name": "状态",
          "width": 160
        },
        {
          "name": "是否在线",
          "width": 160
        },
        {
          "name": "治疗状态",
          "width": 160
        },
        {
          "name": "入院时间",
          "width": 160
        },
        {
          "name": "花费",
          "width": 160
        }
      ],
      "operation": {
        "fold": false,
        "actions": [
          {
            "title": "查看",
            "icon": "icon-eye",
            "action": [
              {
                "payload": {
                  "Form": {
                    "model": "demo.pet",
                    "type": "view"
                  }
                },
                "name": "OpenModal",
                "type": "Common.openModal"
              }
            ]
          },
          {
            "title": "编辑",
            "icon": "icon-edit-2",
            "action": [
              {
                "name": "OpenModal",
                "type": "Common.openModal",
                "payload": {
                  "Form": {
                    "type": "edit",
                    "model": "demo.pet"
                  }
                }
              }
            ]
          },
          {
            "icon": "icon-trash-2",
            "action": [
              {
                "payload": {
                  "title": "确认删除",
                  "content": "删除后不可撤销！"
                },
                "name": "Confirm",
                "type": "Common.confirm"
              },
              {
                "payload": {
                  "model": "demo.pet"
                },
                "name": "Delete",
                "type": "Table.delete"
              }
            ],
            "title": "删除"
          }
        ]
      }
    },
    "primary": "id",
    "header": {
      "actions": [],
      "preset": {}
    }
  },
  "fields": {
    "filter": {
      "昵称": {
        "bind": "where.name.match",
        "edit": {
          "compute": "Trim",
          "props": {
            "placeholder": "请输入昵称"
          },
          "type": "Input"
        }
      }
    },
    "table": {
      "状态": {
        "bind": "mode",
        "edit": {
          "props": {
            "options": [
              {
                "value": "enabled",
                "label": "::enabled"
              },
              {
                "label": "::disabled",
                "value": "disabled"
              }
            ],
            "placeholder": "请选择状态",
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ]
            }
          },
          "type": "Select"
        },
        "view": {
          "type": "Tag",
          "props": {
            "options": [
              {
                "value": "enabled",
                "label": "::enabled"
              },
              {
                "value": "disabled",
                "label": "::disabled"
              }
            ],
            "placeholder": "请选择状态"
          }
        }
      },
      "是否在线": {
        "bind": "online",
        "view": {
          "type": "Switch",
          "props": {
            "unCheckedChildren": "否",
            "unCheckedValue": 0,
            "checkedChildren": "是",
            "checkedValue": 1
          }
        }
      },
      "花费": {
        "bind": "cost",
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "bind": "cost",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ]
            }
          },
          "type": "InputNumber"
        }
      },
      "相关图片": {
        "bind": "images",
        "view": {
          "props": {},
          "type": "Image",
          "compute": "scripts.file.image.ImagesView"
        },
        "edit": {
          "type": "Upload",
          "compute": "Upload",
          "props": {
            "$api": {
              "process": "fs.system.Upload"
            },
            "filetype": "image",
            "disabled": true
          }
        }
      },
      "治疗状态": {
        "view": {
          "type": "Tag",
          "props": {
            "options": [
              {
                "value": "0",
                "label": "::0"
              },
              {
                "label": "::1",
                "value": "1"
              },
              {
                "label": "::2",
                "value": "2"
              }
            ],
            "placeholder": "请选择治疗状态"
          }
        },
        "bind": "curing_status",
        "edit": {
          "props": {
            "placeholder": "请选择治疗状态",
            "options": [
              {
                "label": "::0",
                "value": "0"
              },
              {
                "value": "1",
                "label": "::1"
              },
              {
                "label": "::2",
                "value": "2"
              }
            ],
            "defaultValue": "0"
          },
          "type": "Select"
        }
      },
      "入院时间": {
        "edit": {
          "type": "InputNumber",
          "bind": "stay",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ]
            }
          }
        },
        "bind": "stay",
        "view": {
          "type": "Text",
          "props": {}
        }
      },
      "ID": {
        "bind": "id",
        "view": {
          "props": {},
          "type": "Text"
        },
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ]
            }
          },
          "type": "Input",
          "bind": "id"
        }
      },
      "昵称": {
        "bind": "name",
        "view": {
          "props": {},
          "type": "Text"
        },
        "edit": {
          "props": {},
          "type": "Input",
          "bind": "name"
        }
      },
      "类型": {
        "view": {
          "type": "Tag",
          "props": {
            "placeholder": "请选择类型",
            "options": [
              {
                "value": "cat",
                "label": "::cat"
              },
              {
                "label": "::dog",
                "value": "dog"
              },
              {
                "label": "::others",
                "value": "others"
              }
            ]
          }
        },
        "bind": "type",
        "edit": {
          "props": {
            "options": [
              {
                "value": "cat",
                "label": "::cat"
              },
              {
                "value": "dog",
                "label": "::dog"
              },
              {
                "label": "::others",
                "value": "others"
              }
            ],
            "placeholder": "请选择类型",
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ]
            }
          },
          "type": "Select"
        }
      },
      "入院状态": {
        "view": {
          "type": "Tag",
          "props": {
            "options": [
              {
                "value": "checked",
                "label": "::checked"
              },
              {
                "label": "::curing",
                "value": "curing"
              },
              {
                "label": "::cured",
                "value": "cured"
              }
            ],
            "placeholder": "请选择入院状态"
          }
        },
        "bind": "status",
        "edit": {
          "props": {
            "options": [
              {
                "value": "checked",
                "label": "::checked"
              },
              {
                "label": "::curing",
                "value": "curing"
              },
              {
                "value": "cured",
                "label": "::cured"
              }
            ],
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ]
            },
            "placeholder": "请选择入院状态"
          },
          "type": "Select"
        }
      }
    }
  }
}