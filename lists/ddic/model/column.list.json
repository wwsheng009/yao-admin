{
  "name": "::Model Column",
  "action": {
    "bind": {
      "table": "ddic.model.column"
    }
  },
  "layout": {
    "list": {
      "columns": [
        {
          "name": "名称",
          "width": 8
        },
        {
          "name": "域",
          "width": 8
        },
        {
          "name": "数据元素",
          "width": 8
        },
        {
          "name": "标签",
          "width": 8
        },
        {
          "name": "字段类型",
          "width": 8
        },
        {
          "name": "长度",
          "width": 8
        },
        {
          "name": "位数(含小数位)",
          "width": 8
        },
        {
          "name": "小数位",
          "width": 8
        },
        {
          "name": "是否空值",
          "width": 8
        },
        {
          "width": 8,
          "name": "默认值"
        },
        {
          "name": "加密方式",
          "width": 8
        },
        {
          "name": "索引",
          "width": 8
        },
        {
          "name": "唯一索引",
          "width": 8
        },
        {
          "name": "主键",
          "width": 8
        },
        {
          "name": "注释",
          "width": 8
        },
        {
          "name": "选项",
          "width": 24
        },
        {
          "name": "字段校验规则",
          "width": 24
        }
      ]
    }
  },
  "fields": {
    "list": {
      "索引": {
        "bind": "index",
        "edit": {
          "props": {
            "options": [
              {
                "label": "是",
                "value": 1
              },
              {
                "value": 0,
                "label": "否"
              }
            ],
            "itemProps": {
              "tooltip": "字段是否为索引，默认为 false"
            },
            "defaultValue": 0
          },
          "type": "RadioGroup"
        }
      },
      "注释": {
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "注释"
            }
          },
          "type": "Input"
        },
        "bind": "comment"
      },
      "字段校验规则": {
        "edit": {
          "type": "CodeEditor",
          "props": {
            "language": "json",
            "height": 200,
            "itemProps": {
              "tooltip": "字段校验规则"
            }
          }
        },
        "bind": "validations"
      },
      "数据元素": {
        "bind": "element_id",
        "edit": {
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "label": "name",
                  "value": "id",
                  "model": "ddic.element"
                }
              }
            },
            "itemProps": {
              "tooltip": "数据元素ID"
            }
          },
          "type": "Select"
        }
      },
      "小数位": {
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "字段小数位位数，对 `float`、`decimal` 等类型字段有效"
            }
          },
          "type": "InputNumber"
        },
        "bind": "scale"
      },
      "唯一索引": {
        "bind": "unique",
        "edit": {
          "type": "RadioGroup",
          "props": {
            "itemProps": {
              "tooltip": "字段是否为唯一索引，默认为 false , 如为 true 无需同时将 `index` 设置为 true"
            },
            "defaultValue": 0,
            "options": [
              {
                "value": 1,
                "label": "是"
              },
              {
                "label": "否",
                "value": 0
              }
            ]
          }
        }
      },
      "主键": {
        "bind": "primary",
        "edit": {
          "type": "RadioGroup",
          "props": {
            "options": [
              {
                "value": 1,
                "label": "是"
              },
              {
                "label": "否",
                "value": 0
              }
            ],
            "itemProps": {
              "tooltip": "字段是否为主键，每张表至多一个主键字段。默认为 false"
            },
            "defaultValue": 0
          }
        }
      },
      "名称": {
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "数据库表的字段名"
            }
          },
          "type": "Input"
        },
        "bind": "name"
      },
      "字段类型": {
        "bind": "column_type_id",
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "字段类型定义"
            },
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "model": "ddic.model.column.type",
                  "label": "name",
                  "value": "id"
                }
              }
            }
          },
          "type": "Select"
        }
      },
      "长度": {
        "bind": "length",
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "字段长度，对 `string` 等类型字段有效"
            }
          },
          "type": "InputNumber"
        }
      },
      "位数(含小数位)": {
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "字段位数(含小数位)，对 `float`、`decimal` 等类型字段有效"
            }
          },
          "type": "InputNumber"
        },
        "bind": "precision"
      },
      "是否空值": {
        "bind": "nullable",
        "edit": {
          "type": "RadioGroup",
          "props": {
            "options": [
              {
                "label": "是",
                "value": 1
              },
              {
                "value": 0,
                "label": "否"
              }
            ],
            "itemProps": {
              "tooltip": "是否空值，默认为 false"
            },
            "defaultValue": 0
          }
        }
      },
      "加密方式": {
        "bind": "crypt",
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "字段加密存储方式。许可值 `AES(MySQL Only)`, `PASSWORD`"
            },
            "placeholder": "请选择加密方式",
            "options": [
              {
                "label": "::PASSWORD",
                "value": "PASSWORD"
              },
              {
                "label": "::AES",
                "value": "AES"
              }
            ]
          },
          "type": "Select"
        }
      },
      "域": {
        "bind": "domain_id",
        "edit": {
          "type": "Select",
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "model": "ddic.domain",
                  "label": "name",
                  "value": "id"
                }
              }
            },
            "itemProps": {
              "tooltip": "域ID"
            }
          }
        }
      },
      "标签": {
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "字段显示名称，用于在管理表单，开发平台等成场景下呈现"
            }
          },
          "type": "Input"
        },
        "bind": "label"
      },
      "默认值": {
        "bind": "default",
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "string|number|float|字段默认值"
            }
          },
          "type": "Input"
        }
      },
      "选项": {
        "bind": "option",
        "edit": {
          "props": {
            "height": 200,
            "language": "json",
            "itemProps": {
              "tooltip": "字段许可值，对 `enum` 类型字段有效"
            }
          },
          "type": "CodeEditor"
        }
      }
    }
  }
}