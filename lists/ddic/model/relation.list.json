{
  "name": "::Model Relation",
  "action": {
    "bind": {
      "table": "ddic.model.relation"
    }
  },
  "layout": {
    "list": {
      "columns": [
        {
          "name": "模型",
          "width": 8
        },
        {
          "width": 8,
          "name": "名称"
        },
        {
          "name": "关联关系",
          "width": 8
        },
        {
          "name": "外键",
          "width": 8
        },
        {
          "name": "主键",
          "width": 8
        },
        {
          "name": "关联条件",
          "width": 24
        }
      ]
    }
  },
  "fields": {
    "list": {
      "外键": {
        "bind": "foreign",
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "外键"
            }
          }
        }
      },
      "主键": {
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "tooltip": "主键",
              "rules": [
                {
                  "required": true
                }
              ]
            }
          }
        },
        "bind": "key"
      },
      "关联条件": {
        "bind": "query",
        "edit": {
          "props": {
            "height": 200,
            "language": "json",
            "itemProps": {
              "tooltip": "关联条件"
            }
          },
          "compute": "scripts.ddic.compute.json.Edit",
          "type": "CodeEditor"
        }
      },
      "模型": {
        "edit": {
          "type": "Select",
          "props": {
            "itemProps": {
              "tooltip": "所属模型",
              "rules": [
                {
                  "required": true
                }
              ]
            },
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "value": "id",
                  "model": "ddic.model",
                  "label": "name"
                }
              }
            }
          }
        },
        "bind": "model_id"
      },
      "名称": {
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "定义关系名称"
            }
          },
          "type": "Input"
        },
        "bind": "name"
      },
      "关联关系": {
        "bind": "type",
        "edit": {
          "type": "Select",
          "props": {
            "options": [
              {
                "label": "::hasOne",
                "value": "hasOne"
              },
              {
                "label": "::hasMany",
                "value": "hasMany"
              }
            ],
            "placeholder": "请选择关联关系",
            "itemProps": {
              "tooltip": "与当前数据模型的关系类型. `hasOne` 一对一, `hasMany` 一对多。",
              "rules": [
                {
                  "required": true
                }
              ]
            }
          }
        }
      }
    }
  }
}