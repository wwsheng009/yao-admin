{
  "name": "::Model Relation",
  "action": {
    "bind": {
      "table": "ddic.model.relation"
    }
  },
  "layout": {
    "list": {
      "columns": [
        {
          "width": 8,
          "name": "名称"
        },
        {
          "name": "关联关系",
          "width": 8
        },
        {
          "name": "外键",
          "width": 8
        },
        {
          "name": "主键",
          "width": 8
        },
        {
          "name": "关联条件",
          "width": 24
        }
      ]
    }
  },
  "fields": {
    "list": {
      "名称": {
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "定义关系名称"
            }
          },
          "type": "Input"
        },
        "bind": "name"
      },
      "关联关系": {
        "bind": "type",
        "edit": {
          "type": "Select",
          "props": {
            "placeholder": "请选择关联关系",
            "options": [
              {
                "value": "hasOne",
                "label": "::hasOne"
              },
              {
                "label": "::hasMany",
                "value": "hasMany"
              }
            ],
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "与当前数据模型的关系类型. `hasOne` 一对一, `hasMany` 一对多。"
            }
          }
        }
      },
      "外键": {
        "bind": "foreign",
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "外键"
            }
          }
        }
      },
      "主键": {
        "bind": "key_id",
        "edit": {
          "type": "Select",
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "model": "ddic.model.column",
                  "label": "name",
                  "value": "id"
                }
              }
            },
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "主键"
            }
          }
        }
      },
      "关联条件": {
        "bind": "query",
        "edit": {
          "compute": "scripts.ddic.compute.json.Edit",
          "type": "CodeEditor",
          "props": {
            "height": 200,
            "itemProps": {
              "tooltip": "关联条件"
            },
            "language": "json"
          }
        }
      }
    }
  }
}