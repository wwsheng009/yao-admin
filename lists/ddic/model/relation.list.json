{
  "name": "::Model Relation",
  "action": {
    "bind": {
      "table": "ddic.model.relation"
    }
  },
  "layout": {
    "list": {
      "columns": [
        {
          "name": "名称",
          "width": 8
        },
        {
          "name": "关联关系",
          "width": 8
        },
        {
          "name": "外键",
          "width": 8
        },
        {
          "width": 8,
          "name": "主键"
        },
        {
          "name": "关联条件",
          "width": 24
        }
      ]
    }
  },
  "fields": {
    "list": {
      "名称": {
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "tooltip": "定义关系名称",
              "rules": [
                {
                  "required": true
                }
              ]
            }
          }
        },
        "bind": "name"
      },
      "关联关系": {
        "bind": "type",
        "edit": {
          "type": "Select",
          "props": {
            "placeholder": "请选择关联关系",
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "与当前数据模型的关系类型. `hasOne` 一对一, `hasMany` 一对多。"
            },
            "options": [
              {
                "label": "::hasOne",
                "value": "hasOne"
              },
              {
                "label": "::hasMany",
                "value": "hasMany"
              }
            ]
          }
        }
      },
      "外键": {
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "外键"
            }
          }
        },
        "bind": "foreign"
      },
      "主键": {
        "bind": "key",
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "主键"
            }
          }
        }
      },
      "关联条件": {
        "bind": "query",
        "edit": {
          "type": "CodeEditor",
          "props": {
            "height": 200,
            "itemProps": {
              "tooltip": "关联条件"
            },
            "language": "json"
          },
          "compute": "scripts.ddic.compute.json.Edit"
        }
      }
    }
  }
}