{
  "action": {
    "bind": {
      "table": "ddic.form.field"
    }
  },
  "layout": {
    "list": {
      "columns": [
        {
          "width": 6,
          "name": "名称"
        },
        {
          "name": "绑定字段",
          "width": 6
        },
        {
          "width": 6,
          "name": "编辑类型"
        },
        {
          "name": "查看类型",
          "width": 6
        },
        {
          "name": "描述",
          "width": 6
        },
        {
          "name": "显示长度",
          "width": 6
        },
        {
          "width": 6,
          "name": "是否必输"
        },
        {
          "name": "启用",
          "width": 6
        },
        {
          "name": "默认值",
          "width": 6
        },
        {
          "width": 6,
          "name": "是否显示"
        },
        {
          "width": 24,
          "name": "编辑属性"
        },
        {
          "name": "查看属性",
          "width": 24
        },
        {
          "name": "选项",
          "width": 24
        }
      ]
    }
  },
  "fields": {
    "list": {
      "显示长度": {
        "edit": {
          "type": "InputNumber",
          "props": {
            "itemProps": {
              "tooltip": "字段显示长度"
            }
          }
        },
        "bind": "width"
      },
      "启用": {
        "bind": "enable",
        "edit": {
          "type": "RadioGroup",
          "props": {
            "defaultValue": 1,
            "value": 1,
            "options": [
              {
                "value": 1,
                "label": "是"
              },
              {
                "value": 0,
                "label": "否"
              }
            ],
            "itemProps": {
              "tooltip": "启用"
            }
          }
        }
      },
      "默认值": {
        "bind": "default",
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "字段默认值"
            }
          },
          "type": "Input"
        }
      },
      "查看类型": {
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "查看控件类型"
            }
          },
          "type": "Input"
        },
        "bind": "view_type"
      },
      "描述": {
        "bind": "description",
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "tooltip": "字段介绍"
            }
          }
        }
      },
      "查看属性": {
        "bind": "view_props",
        "edit": {
          "type": "TextArea",
          "props": {
            "itemProps": {
              "tooltip": "查看控件属性"
            }
          }
        }
      },
      "是否显示": {
        "bind": "is_dispaly",
        "edit": {
          "type": "RadioGroup",
          "props": {
            "options": [
              {
                "value": 1,
                "label": "是"
              },
              {
                "label": "否",
                "value": 0
              }
            ],
            "itemProps": {
              "tooltip": "是否显示"
            },
            "defaultValue": 1,
            "value": 1
          }
        }
      },
      "编辑类型": {
        "bind": "edit_type",
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "编辑控件类型"
            }
          },
          "type": "Input"
        }
      },
      "是否必输": {
        "bind": "required",
        "edit": {
          "props": {
            "options": [
              {
                "value": 1,
                "label": "是"
              },
              {
                "label": "否",
                "value": 0
              }
            ],
            "itemProps": {
              "tooltip": "字段是否是否必输"
            },
            "defaultValue": 0,
            "value": 0
          },
          "type": "RadioGroup"
        }
      },
      "绑定字段": {
        "bind": "bind",
        "edit": {
          "props": {
            "itemProps": {
              "tooltip": "绑定的模型字段"
            }
          },
          "type": "Input"
        }
      },
      "编辑属性": {
        "edit": {
          "type": "TextArea",
          "props": {
            "itemProps": {
              "tooltip": "编辑控件属性"
            }
          }
        },
        "bind": "edit_props"
      },
      "选项": {
        "edit": {
          "type": "TextArea",
          "props": {
            "itemProps": {
              "tooltip": "字段许可值"
            }
          }
        },
        "bind": "option"
      },
      "名称": {
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "tooltip": "字段名称"
            }
          }
        },
        "bind": "name"
      }
    }
  },
  "name": "::Form Field"
}