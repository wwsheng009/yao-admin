{
  "name": "::Form Field",
  "action": {
    "bind": {
      "table": "ddic.form.field"
    }
  },
  "layout": {
    "list": {
      "columns": [
        {
          "name": "名称",
          "width": 8
        },
        {
          "width": 8,
          "name": "绑定字段"
        },
        {
          "name": "编辑类型",
          "width": 8
        },
        {
          "width": 8,
          "name": "查看类型"
        },
        {
          "name": "描述",
          "width": 8
        },
        {
          "name": "显示长度",
          "width": 8
        },
        {
          "name": "是否必输",
          "width": 8
        },
        {
          "name": "启用",
          "width": 8
        },
        {
          "name": "默认值",
          "width": 8
        },
        {
          "name": "是否显示",
          "width": 8
        },
        {
          "name": "编辑属性",
          "width": 24
        },
        {
          "name": "查看属性",
          "width": 24
        },
        {
          "name": "选项",
          "width": 24
        }
      ]
    }
  },
  "fields": {
    "list": {
      "查看类型": {
        "bind": "view_type",
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "tooltip": "查看控件类型",
              "rules": [
                {
                  "required": true
                }
              ]
            }
          }
        }
      },
      "描述": {
        "bind": "description",
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "tooltip": "字段介绍",
              "rules": [
                {
                  "required": true
                }
              ]
            }
          }
        }
      },
      "是否必输": {
        "bind": "required",
        "edit": {
          "type": "RadioGroup",
          "props": {
            "options": [
              {
                "label": "是",
                "value": 1
              },
              {
                "label": "否",
                "value": 0
              }
            ],
            "itemProps": {
              "tooltip": "字段是否是否必输"
            },
            "defaultValue": 0
          }
        }
      },
      "启用": {
        "bind": "enable",
        "edit": {
          "type": "RadioGroup",
          "props": {
            "options": [
              {
                "value": 1,
                "label": "是"
              },
              {
                "value": 0,
                "label": "否"
              }
            ],
            "itemProps": {
              "tooltip": "启用"
            },
            "defaultValue": 1
          }
        }
      },
      "是否显示": {
        "bind": "is_dispaly",
        "edit": {
          "type": "RadioGroup",
          "props": {
            "defaultValue": 1,
            "options": [
              {
                "label": "是",
                "value": 1
              },
              {
                "value": 0,
                "label": "否"
              }
            ],
            "itemProps": {
              "tooltip": "是否显示"
            }
          }
        }
      },
      "查看属性": {
        "edit": {
          "props": {
            "language": "json",
            "height": 200,
            "itemProps": {
              "tooltip": "查看控件属性",
              "rules": [
                {
                  "required": true
                }
              ]
            }
          },
          "type": "CodeEditor"
        },
        "bind": "view_props"
      },
      "编辑类型": {
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "编辑控件类型"
            }
          },
          "type": "Input"
        },
        "bind": "edit_type"
      },
      "绑定字段": {
        "bind": "bind",
        "edit": {
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "绑定的模型字段"
            }
          },
          "type": "Input"
        }
      },
      "显示长度": {
        "edit": {
          "type": "InputNumber",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "字段显示长度"
            }
          }
        },
        "bind": "width"
      },
      "默认值": {
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "字段默认值"
            }
          }
        },
        "bind": "default"
      },
      "编辑属性": {
        "edit": {
          "props": {
            "language": "json",
            "height": 200,
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "编辑控件属性"
            }
          },
          "type": "CodeEditor"
        },
        "bind": "edit_props"
      },
      "选项": {
        "edit": {
          "props": {
            "language": "json",
            "height": 200,
            "itemProps": {
              "tooltip": "字段许可值",
              "rules": [
                {
                  "required": true
                }
              ]
            }
          },
          "type": "CodeEditor"
        },
        "bind": "option"
      },
      "名称": {
        "bind": "name",
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "rules": [
                {
                  "required": true
                }
              ],
              "tooltip": "字段名称"
            }
          }
        }
      }
    }
  }
}