{
  "name": "::Options",
  "action": {
    "bind": {}
  },
  "layout": {
    "list": {
      "columns": [
        {
          "name": "标签",
          "width": 8
        },
        {
          "name": "值",
          "width": 8
        }
      ]
    }
  },
  "fields": {
    "list": {
      "ID": {
        "bind": "id",
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "tooltip": "id"
            }
          }
        }
      },
      "标签": {
        "bind": "label",
        "edit": {
          "type": "Input",
          "props": {
            "itemProps": {
              "tooltip": "主键",
              "rules": [
                {
                  "required": true
                }
              ]
            }
          }
        }
      },
      "值": {
        "bind": "value",
        "edit": {
          "type": "Input",
          "props": {
            "height": 200,
            "itemProps": {
              "tooltip": "关联条件",
              "rules": [
                {
                  "required": true
                }
              ]
            }
          }
        }
      }
    }
  }
}
